# Staging Environment Configuration
APP_ENV=staging

# Application Settings
# Use production-like secrets but can be different from prod
SECRET_KEY=staging-secret-key-change-this

# Database
# Staging database with moderate connection pooling
DATABASE_URL=postgresql+asyncpg://staging_user:staging_password@db.staging.com:5432/pydotorg_staging
DATABASE_POOL_SIZE=15
DATABASE_MAX_OVERFLOW=8

# Redis
REDIS_URL=redis://redis.staging.com:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Session
SESSION_SECRET_KEY=staging-session-secret-key-change-this
SESSION_EXPIRE_MINUTES=10080
SESSION_COOKIE_NAME=session_id

# CSRF Protection
CSRF_SECRET=staging-csrf-secret-change-this
CSRF_COOKIE_NAME=csrftoken
CSRF_HEADER_NAME=x-csrftoken

# OAuth (configure for staging environment)
GITHUB_CLIENT_ID=your-staging-github-client-id
GITHUB_CLIENT_SECRET=your-staging-github-client-secret
GOOGLE_CLIENT_ID=your-staging-google-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
OAUTH_REDIRECT_BASE_URL=https://staging.python.org

# SMTP Email Configuration (staging mail server)
SMTP_HOST=smtp.staging.python.org
SMTP_PORT=587
SMTP_USER=staging_mailer
SMTP_PASSWORD=staging_password
SMTP_FROM_EMAIL=noreply@staging.python.org
SMTP_FROM_NAME=Python.org Staging
SMTP_USE_TLS=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Fastly CDN (optional, may use staging CDN)
FASTLY_API_KEY=

# Python Blog Feed
PYTHON_BLOG_FEED_URL=https://blog.python.org/feeds/posts/default?alt=rss
PYTHON_BLOG_URL=https://blog.python.org

# Staging Features:
# - Debug mode disabled
# - NO auto-create of database tables (use migrations)
# - Some error details for debugging
# - CORS restricted to allowed hosts
# - Log level: INFO
# - Mirrors production behavior for testing
