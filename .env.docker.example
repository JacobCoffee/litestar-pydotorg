# Docker Compose Environment Configuration
# Copy this file to .env.docker for local development
# or .env.prod for production deployment

# Environment
APP_ENV=prod
DEBUG=false

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-postgres-password-change-me
POSTGRES_DB=pydotorg

# Application Secrets (MUST be changed in production!)
SECRET_KEY=production-secret-key-minimum-32-characters-long-change-me
SESSION_SECRET_KEY=production-session-secret-key-minimum-32-characters-change-me
CSRF_SECRET=production-csrf-secret-minimum-32-characters-change-me

# Database Configuration
DATABASE_POOL_SIZE=40
DATABASE_MAX_OVERFLOW=20

# Redis
# Constructed automatically: redis://redis:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Session
SESSION_EXPIRE_MINUTES=10080
SESSION_COOKIE_NAME=session_id

# CSRF Protection
CSRF_COOKIE_NAME=csrftoken
CSRF_HEADER_NAME=x-csrftoken

# OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_BASE_URL=https://www.python.org

# SMTP Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@python.org
SMTP_FROM_NAME=Python.org
SMTP_USE_TLS=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Fastly CDN (optional)
FASTLY_API_KEY=

# Python Blog Feed
PYTHON_BLOG_FEED_URL=https://blog.python.org/feeds/posts/default?alt=rss
PYTHON_BLOG_URL=https://blog.python.org

# Meilisearch (for full profile)
MEILI_MASTER_KEY=production-meilisearch-master-key-change-me

# Container Image Version (for production)
VERSION=latest
