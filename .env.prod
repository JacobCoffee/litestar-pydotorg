# Production Environment Configuration
# Copy to .env and fill in values

# ============================================================================
# REQUIRED - Must be set for production
# ============================================================================

# Set to: staging or prod
APP_ENV=prod

# Litestar CLI Configuration
LITESTAR_APP=pydotorg.main:app

# Application Settings
DEBUG=false
SECRET_KEY=  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"

# Database - Use strong credentials and SSL in production
DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/pydotorg
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis - Use authentication in production
REDIS_URL=redis://:password@redis-host:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440  # 24 hours

# Session - Use strong secret
SESSION_SECRET_KEY=  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SESSION_EXPIRE_MINUTES=1440  # 24 hours
SESSION_COOKIE_NAME=session_id

# CSRF Protection
CSRF_SECRET=  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
CSRF_COOKIE_NAME=csrftoken
CSRF_HEADER_NAME=x-csrftoken

# ============================================================================
# OPTIONAL - Configure as needed
# ============================================================================

# OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_BASE_URL=https://python.org

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@python.org
SMTP_FROM_NAME=Python.org
SMTP_USE_TLS=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Fastly CDN
FASTLY_API_KEY=

# Python Blog Feed
PYTHON_BLOG_FEED_URL=https://blog.python.org/feeds/posts/default?alt=rss
PYTHON_BLOG_URL=https://blog.python.org
