# Development Environment Configuration
APP_ENV=dev

# Application Settings
# In dev, debug is automatically enabled and detailed errors are shown
SECRET_KEY=dev-secret-key-not-for-production

# Database
# Auto-creates tables on startup in dev mode
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pydotorg
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Session
SESSION_SECRET_KEY=dev-session-secret-key
SESSION_EXPIRE_MINUTES=10080
SESSION_COOKIE_NAME=session_id

# CSRF Protection
CSRF_SECRET=dev-csrf-secret-key
CSRF_COOKIE_NAME=csrftoken
CSRF_HEADER_NAME=x-csrftoken

# OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_BASE_URL=http://localhost:8000

# SMTP Email Configuration (local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@python.org
SMTP_FROM_NAME=Python.org
SMTP_USE_TLS=false
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Fastly CDN (optional, not typically used in dev)
FASTLY_API_KEY=

# Python Blog Feed
PYTHON_BLOG_FEED_URL=https://blog.python.org/feeds/posts/default?alt=rss
PYTHON_BLOG_URL=https://blog.python.org

# Development Features:
# - Debug mode enabled
# - Auto-create database tables
# - Detailed error messages
# - CORS allows all origins
# - Log level: DEBUG
