# Production Environment Configuration
APP_ENV=prod

# Application Settings
# CRITICAL: Must change these secrets in production!
# Validation will fail if SECRET_KEY is still set to default value
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Database
# Production database with connection pooling
DATABASE_URL=postgresql+asyncpg://prod_user:secure_password@db.production.com:5432/pydotorg_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis.production.com:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Session
SESSION_SECRET_KEY=CHANGE_THIS_TO_A_DIFFERENT_SECURE_RANDOM_STRING
SESSION_EXPIRE_MINUTES=10080
SESSION_COOKIE_NAME=session_id

# CSRF Protection
CSRF_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
CSRF_COOKIE_NAME=csrftoken
CSRF_HEADER_NAME=x-csrftoken

# OAuth (production credentials)
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
OAUTH_REDIRECT_BASE_URL=https://python.org

# SMTP Email Configuration (production mail server)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@python.org
SMTP_FROM_NAME=Python.org
SMTP_USE_TLS=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Fastly CDN
FASTLY_API_KEY=your-fastly-api-key-here

# Python Blog Feed
PYTHON_BLOG_FEED_URL=https://blog.python.org/feeds/posts/default?alt=rss
PYTHON_BLOG_URL=https://blog.python.org

# Production Features:
# - Debug mode disabled
# - NO auto-create of database tables (use migrations)
# - Minimal error details (security)
# - CORS restricted to allowed hosts
# - Log level: WARNING
# - Secret key validation enforced
