{% extends "base.html.jinja2" %}
{% import "macros/buttons.html.jinja2" as buttons %}

{% block title %}Download Python for Windows | Python.org{% endblock %}

{% block meta_description %}Download the latest Python release for Windows. Official Python installers for Windows 10, 11, and Windows Server.{% endblock %}

{% block breadcrumbs %}
<div class="bg-base-200 py-4">
    <div class="section-container">
        <div class="text-sm breadcrumbs">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/downloads/">Downloads</a></li>
                <li>Windows</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<section class="bg-base-100 py-16">
    <div class="section-container">
        <div class="max-w-6xl mx-auto">
            <div class="flex items-start gap-8 mb-12">
                <div class="flex-1">
                    <h1 class="text-5xl font-bold text-python-blue mb-6">
                        Python for Windows
                    </h1>
                    {% if latest_release %}
                    <p class="text-xl text-base-content/70 mb-6">
                        Latest version: Python {{ latest_release.version }}
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4">
                        {{ buttons.download_button('Download Python ' + latest_release.version, '/downloads/release/' + latest_release.slug + '/', 'lg', 'Recommended for Windows') }}
                        <a href="/downloads/" class="btn btn-outline btn-lg">
                            View All Releases
                        </a>
                    </div>
                    {% endif %}
                </div>
                <div class="hidden lg:block">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 text-python-blue" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
                    </svg>
                </div>
            </div>

            <div class="card bg-base-200 mb-8">
                <div class="card-body">
                    <h2 class="card-title text-2xl text-python-blue mb-4">Installation Notes</h2>
                    <div class="prose max-w-none">
                        <p class="text-base-content/80">
                            The official Python installer for Windows includes IDLE, pip, and documentation.
                            We recommend using the executable installer for the best experience.
                        </p>

                        <div class="alert alert-info mt-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <h3 class="font-bold">Important Installation Tip</h3>
                                <div class="text-sm">
                                    Make sure to check the box that says "Add Python to PATH" during installation.
                                    This allows you to use Python from the command line.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-8">
                <h2 class="text-3xl font-bold text-python-blue mb-6">Installer Options</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="card bg-base-100 shadow-lg border-2 border-python-blue">
                        <div class="card-body">
                            <h3 class="card-title text-xl text-python-blue">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Recommended
                            </h3>
                            <div class="badge badge-primary mb-2">64-bit</div>
                            <p class="text-base-content/80">
                                For most modern Windows systems (Windows 10/11, 64-bit).
                                Includes all features and best performance.
                            </p>
                            {% if latest_release %}
                            <div class="card-actions justify-end mt-4">
                                <a href="/downloads/release/{{ latest_release.slug }}/" class="btn btn-primary gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                    </svg>
                                    Download 64-bit
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="card bg-base-100 shadow-lg">
                        <div class="card-body">
                            <h3 class="card-title text-xl text-python-blue">
                                Legacy Systems
                            </h3>
                            <div class="badge badge-outline mb-2">32-bit</div>
                            <p class="text-base-content/80">
                                For older Windows systems or compatibility with 32-bit applications.
                                Most users should use the 64-bit version.
                            </p>
                            {% if latest_release %}
                            <div class="card-actions justify-end mt-4">
                                <a href="/downloads/release/{{ latest_release.slug }}/" class="btn btn-outline gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                    </svg>
                                    Download 32-bit
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-8">
                <h2 class="text-3xl font-bold text-python-blue mb-6">Installation Steps</h2>

                <div class="card bg-base-200">
                    <div class="card-body">
                        <ol class="list-decimal list-inside space-y-3 text-base-content/80">
                            <li>Download the installer using the button above</li>
                            <li>Run the downloaded executable file</li>
                            <li><strong>Important:</strong> Check "Add Python to PATH" at the bottom of the installer</li>
                            <li>Click "Install Now" for the default installation</li>
                            <li>Wait for the installation to complete</li>
                            <li>Click "Close" when finished</li>
                        </ol>

                        <div class="divider"></div>

                        <h3 class="text-lg font-semibold text-python-blue mb-2">Verify Installation</h3>
                        <p class="text-base-content/80 mb-2">
                            Open Command Prompt or PowerShell and type:
                        </p>
                        <div class="mockup-code">
                            <pre data-prefix=">"><code>python --version</code></pre>
                        </div>
                        <p class="text-base-content/80 text-sm mt-2">
                            You should see the Python version number displayed.
                        </p>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                <div class="card bg-base-200">
                    <div class="card-body">
                        <h2 class="card-title text-xl text-python-blue mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                            </svg>
                            Documentation
                        </h2>
                        <div class="prose max-w-none">
                            <ul class="text-base-content/80 text-sm">
                                <li><a href="https://docs.python.org/3/using/windows.html" class="python-link">Using Python on Windows</a></li>
                                <li><a href="https://docs.python.org/3/faq/windows.html" class="python-link">Windows FAQ</a></li>
                                <li><a href="https://docs.python.org/3/tutorial/" class="python-link">Python Tutorial</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-200">
                    <div class="card-body">
                        <h2 class="card-title text-xl text-python-blue mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                            Alternative Options
                        </h2>
                        <div class="prose max-w-none">
                            <ul class="text-base-content/80 text-sm">
                                <li><a href="https://www.microsoft.com/store/productId/9PJPW5LDXLZ5" class="python-link">Microsoft Store</a> - Easy automatic updates</li>
                                <li><a href="https://www.anaconda.com/" class="python-link">Anaconda</a> - For data science</li>
                                <li><a href="https://chocolatey.org/packages/python" class="python-link">Chocolatey</a> - Package manager installation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-warning mb-8">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                    <h3 class="font-bold">System Requirements</h3>
                    <div class="text-sm">
                        Windows 7 or later is required for Python 3.9+.
                        For older Windows versions, use <a href="/downloads/" class="python-link">Python 3.8 or earlier</a>.
                    </div>
                </div>
            </div>

            <div class="mt-8">
                <a href="/downloads/" class="btn btn-outline">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Back to Downloads
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
