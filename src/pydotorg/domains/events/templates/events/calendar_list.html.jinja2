{% extends "base.html.jinja2" %}

{% block title %}Event Calendars - Python.org{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6">Event Calendars</h1>
            <p class="text-xl opacity-90">
                Browse Python event calendars by category and region
            </p>
        </div>
    </div>
</section>

<section class="bg-base-100 py-16">
    <div class="section-container">
        {% if calendars %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for item in calendars %}
            <article class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-xl">
                        <a href="/events/calendar/{{ item.calendar.slug }}/" class="python-link">
                            {{ item.calendar.name }}
                        </a>
                    </h2>

                    {% if item.calendar.description %}
                    <p class="text-base-content/70 line-clamp-3">
                        {{ item.calendar.description|striptags|truncate(150) }}
                    </p>
                    {% endif %}

                    <div class="card-actions justify-between items-center mt-4">
                        <div class="flex items-center gap-2 text-sm text-base-content/60">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>{{ item.event_count }} events</span>
                        </div>
                        <a href="/events/calendar/{{ item.calendar.slug }}/" class="btn btn-primary btn-sm">
                            View Events
                        </a>
                    </div>
                </div>
            </article>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="text-xl font-bold mb-2">No Calendars Found</h3>
            <p class="text-base-content/60 mb-4">
                No event calendars are available at the moment.
            </p>
            <a href="/events/" class="btn btn-primary">
                View All Events
            </a>
        </div>
        {% endif %}
    </div>
</section>

<section class="bg-base-200 py-12">
    <div class="section-container">
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-2xl font-bold text-python-blue mb-4">Host a Python Event</h2>
            <p class="text-base-content/80 mb-6">
                Are you organizing a Python conference, meetup, or workshop? Share it with the global Python community!
            </p>
            <a href="/events/submit/" class="btn btn-primary btn-lg gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Submit Your Event
            </a>
        </div>
    </div>
</section>
{% endblock %}
