{% extends "base.html.jinja2" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6">Community Updates</h1>
            <p class="text-xl opacity-90">
                News, announcements, and stories from the Python community
            </p>
        </div>
    </div>
</section>

<section class="bg-base-100 py-16">
    <div class="section-container">
        <div class="max-w-6xl mx-auto">
            {% if featured_posts %}
            <div class="mb-16">
                <h2 class="text-3xl font-bold text-python-blue mb-6">Featured</h2>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    {% for post in featured_posts[:2] %}
                    <article class="card bg-gradient-to-br from-python-blue/5 to-python-yellow/5 shadow-lg hover:shadow-xl transition-all duration-300 border border-python-blue/20">
                        {% if post.media_url %}
                        <figure>
                            <img src="{{ post.media_url }}" alt="{{ post.title }}" class="h-48 w-full object-cover" />
                        </figure>
                        {% endif %}
                        <div class="card-body">
                            <div class="flex items-center gap-2 mb-2">
                                <span class="badge badge-primary">Featured</span>
                                {% if post.created_at %}
                                <span class="text-sm text-base-content/60">
                                    {{ post.created_at.strftime('%B %d, %Y') }}
                                </span>
                                {% endif %}
                            </div>
                            <h3 class="card-title text-2xl hover:text-python-blue transition-colors">
                                <a href="/community/posts/{{ post.slug }}/" hx-boost="true">
                                    {{ post.title }}
                                </a>
                            </h3>
                            {% if post.content %}
                            <p class="text-base-content/80 line-clamp-3">
                                {{ post.content[:250] }}{% if post.content|length > 250 %}...{% endif %}
                            </p>
                            {% endif %}
                            <div class="card-actions justify-end mt-4">
                                <a href="/community/posts/{{ post.slug }}/"
                                   class="btn btn-primary group"
                                   hx-boost="true">
                                    Read Article
                                    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </article>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2">
                    <h2 class="text-3xl font-bold text-python-blue mb-6">All Updates</h2>

                    {% if posts %}
                    <div class="space-y-6" id="posts-list">
                        {% for post in posts %}
                        <article class="card bg-base-200 shadow-sm hover:shadow-md transition-all duration-300 border border-base-300">
                            <div class="card-body flex-row gap-6">
                                {% if post.media_url %}
                                <div class="hidden md:block flex-shrink-0">
                                    <img src="{{ post.media_url }}" alt="{{ post.title }}" class="w-32 h-24 object-cover rounded-lg" />
                                </div>
                                {% endif %}
                                <div class="flex-grow min-w-0">
                                    <div class="flex items-center gap-2 mb-2 text-sm text-base-content/60">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                        </svg>
                                        {% if post.created_at %}
                                        <time datetime="{{ post.created_at.isoformat() }}">
                                            {{ post.created_at.strftime('%B %d, %Y') }}
                                        </time>
                                        {% endif %}
                                    </div>
                                    <h3 class="card-title text-xl hover:text-python-blue transition-colors mb-2">
                                        <a href="/community/posts/{{ post.slug }}/" hx-boost="true" class="line-clamp-2">
                                            {{ post.title }}
                                        </a>
                                    </h3>
                                    {% if post.content %}
                                    <p class="text-base-content/70 line-clamp-2 text-sm">
                                        {{ post.content[:180] }}{% if post.content|length > 180 %}...{% endif %}
                                    </p>
                                    {% endif %}
                                </div>
                                <div class="flex-shrink-0 self-center hidden sm:block">
                                    <a href="/community/posts/{{ post.slug }}/"
                                       class="btn btn-ghost btn-sm"
                                       hx-boost="true">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </article>
                        {% endfor %}
                    </div>

                    {% if pagination and pagination.total > pagination.limit %}
                    {% set current_page = (pagination.offset // pagination.limit) + 1 %}
                    {% set total_pages = (pagination.total // pagination.limit) + (1 if pagination.total % pagination.limit else 0) %}
                    {% set last_offset = (total_pages - 1) * pagination.limit %}
                    <div class="flex justify-center mt-10">
                        <div class="join">
                            {% if pagination.offset > 0 %}
                            <a href="/community/posts/?offset=0&limit={{ pagination.limit }}"
                               class="join-item btn btn-sm"
                               hx-boost="true"
                               title="First page">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
                                </svg>
                            </a>
                            <a href="/community/posts/?offset={{ [0, pagination.offset - pagination.limit]|max }}&limit={{ pagination.limit }}"
                               class="join-item btn btn-sm"
                               hx-boost="true"
                               title="Previous page">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                            </a>
                            {% endif %}

                            <button class="join-item btn btn-sm btn-active">
                                Page {{ current_page }} of {{ total_pages }}
                            </button>

                            {% if pagination.offset + pagination.limit < pagination.total %}
                            <a href="/community/posts/?offset={{ pagination.offset + pagination.limit }}&limit={{ pagination.limit }}"
                               class="join-item btn btn-sm"
                               hx-boost="true"
                               title="Next page">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                            <a href="/community/posts/?offset={{ last_offset }}&limit={{ pagination.limit }}"
                               class="join-item btn btn-sm"
                               hx-boost="true"
                               title="Last page">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7m-8-14l7 7-7 7" />
                                </svg>
                            </a>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}

                    {% else %}
                    <div class="card bg-base-200 border border-base-300">
                        <div class="card-body text-center py-16">
                            <svg class="w-16 h-16 mx-auto text-base-content/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                            </svg>
                            <h3 class="text-xl font-bold mb-2">No Community Updates Yet</h3>
                            <p class="text-base-content/60">
                                Check back soon for news and announcements from the Python community.
                            </p>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <div class="lg:col-span-1">
                    <div class="sticky top-24 space-y-6">
                        <div class="card bg-base-200 border border-base-300">
                            <div class="card-body">
                                <h3 class="card-title text-lg">
                                    <svg class="w-5 h-5 text-python-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    About Community Updates
                                </h3>
                                <p class="text-base-content/70 text-sm">
                                    This section features news, announcements, and stories from the Python community.
                                    Stay informed about Python events, releases, and community initiatives.
                                </p>
                            </div>
                        </div>

                        <div class="card bg-gradient-to-br from-python-blue to-python-blue/80 text-white">
                            <div class="card-body">
                                <h3 class="card-title text-lg">Get Involved</h3>
                                <p class="text-white/80 text-sm mb-4">
                                    Want to contribute to the Python community? There are many ways to help!
                                </p>
                                <a href="/psf/get-involved/" class="btn btn-sm bg-white text-python-blue hover:bg-white/90 border-none" hx-boost="true">
                                    Learn How
                                </a>
                            </div>
                        </div>

                        <div class="card bg-base-200 border border-base-300">
                            <div class="card-body">
                                <h3 class="card-title text-lg">Quick Links</h3>
                                <ul class="menu p-0">
                                    <li>
                                        <a href="/community/" hx-boost="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                            </svg>
                                            Community Home
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/events/" hx-boost="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                            Python Events
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/blogs/" hx-boost="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/>
                                            </svg>
                                            Python Blogs
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/success-stories/" hx-boost="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                                            </svg>
                                            Success Stories
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
