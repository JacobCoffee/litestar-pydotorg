{% if posts %}
<section class="bg-base-200 py-16">
    <div class="section-container">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-4xl font-bold text-base-content mb-4">Community Updates</h2>
            <p class="text-lg text-base-content/70 mb-10">
                Latest news and announcements from the Python community.
            </p>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {% for post in posts %}
                <article class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 border border-base-300">
                    <div class="card-body">
                        <h3 class="card-title text-xl hover:text-python-blue transition-colors">
                            <a href="/community/posts/{{ post.slug }}/" hx-boost="true">
                                {{ post.title }}
                            </a>
                        </h3>
                        {% if post.created_at %}
                        <div class="flex items-center gap-2 text-sm text-base-content/60">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <time datetime="{{ post.created_at.isoformat() }}">
                                {{ post.created_at.strftime('%B %d, %Y') }}
                            </time>
                        </div>
                        {% endif %}
                        {% if post.content %}
                        <p class="text-base-content/80 line-clamp-3">
                            {{ post.content[:200] }}{% if post.content|length > 200 %}...{% endif %}
                        </p>
                        {% endif %}
                        <div class="card-actions justify-end mt-4">
                            <a href="/community/posts/{{ post.slug }}/"
                               class="btn btn-primary btn-sm group"
                               hx-boost="true">
                                Read More
                                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </a>
