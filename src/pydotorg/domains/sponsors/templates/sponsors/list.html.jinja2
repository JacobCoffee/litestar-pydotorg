{% extends "base.html.jinja2" %}
{% from "components/sections/sponsors_grid.html.jinja2" import sponsors_grid, sponsor_become_cta %}

{% block title %}{{ title }} - Python.org{% endblock %}

{% block meta_description %}{{ description }}{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6">{{ title }}</h1>
            <p class="text-xl opacity-90">
                {{ description }}
            </p>
            <p class="text-lg opacity-80 mt-4">
                The Python Software Foundation is grateful for the generous support of our sponsors. Their contributions help keep Python thriving.
            </p>
        </div>
    </div>
</section>

<section class="bg-base-100 py-16">
    <div class="section-container">
        {% if sponsors %}
            {% set sponsors_by_tier = sponsors | groupby('tier') %}
            {% set tier_order = ['platinum', 'gold', 'silver', 'bronze', 'community'] %}
            {% set tier_names = {
                'platinum': 'Platinum Sponsors',
                'gold': 'Gold Sponsors',
                'silver': 'Silver Sponsors',
                'bronze': 'Bronze Sponsors',
                'community': 'Community Sponsors'
            } %}

            {% for tier in tier_order %}
                {% set tier_sponsors = sponsors_by_tier | selectattr('0', 'equalto', tier) | list %}
                {% if tier_sponsors %}
                    {% set sponsor_list = tier_sponsors[0][1] %}
                    <div class="mb-16 last:mb-0">
                        <h2 class="text-3xl font-bold text-python-blue text-center mb-8">
                            {{ tier_names.get(tier, tier | title + ' Sponsors') }}
                        </h2>

                        <div class="grid grid-cols-2 {% if tier == 'platinum' %}md:grid-cols-2 lg:grid-cols-3{% elif tier == 'gold' %}md:grid-cols-3 lg:grid-cols-4{% else %}md:grid-cols-4 lg:grid-cols-6{% endif %} gap-8 items-center justify-items-center">
                            {% for sponsor in sponsor_list %}
                            <a href="/sponsors/{{ sponsor.slug }}"
                               class="flex items-center justify-center p-6 bg-base-200 rounded-lg hover:shadow-xl transition-shadow {% if tier == 'platinum' %}w-full max-w-sm{% elif tier == 'gold' %}w-48{% else %}w-32{% endif %}"
                               title="{{ sponsor.name }}">
                                {% if sponsor.web_logo %}
                                <img src="{{ sponsor.web_logo }}"
                                     alt="{{ sponsor.name }}"
                                     class="max-w-full h-auto filter grayscale hover:grayscale-0 transition-all"
                                     loading="lazy" />
                                {% else %}
                                <div class="text-center text-base-content/70 font-semibold">
                                    {{ sponsor.name }}
                                </div>
                                {% endif %}
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        {% else %}
            <div class="card bg-base-200 shadow-sm">
                <div class="card-body text-center py-12">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    <h3 class="text-xl font-bold mb-2">No Sponsors Yet</h3>
                    <p class="text-base-content/60 mb-4">
                        Be the first to support Python!
                    </p>
                    <a href="/sponsors/apply" class="btn btn-primary btn-sm">
                        Become a Sponsor
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</section>

{{ sponsor_become_cta(
    title="Support Python",
    description="Join our community of sponsors and help advance the Python programming language. Your support enables us to maintain infrastructure, fund development, and support the global Python community.",
    cta_url="/sponsors/apply",
    cta_text="Become a Sponsor"
) }}

<section class="bg-base-100 py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold text-python-blue text-center mb-8">Why Sponsor Python?</h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="card bg-base-200 shadow-sm">
                    <div class="card-body items-center text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-python-blue mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
