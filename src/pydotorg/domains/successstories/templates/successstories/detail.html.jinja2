{% extends "base.html.jinja2" %}
{% import "macros/text.html.jinja2" as text %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16 md:py-24">
    <div class="section-container">
        <nav class="breadcrumbs text-sm mb-8 opacity-90">
            <ul>
                <li><a href="/" class="hover:text-white">Home</a></li>
                <li><a href="/success-stories/" class="hover:text-white">Success Stories</a></li>
                <li class="opacity-70">{{ story.name }}</li>
            </ul>
        </nav>

        <div class="max-w-4xl">
            {% if story.category %}
            <div class="mb-4">
                <a href="/success-stories/category/{{ story.category.slug }}/"
                   class="badge badge-lg {{ text.category_badge_color(story.category.name) }} badge-outline border-white/30 text-white hover:bg-white/20 transition-colors">
                    {{ story.category.name }}
                </a>
            </div>
            {% endif %}

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 leading-tight">
                {{ story.name }}
            </h1>

            {% if story.company_name %}
            <p class="text-xl md:text-2xl opacity-90 font-light">
                {{ story.company_name }}
            </p>
            {% endif %}
        </div>
    </div>
</section>

<section class="bg-base-100 py-12 md:py-16">
    <div class="section-container">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
            <article class="lg:col-span-2 prose prose-lg max-w-none dark:prose-invert">
                {% if story.image %}
                <figure class="mb-8 -mt-4">
                    <img src="{{ story.image }}"
                         alt="{{ story.name }}"
                         class="rounded-xl w-full max-h-96 object-cover shadow-lg" />
                </figure>
                {% endif %}

                <div class="content-body">
                    {{ story.content | safe }}
                </div>
            </article>

            <aside class="lg:col-span-1">
                <div class="sticky top-24 space-y-6">
                    <div class="card bg-base-200 shadow-md">
                        <div class="card-body">
                            <h3 class="card-title text-lg mb-4">Company Info</h3>

                            {% if story.company_name %}
                            <div class="mb-3">
                                <p class="text-sm text-base-content/60 mb-1">Company</p>
                                <p class="font-semibold">{{ story.company_name }}</p>
                            </div>
                            {% endif %}

                            {% if story.category %}
                            <div class="mb-3">
                                <p class="text-sm text-base-content/60 mb-1">Category</p>
                                <a href="/success-stories/category/{{ story.category.slug }}/"
                                   class="badge {{ text.category_badge_color(story.category.name) }} badge-lg">
                                    {{ story.category.name }}
                                </a>
                            </div>
                            {% endif %}

                            {% if story.created_at %}
                            <div class="mb-3">
                                <p class="text-sm text-base-content/60 mb-1">Published</p>
                                <p class="text-sm">{{ story.created_at.strftime('%B %d, %Y') }}</p>
                            </div>
                            {% endif %}

                            {% if story.company_url %}
                            <div class="mt-6">
                                <a href="{{ story.company_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="btn btn-primary btn-block gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                    Visit Website
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="card bg-base-200 shadow-md">
                        <div class="card-body">
                            <h3 class="card-title text-lg mb-4">Share</h3>
                            <div class="flex gap-2">
                                <button class="btn btn-sm btn-circle btn-ghost"
                                        onclick="navigator.share ? navigator.share({title: '{{ story.name }}', url: window.location.href}) : navigator.clipboard.writeText(window.location.href)"
                                        title="Share this story">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>

{% if related_stories %}
<section class="bg-base-200 py-12 md:py-16">
    <div class="section-container">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-python-blue">Related Stories</h2>
            <a href="/success-stories/category/{{ story.category.slug }}/"
               class="btn btn-outline btn-sm gap-2"
               hx-boost="true">
                View All in {{ story.category.name }}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for related_story in related_stories %}
            <a href="/success-stories/{{ related_story.slug }}/"
               class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
               hx-boost="true">
                <div class="card-body">
                    {% if related_story.category %}
                    <div class="mb-2">
                        <span class="badge {{ text.category_badge_color(related_story.category.name) }} badge-sm">
                            {{ related_story.category.name }}
                        </span>
                    </div>
                    {% endif %}

                    <h3 class="card-title text-lg line-clamp-2 hover:text-python-blue transition-colors">
                        {{ related_story.name }}
                    </h3>

                    {% if related_story.company_name %}
                    <p class="text-sm text-base-content/70 font-medium">
                        {{ related_story.company_name }}
                    </p>
                    {% endif %}

                    <p class="text-sm text-base-content/60 line-clamp-3 mt-2">
                        {{ text.strip_markdown(related_story.content, 120) }}
                    </p>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<section class="bg-base-100 py-8">
    <div class="section-container">
        <a href="/success-stories/"
           class="btn btn-outline gap-2"
           hx-boost="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to All Stories
        </a>
    </div>
</section>
{% endblock %}
