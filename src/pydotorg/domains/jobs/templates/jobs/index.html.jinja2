{% extends "base.html.jinja2" %}
{% from "macros/forms.html.jinja2" import search_field, checkbox_field, select_field %}

{% block title %}Python Job Board{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6">Python Job Board</h1>
            <p class="text-xl opacity-90">
                Find your next Python opportunity or hire talented Python developers
            </p>
            <div class="mt-8">
                <a href="/jobs/submit" class="btn btn-primary btn-lg gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Post a Job
                </a>
            </div>
        </div>
    </div>
</section>

{% if featured_jobs %}
<section class="bg-python-yellow/10 py-12 border-b border-python-yellow/20">
    <div class="section-container">
        <div class="flex items-center gap-3 mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-python-yellow" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <h2 class="text-2xl font-bold text-python-blue">Featured Jobs</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for job in featured_jobs %}
            <a href="/jobs/{{ job.slug }}" class="card bg-base-100 shadow-md hover:shadow-lg transition-all border-2 border-python-yellow/30 hover:border-python-yellow">
                <div class="card-body p-5">
                    <div class="flex items-start justify-between gap-2">
                        <h3 class="font-bold text-python-blue line-clamp-2">{{ job.job_title }}</h3>
                        <span class="badge badge-warning badge-sm shrink-0">Featured</span>
                    </div>
                    <p class="text-sm text-base-content/70">{{ job.company_name }}</p>
                    <div class="flex flex-wrap gap-2 mt-2">
                        {% if job.telecommuting %}
                        <span class="badge badge-success badge-xs gap-1">Remote</span>
                        {% endif %}
                        {% if job.city or job.country %}
                        <span class="badge badge-ghost badge-xs">
                            {{ job.city }}{% if job.city and job.country %}, {% endif %}{{ job.country }}
                        </span>
                        {% endif %}
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<section class="bg-base-100 py-16">
    <div class="section-container">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <aside class="lg:col-span-1">
                <div class="card bg-base-200 shadow-sm sticky top-4">
                    <div class="card-body">
                        <h2 class="card-title text-lg mb-4">Filter Jobs</h2>

                        <form id="job-filters"
                              hx-get="/jobs"
                              hx-target="#job-results"
                              hx-trigger="change, submit, input from:find input[name='q'] changed delay:300ms"
                              hx-swap="outerHTML"
                              hx-indicator="#search-indicator">

                            <div class="space-y-4">
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Search</span>
                                    </label>
                                    <input
                                        type="search"
                                        name="q"
                                        placeholder="Job title, company..."
                                        value="{{ request.query_params.get('q', '') }}"
                                        class="input input-bordered input-sm w-full"
                                    />
                                </div>

                                <div class="divider my-2"></div>

                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Job Type</span>
                                    </label>
                                    {% if job_types %}
                                        {% for job_type in job_types %}
                                        <label class="label cursor-pointer justify-start gap-2 py-1">
                                            <input
                                                type="checkbox"
                                                name="job_type"
                                                value="{{ job_type.slug }}"
                                                class="checkbox checkbox-sm checkbox-primary"
                                                {% if job_type.slug in (request.query_params.getall('job_type') if 'job_type' in request.query_params else []) %}checked{% endif %}
                                            />
                                            <span class="label-text">{{ job_type.name }}</span>
                                        </label>
                                        {% endfor %}
                                    {% endif %}
                                </div>

                                <div class="divider my-2"></div>

                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Category</span>
                                    </label>
                                    {% if job_categories %}
                                        {% for category in job_categories %}
                                        <label class="label cursor-pointer justify-start gap-2 py-1">
                                            <input
                                                type="checkbox"
                                                name="category"
                                                value="{{ category.slug }}"
                                                class="checkbox checkbox-sm checkbox-primary"
                                                {% if category.slug in (request.query_params.getall('category') if 'category' in request.query_params else []) %}checked{% endif %}
                                            />
                                            <span class="label-text">{{ category.name }}</span>
                                        </label>
                                        {% endfor %}
                                    {% endif %}
                                </div>

                                <div class="divider my-2"></div>

                                <label class="label cursor-pointer justify-start gap-3">
                                    <input
                                        type="checkbox"
                                        name="remote"
                                        value="true"
                                        class="checkbox checkbox-primary"
                                        {% if request.query_params.get('remote') == 'true' %}checked{% endif %}
                                    />
                                    <span class="label-text font-semibold">Remote Only</span>
                                </label>

                                <div class="divider my-2"></div>

                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Location</span>
                                    </label>
                                    <input
                                        type="text"
                                        name="location"
                                        placeholder="City, Country..."
                                        value="{{ request.query_params.get('location', '') }}"
                                        class="input input-bordered input-sm w-full"
                                    />
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm btn-block mt-4">
                                    Apply Filters
                                </button>

                                <button type="button"
                                        hx-get="/jobs"
                                        hx-target="#job-results"
                                        hx-swap="outerHTML"
                                        class="btn btn-ghost btn-sm btn-block">
                                    Clear All
                                </button>
                            </div>
                        </form>

                        <div id="search-indicator" class="htmx-indicator mt-4">
                            <div class="flex items-center justify-center gap-2">
                                <span class="loading loading-spinner loading-sm"></span>
                                <span class="text-sm">Searching...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <main class="lg:col-span-3">
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-2xl font-bold text-python-blue">
                            {% if jobs %}
                                {{ pagination.total if pagination else jobs|length }} Jobs Available
                            {% else %}
                                No Jobs Found
                            {% endif %}
                        </h2>
                        {% if request.query_params.get('q') %}
                        <p class="text-sm text-base-content/60 mt-1">
                            Search results for "{{ request.query_params.get('q') }}"
                        </p>
                        {% endif %}
                    </div>
                </div>

                {% include "jobs/partials/job_results.html.jinja2" %}
            </main>
        </div>
    </div>
</section>
{% endblock %}
