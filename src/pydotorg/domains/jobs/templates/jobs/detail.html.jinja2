{% extends "base.html.jinja2" %}

{% block title %}{{ job.job_title }} at {{ job.company_name }} - Python Job Board{% endblock %}

{% block meta_description %}{{ job.description[:160] if job.description else 'Python job opportunity at ' ~ job.company_name }}{% endblock %}

{% block content %}
<section class="bg-base-100 py-8">
    <div class="section-container">
        <div class="breadcrumbs text-sm mb-4">
            <ul>
                <li><a href="/" class="python-link">Home</a></li>
                <li><a href="/jobs" class="python-link">Jobs</a></li>
                <li>{{ job.job_title }}</li>
            </ul>
        </div>
    </div>
</section>

<section class="bg-base-100 py-8">
    <div class="section-container">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <main class="lg:col-span-2">
                <article class="card bg-base-200 shadow-md">
                    <div class="card-body">
                        <div class="mb-6">
                            <h1 class="text-4xl font-bold text-python-blue mb-4">
                                {{ job.job_title }}
                            </h1>

                            <div class="flex flex-wrap items-center gap-4 text-base-content/70 mb-4">
                                {% if job.company_name %}
                                <span class="flex items-center gap-2 text-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                    <strong>{{ job.company_name }}</strong>
                                </span>
                                {% endif %}

                                {% if job.city or job.region or job.country %}
                                <span class="flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    {% if job.city %}{{ job.city }}{% if job.region or job.country %}, {% endif %}{% endif %}
                                    {% if job.region %}{{ job.region }}{% if job.country %}, {% endif %}{% endif %}
                                    {% if job.country %}{{ job.country }}{% endif %}
                                </span>
                                {% endif %}
                            </div>

                            <div class="flex flex-wrap gap-2">
                                {% if job.telecommuting %}
                                <span class="badge badge-success badge-lg gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Remote Work Available
                                </span>
                                {% endif %}

                                {% if job.job_types %}
                                    {% for job_type in job.job_types %}
                                    <span class="badge badge-outline badge-lg">{{ job_type.name }}</span>
                                    {% endfor %}
                                {% endif %}

                                {% if job.categories %}
                                    {% for category in job.categories %}
                                    <span class="badge badge-ghost badge-lg">{{ category.name }}</span>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>

                        <div class="divider"></div>

                        {% if job.description %}
                        <div class="prose max-w-none mb-8">
                            <h2 class="text-2xl font-bold text-python-blue mb-4">Job Description</h2>
                            <div class="text-base-content/90 leading-relaxed">
                                {{ job.description|safe }}
                            </div>
                        </div>
                        {% endif %}

                        {% if job.requirements %}
                        <div class="prose max-w-none mb-8">
                            <h2 class="text-2xl font-bold text-python-blue mb-4">Requirements</h2>
                            <div class="text-base-content/90 leading-relaxed">
                                {{ job.requirements|safe }}
                            </div>
                        </div>
                        {% endif %}

                        {% if job.contact %}
                        <div class="divider"></div>

                        <div class="mb-8">
                            <h2 class="text-2xl font-bold text-python-blue mb-4">How to Apply</h2>
                            <div class="alert alert-info">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <div class="text-base-content/90 leading-relaxed">
                                    {{ job.contact|safe }}
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        <div class="card-actions justify-between items-center pt-4 border-t border-base-300">
                            <div class="text-sm text-base-content/60">
                                {% if job.created %}
                                Posted {{ job.created.strftime('%B %d, %Y') }}
                                {% endif %}
                                {% if job.expires %}
                                â€¢ Expires {{ job.expires.strftime('%B %d, %Y') }}
                                {% endif %}
                            </div>

                            <div class="flex gap-2">
                                <button class="btn btn-ghost btn-sm gap-2" onclick="window.history.back()">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                    </svg>
                                    Back to Jobs
                                </button>

                                <button class="btn btn-ghost btn-sm gap-2" onclick="window.print()">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                                    </svg>
                                    Print
                                </button>

                                <button class="btn btn-ghost btn-sm gap-2" onclick="navigator.share ? navigator.share({title: '{{ job.job_title }}', url: window.location.href}) : navigator.clipboard.writeText(window.location.href)">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                                    </svg>
                                    Share
                                </button>
                            </div>
                        </div>
                    </div>
                </article>
            </main>

            <aside class="lg:col-span-1">
                {% if job.company_name %}
                <div class="card bg-base-200 shadow-sm mb-6">
                    <div class="card-body">
                        <h3 class="card-title text-lg mb-4">Company Info</h3>
                        <div class="space-y-3">
                            <div>
                                <p class="font-semibold text-python-blue">{{ job.company_name }}</p>
                            </div>
                            {% if job.city or job.region or job.country %}
                            <div class="flex items-start gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/50 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <div class="text-sm">
                                    {% if job.city %}{{ job.city }}<br>{% endif %}
                                    {% if job.region %}{{ job.region }}<br>{% endif %}
                                    {% if job.country %}{{ job.country }}{% endif %}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endif %}

                {% if related_jobs %}
                <div class="card bg-base-200 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title text-lg mb-4">Related Jobs</h3>
                        <div class="space-y-4">
                            {% for related in related_jobs[:5] %}
                            <div class="border-l-4 border-python-blue pl-3 py-1 hover:bg-base-300 transition-colors">
                                <a href="/jobs/{{ related.slug }}" class="block">
                                    <h4 class="font-semibold text-sm python-link line-clamp-2">
                                        {{ related.job_title }}
                                    </h4>
                                    <p class="text-xs text-base-content/60 mt-1">
                                        {{ related.company_name }}
                                    </p>
                                    {% if related.city or related.country %}
                                    <p class="text-xs text-base-content/50 mt-0.5">
                                        {% if related.city %}{{ related.city }}{% if related.country %}, {% endif %}{% endif %}
                                        {% if related.country %}{{ related.country }}{% endif %}
                                    </p>
                                    {% endif %}
                                </a>
                            </div>
                            {% endfor %}
                        </div>
                        <div class="mt-4">
                            <a href="/jobs" class="btn btn-outline btn-sm btn-block">
                                View All Jobs
                            </a>
                        </div>
                    </div>
                </div>
                {% endif %}

                <div class="card bg-gradient-to-br from-python-blue to-python-yellow text-white shadow-sm mt-6">
                    <div class="card-body">
                        <h3 class="card-title text-lg mb-2">Post Your Job</h3>
                        <p class="text-sm opacity-90 mb-4">
                            Reach thousands of Python developers worldwide
                        </p>
                        <a href="/jobs/submit" class="btn btn-primary btn-sm btn-block">
                            Submit a Job
                        </a>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>
{% endblock %}
