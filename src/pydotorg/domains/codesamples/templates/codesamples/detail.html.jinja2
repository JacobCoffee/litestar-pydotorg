{% extends "base.html.jinja2" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="bg-base-100 py-12">
    <div class="section-container">
        <div class="max-w-4xl mx-auto">
            <nav class="breadcrumbs text-sm mb-6">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/code-samples/">Code Samples</a></li>
                    <li>{{ sample.title }}</li>
                </ul>
            </nav>

            <article class="prose prose-lg max-w-none">
                <h1>{{ sample.title }}</h1>

                {% if sample.description %}
                <p class="lead text-xl text-base-content/80">
                    {{ sample.description }}
                </p>
                {% endif %}

                {% if sample.copy %}
                <div class="not-prose mt-8">
                    <div class="mockup-code bg-neutral text-neutral-content">
                        <pre><code class="language-python">{{ sample.copy }}</code></pre>
                    </div>
                </div>
                {% endif %}

                {% if sample.source_url %}
                <div class="mt-8 p-4 bg-base-200 rounded-lg not-prose">
                    <p class="font-semibold">Source:</p>
                    <a href="{{ sample.source_url }}" target="_blank" rel="noopener noreferrer" class="python-link">
                        {{ sample.source_url }}
                    </a>
                </div>
                {% endif %}
            </article>

            <div class="mt-12 pt-8 border-t border-base-300">
                <a href="/code-samples/" class="btn btn-outline">
                    Back to Code Samples
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
