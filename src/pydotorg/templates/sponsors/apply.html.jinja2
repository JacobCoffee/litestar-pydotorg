{% extends "base.html.jinja2" %}
{% from "macros/forms.html.jinja2" import input_field, textarea_field, select_field, checkbox_field %}

{% block title %}{{ title }} - Python.org{% endblock %}

{% block meta_description %}{{ description }}{% endblock %}

{% block content %}
<section class="python-gradient text-white py-12">
    <div class="section-container">
        <div class="max-w-3xl mx-auto text-center">
            <h1 class="text-4xl font-bold mb-4">{{ title }}</h1>
            <p class="text-lg opacity-90">
                {{ description }}
            </p>
        </div>
    </div>
</section>

<section class="bg-base-100 py-12">
    <div class="section-container">
        <div class="max-w-4xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <main class="lg:col-span-2">
                    <div class="card bg-base-200 shadow-md">
                        <div class="card-body">
                            <h2 class="card-title text-2xl text-python-blue mb-6">Sponsorship Application</h2>

                            <form
                                id="sponsor-apply-form"
                                method="post"
                                action="/api/v1/sponsors/apply"
                                hx-post="/api/v1/sponsors/apply"
                                hx-target="#form-response"
                                hx-swap="innerHTML"
                                class="space-y-6"
                            >
                                <div class="space-y-4">
                                    <h3 class="text-lg font-semibold text-python-blue">Company Information</h3>

                                    {{ input_field(
                                        name='company_name',
                                        label='Company Name',
                                        type='text',
                                        placeholder='Acme Corporation',
                                        required=true
                                    ) }}

                                    {{ input_field(
                                        name='website',
                                        label='Company Website',
                                        type='url',
                                        placeholder='https://example.com',
                                        required=true,
                                        help_text='Your company website URL'
                                    ) }}

                                    {{ textarea_field(
                                        name='description',
                                        label='Company Description',
                                        placeholder='Tell us about your company and why you want to sponsor Python...',
                                        rows=6,
                                        required=true,
                                        help_text='Brief description of your organization and its connection to Python'
                                    ) }}
                                </div>

                                <div class="divider"></div>

                                <div class="space-y-4">
                                    <h3 class="text-lg font-semibold text-python-blue">Contact Information</h3>

                                    {{ input_field(
                                        name='contact_name',
                                        label='Contact Name',
                                        type='text',
                                        placeholder='Jane Doe',
                                        required=true
                                    ) }}

                                    {{ input_field(
                                        name='contact_email',
                                        label='Contact Email',
                                        type='email',
                                        placeholder='contact@example.com',
                                        required=true,
                                        help_text='We will use this email to follow up on your application'
                                    ) }}

                                    {{ input_field(
                                        name='contact_phone',
                                        label='Phone Number',
                                        type='tel',
                                        placeholder='+1 (555) 123-4567',
                                        help_text='Optional - for urgent matters'
                                    ) }}
                                </div>

                                <div class="divider"></div>

                                <div class="space-y-4">
                                    <h3 class="text-lg font-semibold text-python-blue">Company Location</h3>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        {{ input_field(
                                            name='city',
                                            label='City',
                                            type='text',
                                            placeholder='San Francisco'
                                        ) }}

                                        {{ input_field(
                                            name='state',
                                            label='State/Province',
                                            type='text',
                                            placeholder='California'
                                        ) }}

                                        {{ input_field(
                                            name='postal_code',
                                            label='Postal Code',
                                            type='text',
                                            placeholder='94102'
                                        ) }}

                                        {{ input_field(
                                            name='country',
                                            label='Country',
                                            type='text',
                                            placeholder='USA',
                                            required=true
                                        ) }}
                                    </div>

                                    {{ input_field(
                                        name='mailing_address',
                                        label='Mailing Address',
                                        type='text',
                                        placeholder='123 Main Street, Suite 100',
                                        help_text='Street address for correspondence'
                                    ) }}
                                </div>

                                <div class="divider"></div>

                                <div class="space-y-4">
                                    <h3 class="text-lg font-semibold text-python-blue">Sponsorship Details</h3>

                                    <div class="form-control w-full">
                                        <label class="label" for="sponsorship_level">
                                            <span class="label-text">
                                                Sponsorship Level
                                                <span class="text-error">*</span>
                                            </span>
                                        </label>
                                        <select
                                            name="sponsorship_level"
                                            id="sponsorship_level"
                                            class="select select-bordered w-full"
                                            required
                                        >
                                            <option value="" disabled selected>Choose sponsorship tier</option>
                                            <option value="platinum">Platinum - $100,000+/year</option>
                                            <option value="gold">Gold - $50,000/year</option>
                                            <option value="silver">Silver - $25,000/year</option>
                                            <option value="bronze">Bronze - $10,000/year</option>
                                            <option value="community">Community - $5,000/year</option>
                                        </select>
                                        <label class="label">
                                            <span class="label-text-alt">Select the sponsorship tier that best fits your organization</span>
                                        </label>
                                    </div>

                                    <div class="form-control w-full">
                                        <label class="label">
                                            <span class="label-text">What are your goals for sponsoring Python?</span>
                                        </label>
                                        <div class="space-y-2">
                                            <label class="label cursor-pointer justify-start gap-3">
                                                <input type="checkbox" name="goals" value="brand_awareness" class="checkbox checkbox-primary" />
                                                <span class="label-text">Brand Awareness</span>
                                            </label>
                                            <label class="label cursor-pointer justify-start gap-3">
                                                <input type="checkbox" name="goals" value="community_support" class="checkbox checkbox-primary" />
                                                <span class="label-text">Community Support</span>
                                            </label>
                                            <label class="label cursor-pointer justify-start gap-3">
                                                <input type="checkbox" name="goals" value="talent_recruitment" class="checkbox checkbox-primary" />
                                                <span class="label-text">Talent Recruitment</span>
                                            </label>
                                            <label class="label cursor-pointer justify-start gap-3">
                                                <input type="checkbox" name="goals" value="networking" class="checkbox checkbox-primary" />
                                                <span class="label-text">Networking Opportunities</span>
                                            </label>
                                            <label class="label cursor-pointer justify-start gap-3">
                                                <input type="checkbox" name="goals" value="other" class="checkbox checkbox-primary" />
                                                <span class="label-text">Other</span>
                                            </label>
                                        </div>
                                    </div>

                                    {{ textarea_field(
                                        name='additional_message',
                                        label='Additional Information',
                                        placeholder='Any additional information you would like to share with us...',
                                        rows=6,
                                        help_text='Optional - tell us more about your interest in sponsoring Python'
                                    ) }}
                                </div>

                                <div class="divider"></div>

                                <div class="space-y-4">
                                    <h3 class="text-lg font-semibold text-python-blue">Social Media & Branding</h3>

                                    {{ input_field(
                                        name='twitter_handle',
                                        label='Twitter/X Handle',
                                        type='text',
                                        placeholder='@yourcompany',
                                        help_text='Optional - your company Twitter/X handle'
                                    ) }}

                                    {{ input_field(
                                        name='linkedin_url',
                                        label='LinkedIn Page',
                                        type='url',
                                        placeholder='https://linkedin.com/company/yourcompany',
                                        help_text='Optional - your company LinkedIn page'
                                    ) }}

                                    <div class="alert alert-info">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        <div class="text-xs">
                                            <p class="font-semibold">Logo Upload</p>
                                            <p>After your application is approved, we will contact you to collect your company logo and other branding materials.</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="divider"></div>

                                <div id="form-response" class="mb-4"></div>

                                <div class="flex flex-col sm:flex-row gap-4 justify-between items-center pt-4">
                                    <div class="text-sm text-base-content/60">
                                        <span class="text-error">*</span> Required fields
                                    </div>

                                    <div class="flex gap-2">
                                        <button
                                            type="button"
                                            class="btn btn-ghost"
                                            onclick="window.history.back()"
                                        >
                                            Cancel
                                        </button>

                                        <button
                                            type="submit"
                                            class="btn btn-primary gap-2"
                                        >
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                                            </svg>
                                            Submit Application
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </main>

                <aside class="lg:col-span-1">
                    <div class="card bg-base-200 shadow-sm sticky top-4">
                        <div class="card-body">
                            <h3 class="card-title text-lg mb-4">Sponsorship Benefits</h3>
                            <div class="space-y-4 text-sm">
                                <div class="flex items-start gap-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <div>
                                        <p class="font-semibold">Logo Visibility</p>
                                        <p class="text-base-content/60">Featured on python.org and conference materials</p>
                                    </div>
                                </div>

                                <div class="flex items-start gap-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <div>
                                        <p class="font-semibold">Community Impact</p>
                                        <p class="text-base-content/60">Support millions of Python developers worldwide</p>
                                    </div>
                                </div>

                                <div class="flex items-start gap-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <div>
                                        <p class="font-semibold">Networking</p>
                                        <p class="text-base-content/60">Connect with key Python community members</p>
                                    </div>
                                </div>

                                <div class="flex items-start gap-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <div>
                                        <p class="font-semibold">Talent Access</p>
                                        <p class="text-base-content/60">Reach potential Python developers for hiring</p>
                                    </div>
                                </div>

                                <div class="flex items-start gap-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <div>
                                        <p class="font-semibold">Exclusive Events</p>
                                        <p class="text-base-content/60">Access to sponsor-exclusive events and opportunities</p>
                                    </div>
                                </div>
                            </div>

                            <div class="divider"></div>

                            <div class="alert alert-info">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <div class="text-xs">
                                    <p class="font-semibold">Review Process</p>
                                    <p>Applications are reviewed within 5-7 business days. We will contact you via email with next steps.</p>
                                </div>
                            </div>

                            <a href="/sponsors" class="btn btn-outline btn-sm btn-block mt-4">
                                View Current Sponsors
                            </a>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block extra_js %}
<script>
document.getElementById('sponsor-apply-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const data = {};

    for (let [key, value] of formData.entries()) {
        if (key === 'goals') {
            if (!data[key]) data[key] = [];
            data[key].push(value);
        } else {
            data[key] = value;
        }
    }

    fetch('/api/v1/sponsors/apply', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Submission failed');
        }
        return response.json();
    })
    .then(result => {
        document.getElementById('form-response').innerHTML = `
            <div class="alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                    <h3 class="font-bold">Success!</h3>
                    <div class="text-sm">Your sponsorship application has been submitted. We will contact you within 5-7 business days.</div>
                </div>
            </div>
        `;
        setTimeout(() => {
            window.location.href = '/sponsors';
        }, 3000);
    })
    .catch(error => {
        document.getElementById('form-response').innerHTML = `
            <div class="alert alert-error">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                    <h3 class="font-bold">Error!</h3>
                    <div class="text-sm">Failed to submit application. Please try again or contact us directly.</div>
                </div>
            </div>
        `;
    });
});
</script>
{% endblock %}
