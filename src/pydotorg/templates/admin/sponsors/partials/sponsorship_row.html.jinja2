<div id="sponsorship-{{ sponsorship.id }}" class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-shadow">
    <div class="card-body p-4">
        <div class="flex items-start justify-between gap-4">
            <div class="flex items-start gap-4 flex-1">
                {% if sponsorship.sponsor.web_logo %}
                <div class="avatar">
                    <div class="w-16 h-16 rounded-lg bg-base-200">
                        <img src="{{ sponsorship.sponsor.web_logo }}" alt="{{ sponsorship.sponsor.name }}" class="object-contain" />
                    </div>
                </div>
                {% else %}
                <div class="avatar placeholder">
                    <div class="bg-python-blue text-white rounded-lg w-16 h-16">
                        <span class="text-xl">{{ sponsorship.sponsor.name[:2]|upper }}</span>
                    </div>
                </div>
                {% endif %}

                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 flex-wrap">
                        <h3 class="font-bold text-lg truncate">{{ sponsorship.sponsor.name }}</h3>
                        {% if sponsorship.status.value == 'applied' %}
                        <span class="badge badge-warning badge-sm">Pending</span>
                        {% elif sponsorship.status.value == 'approved' %}
                        <span class="badge badge-info badge-sm">Approved</span>
                        {% elif sponsorship.status.value == 'finalized' %}
                        <span class="badge badge-success badge-sm">Active</span>
                        {% elif sponsorship.status.value == 'rejected' %}
                        <span class="badge badge-error badge-sm">Rejected</span>
                        {% endif %}
                        {% if sponsorship.renewal %}
                        <span class="badge badge-outline badge-sm">Renewal</span>
                        {% endif %}
                    </div>

                    <div class="flex items-center gap-4 text-sm text-base-content/60 mt-1">
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                            {{ sponsorship.level.name }}
                        </span>
                        {% if sponsorship.sponsorship_fee %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            ${{ "{:,.0f}".format(sponsorship.sponsorship_fee) }}
                        </span>
                        {% endif %}
                        {% if sponsorship.year %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            {{ sponsorship.year }}
                        </span>
                        {% endif %}
                    </div>

                    {% if sponsorship.start_date and sponsorship.end_date %}
                    <div class="text-xs text-base-content/50 mt-1">
                        {{ sponsorship.start_date.strftime('%b %d, %Y') }} - {{ sponsorship.end_date.strftime('%b %d, %Y') }}
                    </div>
                    {% endif %}

                    {% if sponsorship.submitted_by %}
                    <div class="text-xs text-base-content/50 mt-1">
                        Submitted by: {{ sponsorship.submitted_by.username }}
                        {% if sponsorship.applied_on %}
                        on {{ sponsorship.applied_on.strftime('%b %d, %Y') }}
                        {% endif %}
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="flex flex-col gap-2">
                <div class="flex gap-2">
                    <button
                        class="btn btn-ghost btn-sm"
                        hx-get="/admin/sponsors/{{ sponsorship.id }}/preview"
                        hx-target="#sponsorship_preview_content"
                        hx-swap="innerHTML"
                        title="Quick Preview"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                    <a href="/admin/sponsors/{{ sponsorship.id }}" class="btn btn-ghost btn-sm" title="View Details" hx-boost="true">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </a>
                </div>

                {% if sponsorship.status.value == 'applied' %}
                <div class="flex gap-2">
                    <button
                        class="btn btn-success btn-sm"
                        hx-post="/admin/sponsors/{{ sponsorship.id }}/approve"
                        hx-target="#sponsorship-{{ sponsorship.id }}"
                        hx-swap="outerHTML"
                        hx-confirm="Are you sure you want to approve this sponsorship?"
                        title="Approve"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </button>
                    <button
                        class="btn btn-error btn-sm"
                        hx-post="/admin/sponsors/{{ sponsorship.id }}/reject"
                        hx-target="#sponsorship-{{ sponsorship.id }}"
                        hx-swap="outerHTML"
                        hx-confirm="Are you sure you want to reject this sponsorship?"
                        title="Reject"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                {% elif sponsorship.status.value == 'approved' %}
                <button
                    class="btn btn-primary btn-sm"
                    hx-post="/admin/sponsors/{{ sponsorship.id }}/finalize"
                    hx-target="#sponsorship-{{ sponsorship.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Are you sure you want to finalize this sponsorship?"
                    title="Finalize"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Finalize
                </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
