{% extends "admin/base.html.jinja2" %}
{% from "admin/partials/stats_card.html.jinja2" import stats_card %}

{% block title %}Admin Dashboard - Python.org{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">Dashboard</h1>
            <p class="text-base-content/70 mt-1">Welcome back, {{ request.user.username }}</p>
        </div>
        <div class="text-sm text-base-content/60">
            Last login: {{ request.user.last_login.strftime('%B %d, %Y at %I:%M %p') if request.user.last_login else 'Never' }}
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {{ stats_card(
            title='Total Users',
            value=stats.total_users if stats else '0',
            icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>',
            trend='+12 this week' if stats and stats.new_users_week else '',
            trend_direction='up'
        ) }}

        {{ stats_card(
            title='Pending Jobs',
            value=stats.pending_jobs if stats else '0',
            icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>',
            trend='Needs review' if stats and stats.pending_jobs > 0 else 'All clear',
            color='warning'
        ) }}

        {{ stats_card(
            title='Upcoming Events',
            value=stats.upcoming_events if stats else '0',
            icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>',
            trend='Next 30 days',
            color='success'
        ) }}

        {{ stats_card(
            title='Active Sponsors',
            value=stats.active_sponsors if stats else '0',
            icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
            color='primary'
        ) }}
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-python-blue flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                        Recent Activity
                    </h2>

                    <div class="space-y-4 mt-4">
                        {% if recent_activities %}
                            {% for activity in recent_activities %}
                            <div class="flex items-start gap-3 p-3 rounded-lg hover:bg-base-200 transition-colors">
                                <div class="avatar placeholder">
                                    <div class="bg-primary text-primary-content rounded-full w-10 h-10 flex items-center justify-center">
                                        <span class="text-xs">{{ activity.user[:2].upper() if activity.user else 'SY' }}</span>
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm">
                                        <span class="font-semibold">{{ activity.user }}</span>
                                        <span class="text-base-content/70">{{ activity.action }}</span>
                                    </p>
                                    <p class="text-xs text-base-content/60 mt-1">
                                        {{ activity.timestamp.strftime('%B %d, %Y at %I:%M %p') }}
                                    </p>
                                </div>
                                {% if activity.status %}
                                <span class="badge badge-{{ activity.status }} badge-sm">{{ activity.status }}</span>
                                {% endif %}
                            </div>
                            {% endfor %}
                        {% else %}
                        <div class="text-center py-8 text-base-content/60">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-3 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                            </svg>
                            <p>No recent activity</p>
                        </div>
                        {% endif %}
                    </div>

                    {% if recent_activities %}
                    <div class="card-actions justify-end mt-4">
                        <a href="/admin/logs" class="btn btn-ghost btn-sm">View All â†’</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-python-blue flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Quick Actions
                    </h2>

                    <div class="space-y-2 mt-4">
                        {% if request.user.is_staff or request.user.is_superuser %}
                        <a
                            href="/admin/jobs"
                            class="btn btn-outline btn-block justify-start gap-3"
                            hx-boost="true"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Review Jobs
                            {% if stats and stats.pending_jobs > 0 %}
                            <span class="badge badge-warning badge-sm">{{ stats.pending_jobs }}</span>
                            {% endif %}
                        </a>

                        <a
                            href="/admin/events"
                            class="btn btn-outline btn-block justify-start gap-3"
                            hx-boost="true"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            Moderate Events
                        </a>
                        {% endif %}

                        {% if request.user.is_superuser %}
                        <a
                            href="/admin/users"
                            class="btn btn-outline btn-block justify-start gap-3"
                            hx-boost="true"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            Manage Users
                        </a>

                        <a
                            href="/admin/sponsors"
                            class="btn btn-outline btn-block justify-start gap-3"
                            hx-boost="true"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            Manage Sponsors
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-python-blue flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        Pending Items
                    </h2>

                    <div class="space-y-3 mt-4">
                        {% if stats %}
                        {% if stats.pending_jobs > 0 %}
                        <a href="/admin/jobs?status=pending" class="flex items-center justify-between p-3 rounded-lg hover:bg-base-200 transition-colors">
                            <span class="text-sm">Pending Jobs</span>
                            <span class="badge badge-warning">{{ stats.pending_jobs }}</span>
                        </a>
                        {% endif %}

                        {% if stats.pending_sponsors > 0 %}
                        <a href="/admin/sponsors/pending" class="flex items-center justify-between p-3 rounded-lg hover:bg-base-200 transition-colors">
                            <span class="text-sm">Pending Sponsors</span>
                            <span class="badge badge-warning">{{ stats.pending_sponsors }}</span>
                        </a>
                        {% endif %}

                        {% if stats.pending_jobs == 0 and stats.pending_sponsors == 0 %}
                        <div class="text-center py-4 text-base-content/60 text-sm">
                            All caught up!
                        </div>
                        {% endif %}
                        {% else %}
                        <div class="text-center py-4 text-base-content/60 text-sm">
                            Loading...
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
