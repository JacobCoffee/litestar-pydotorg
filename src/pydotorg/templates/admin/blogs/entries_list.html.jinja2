{% extends "admin/base.html.jinja2" %}

{% block title %}Blog Entries - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">Blog Entries</h1>
            <p class="text-base-content/70 mt-1">View and manage blog post entries</p>
        </div>
        <div class="flex gap-2">
            <a href="/admin/blogs" class="btn btn-outline btn-sm" hx-boost="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
                </svg>
                Manage Feeds
            </a>
        </div>
    </div>

    {% if feeds %}
    <div class="flex gap-2 items-center">
        <label class="text-sm font-medium">Filter by Feed:</label>
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-sm btn-ghost">
                {% if request.query_params.get('feed_id') %}
                    {{ feeds|selectattr('id', 'eq', request.query_params.get('feed_id')|int)|map(attribute='name')|first|default('All Feeds') }}
                {% else %}
                    All Feeds
                {% endif %}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </div>
            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52 max-h-60 overflow-y-auto">
                <li><a href="/admin/blogs/entries" hx-boost="true">All Feeds</a></li>
                <li class="menu-title">
                    <span>Feeds</span>
                </li>
                {% for feed in feeds %}
                <li>
                    <a href="/admin/blogs/entries?feed_id={{ feed.id }}" hx-boost="true">
                        {{ feed.name }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% endif %}

    <div id="entries-list">
        {% if entries %}
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Feed</th>
                        <th>Published Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in entries %}
                    <tr class="hover">
                        <td>
                            <div class="flex items-center gap-2">
                                <div class="avatar placeholder">
                                    <div class="bg-python-blue text-white rounded w-8 h-8">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                                        </svg>
                                    </div>
                                </div>
                                <div>
                                    <div class="font-bold">{{ entry.title }}</div>
                                    {% if entry.summary %}
                                    <div class="text-xs text-base-content/60 line-clamp-1">{{ entry.summary[:100] }}...</div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            <a href="/admin/blogs/{{ entry.feed.id }}" class="link link-hover" hx-boost="true">
                                {{ entry.feed.name }}
                            </a>
                        </td>
                        <td>
                            <span class="text-sm">
                                {% if entry.pub_date %}
                                {{ entry.pub_date.strftime('%b %d, %Y at %I:%M %p') }}
                                {% else %}
                                N/A
                                {% endif %}
                            </span>
                        </td>
                        <td>
                            <div class="flex gap-2">
                                <a href="/admin/blogs/entries/{{ entry.id }}" class="btn btn-ghost btn-xs" title="View Details" hx-boost="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </a>
                                {% if entry.url %}
                                <a href="{{ entry.url }}" target="_blank" rel="noopener noreferrer" class="btn btn-ghost btn-xs" title="View Original">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if pagination and pagination.total > pagination.limit %}
        <div class="flex justify-center mt-6">
            <div class="join">
                {% if pagination.offset > 0 %}
                <button
                    class="join-item btn btn-sm"
                    hx-get="/admin/blogs/entries?feed_id={{ request.query_params.get('feed_id', '') }}&limit={{ pagination.limit }}&offset={{ [0, pagination.offset - pagination.limit]|max }}"
                    hx-target="#entries-list"
                    hx-swap="outerHTML"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Previous
                </button>
                {% endif %}

                {% set current_page = (pagination.offset // pagination.limit) + 1 %}
                {% set total_pages = (pagination.total // pagination.limit) + (1 if pagination.total % pagination.limit else 0) %}

                <button class="join-item btn btn-sm btn-active">
                    Page {{ current_page }} of {{ total_pages }}
                </button>

                {% if pagination.offset + pagination.limit < pagination.total %}
                <button
                    class="join-item btn btn-sm"
                    hx-get="/admin/blogs/entries?feed_id={{ request.query_params.get('feed_id', '') }}&limit={{ pagination.limit }}&offset={{ pagination.offset + pagination.limit }}"
                    hx-target="#entries-list"
                    hx-swap="outerHTML"
                >
                    Next
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </button>
                {% endif %}
            </div>
        </div>
        {% endif %}
        {% else %}
        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body text-center py-12">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                <h3 class="text-xl font-bold mb-2">No Entries Found</h3>
                <p class="text-base-content/60 mb-4">
                    {% if request.query_params.get('feed_id') %}
                    No entries found for this feed
                    {% else %}
                    There are no blog entries
                    {% endif %}
                </p>
                <a href="/admin/blogs/entries" class="btn btn-primary btn-sm">
                    View All Entries
                </a>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
