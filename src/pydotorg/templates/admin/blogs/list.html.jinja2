{% extends "admin/base.html.jinja2" %}

{% block title %}Blog Feed Management - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">Blog Feed Management</h1>
            <p class="text-base-content/70 mt-1">Manage RSS/Atom feeds and blog entries</p>
        </div>
        <div class="flex gap-2">
            <a href="/admin/blogs/entries" class="btn btn-outline btn-sm" hx-boost="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                View Entries
            </a>
        </div>
    </div>

    {% if stats %}
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <div class="stat bg-base-100 shadow rounded-lg p-4">
            <div class="stat-title text-xs">Total Feeds</div>
            <div class="stat-value text-2xl text-python-blue">{{ stats.total_feeds }}</div>
        </div>
        <div class="stat bg-base-100 shadow rounded-lg p-4">
            <div class="stat-title text-xs">Active Feeds</div>
            <div class="stat-value text-2xl text-success">{{ stats.active_feeds }}</div>
        </div>
        <div class="stat bg-base-100 shadow rounded-lg p-4">
            <div class="stat-title text-xs">Inactive</div>
            <div class="stat-value text-2xl text-warning">{{ stats.inactive_feeds }}</div>
        </div>
        <div class="stat bg-base-100 shadow rounded-lg p-4">
            <div class="stat-title text-xs">Total Entries</div>
            <div class="stat-value text-2xl">{{ stats.total_entries }}</div>
        </div>
        <div class="stat bg-base-100 shadow rounded-lg p-4">
            <div class="stat-title text-xs">Entries Today</div>
            <div class="stat-value text-2xl text-info">{{ stats.entries_today }}</div>
        </div>
    </div>
    {% endif %}

    <div class="flex gap-2 flex-wrap">
        <a
            href="/admin/blogs"
            class="btn btn-sm {% if not request.query_params.get('is_active') %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            All
            {% if stats %}
            <span class="badge badge-sm">{{ stats.total_feeds }}</span>
            {% endif %}
        </a>
        <a
            href="/admin/blogs?is_active=true"
            class="btn btn-sm {% if request.query_params.get('is_active') == 'true' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Active
            {% if stats and stats.active_feeds %}
            <span class="badge badge-success badge-sm">{{ stats.active_feeds }}</span>
            {% endif %}
        </a>
        <a
            href="/admin/blogs?is_active=false"
            class="btn btn-sm {% if request.query_params.get('is_active') == 'false' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Inactive
            {% if stats and stats.inactive_feeds %}
            <span class="badge badge-warning badge-sm">{{ stats.inactive_feeds }}</span>
            {% endif %}
        </a>
    </div>

    <div class="flex gap-2 items-center">
        <div class="join flex-1 max-w-md">
            <input
                type="text"
                placeholder="Search feeds by name..."
                class="input input-bordered input-sm join-item w-full"
                name="search"
                value="{{ request.query_params.get('search', '') }}"
                hx-get="/admin/blogs"
                hx-trigger="keyup changed delay:500ms"
                hx-target="#feeds-list"
                hx-include="[name='is_active']"
            />
            <button class="btn btn-sm btn-square join-item" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </button>
        </div>
    </div>

    {% include 'admin/blogs/partials/feeds_list.html.jinja2' %}
</div>

<dialog id="feed_preview_modal" class="modal">
    <div class="modal-box max-w-4xl">
        <button
            type="button"
            class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
            onclick="feed_preview_modal.close()"
        >âœ•</button>
        <div id="feed_preview_content">
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>
{% endblock %}

{% block extra_js %}
<script>
    document.body.addEventListener('htmx:afterSwap', function(evt) {
        if (evt.detail.target.id === 'feed_preview_content') {
            feed_preview_modal.showModal();
        }
    });
</script>
{% endblock %}
