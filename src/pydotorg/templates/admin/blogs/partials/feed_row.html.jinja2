<div id="feed-{{ feed.id }}" class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-shadow">
    <div class="card-body p-4">
        <div class="flex items-start justify-between gap-4">
            <div class="flex items-start gap-4 flex-1">
                <div class="avatar placeholder">
                    <div class="{% if feed.is_active %}bg-success{% else %}bg-warning{% endif %} text-white rounded-lg w-16 h-16">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
                        </svg>
                    </div>
                </div>

                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 flex-wrap">
                        <h3 class="font-bold text-lg truncate">{{ feed.name }}</h3>
                        {% if feed.is_active %}
                        <span class="badge badge-success badge-sm">Active</span>
                        {% else %}
                        <span class="badge badge-warning badge-sm">Inactive</span>
                        {% endif %}
                    </div>

                    <div class="flex items-center gap-4 text-sm text-base-content/60 mt-1">
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                            </svg>
                            <a href="{{ feed.website_url }}" target="_blank" rel="noopener noreferrer" class="link link-hover truncate max-w-xs">
                                {{ feed.website_url }}
                            </a>
                        </span>
                        {% if feed.last_fetched %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Last fetched {{ feed.last_fetched.strftime('%b %d, %Y') }}
                        </span>
                        {% endif %}
                    </div>

                    <div class="flex items-center gap-4 text-xs text-base-content/50 mt-1">
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
                            </svg>
                            <a href="{{ feed.feed_url }}" target="_blank" rel="noopener noreferrer" class="link link-hover truncate max-w-md">
                                {{ feed.feed_url }}
                            </a>
                        </span>
                    </div>

                </div>
            </div>

            <div class="flex flex-col gap-2">
                <div class="flex gap-2">
                    <button
                        class="btn btn-ghost btn-sm"
                        hx-get="/admin/blogs/{{ feed.id }}/preview"
                        hx-target="#feed_preview_content"
                        hx-swap="innerHTML"
                        title="Quick Preview"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                    <a href="/admin/blogs/{{ feed.id }}" class="btn btn-ghost btn-sm" title="View Details" hx-boost="true">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </a>
                </div>

                {% if feed.is_active %}
                <button
                    class="btn btn-warning btn-sm"
                    hx-post="/admin/blogs/{{ feed.id }}/deactivate"
                    hx-target="#feed-{{ feed.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Are you sure you want to deactivate this feed?"
                    title="Deactivate"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                    </svg>
                    Deactivate
                </button>
                {% else %}
                <button
                    class="btn btn-success btn-sm"
                    hx-post="/admin/blogs/{{ feed.id }}/activate"
                    hx-target="#feed-{{ feed.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Are you sure you want to activate this feed?"
                    title="Activate"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Activate
                </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
