<tr id="entry-{{ entry.id }}" class="hover">
    <td>
        <div class="flex items-center gap-2">
            <div class="avatar placeholder">
                <div class="{% if entry.is_featured %}bg-python-yellow text-python-blue{% else %}bg-python-blue text-white{% endif %} rounded w-8 h-8">
                    {% if entry.is_featured %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                    {% endif %}
                </div>
            </div>
            <div>
                <div class="font-bold flex items-center gap-2">
                    {{ entry.title }}
                    {% if entry.is_featured %}
                    <span class="badge badge-warning badge-xs">Featured</span>
                    {% endif %}
                </div>
                {% if entry.summary %}
                <div class="text-xs text-base-content/60 line-clamp-1">{{ entry.summary[:100] }}...</div>
                {% endif %}
            </div>
        </div>
    </td>
    <td>
        <a href="/admin/blogs/{{ entry.feed.id }}" class="link link-hover" hx-boost="true">
            {{ entry.feed.name }}
        </a>
    </td>
    <td>
        <span class="text-sm">
            {% if entry.pub_date %}
            {{ entry.pub_date.strftime('%b %d, %Y at %I:%M %p') }}
            {% else %}
            N/A
            {% endif %}
        </span>
    </td>
    <td>
        <div class="flex gap-2">
            <a href="/admin/blogs/entry/{{ entry.id }}" class="btn btn-ghost btn-xs" title="View Details" hx-boost="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
            </a>
            {% if entry.url %}
            <a href="{{ entry.url }}" target="_blank" rel="noopener noreferrer" class="btn btn-ghost btn-xs" title="View Original">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
            </a>
            {% endif %}
            {% if entry.is_featured %}
            <button
                class="btn btn-ghost btn-xs text-warning"
                hx-post="/admin/blogs/entry/{{ entry.id }}/unfeature"
                hx-target="#entry-{{ entry.id }}"
                hx-swap="outerHTML"
                title="Remove from Featured"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
            </button>
            {% else %}
            <button
                class="btn btn-ghost btn-xs"
                hx-post="/admin/blogs/entry/{{ entry.id }}/feature"
                hx-target="#entry-{{ entry.id }}"
                hx-swap="outerHTML"
                title="Add to Featured"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
            </button>
            {% endif %}
        </div>
    </td>
</tr>
