<article
    id="template-{{ template.id }}"
    class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-all"
>
    <div class="card-body">
        <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
                <div class="flex items-start gap-3">
                    <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                            <h3 class="card-title text-xl text-python-blue">
                                {{ template.display_name }}
                            </h3>
                            {% if template.is_active %}
                            <span class="badge badge-success">Active</span>
                            {% else %}
                            <span class="badge badge-ghost">Inactive</span>
                            {% endif %}
                            <span class="badge badge-outline">{{ template.template_type.value|title }}</span>
                        </div>

                        <div class="flex flex-wrap items-center gap-3 text-sm text-base-content/70 mb-3">
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                                </svg>
                                <code class="text-xs">{{ template.internal_name }}</code>
                            </span>

                            {% if template.created_at %}
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                Created {{ template.created_at.strftime('%b %d, %Y') }}
                            </span>
                            {% endif %}

                            {% if template.updated_at and template.updated_at != template.created_at %}
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                                Updated {{ template.updated_at.strftime('%b %d, %Y') }}
                            </span>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <div class="text-sm font-semibold text-base-content/80 mb-1">Subject:</div>
                            <div class="text-sm text-base-content/70 font-mono bg-base-200 px-2 py-1 rounded">
                                {{ template.subject }}
                            </div>
                        </div>

                        {% if template.description %}
                        <p class="text-base-content/80 text-sm">
                            {{ template.description[:150] }}{% if template.description|length > 150 %}...{% endif %}
                        </p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="flex flex-col gap-2 min-w-[120px]">
                <a
                    href="/admin/email/templates/{{ template.id }}"
                    class="btn btn-sm btn-ghost gap-1"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    View
                </a>

                <button
                    class="btn btn-sm btn-ghost gap-1"
                    hx-get="/admin/email/templates/{{ template.id }}/preview"
                    hx-target="#template_preview_content"
                    hx-swap="innerHTML"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Preview
                </button>

                <a
                    href="/admin/email/templates/{{ template.id }}/edit"
                    class="btn btn-sm btn-primary gap-1"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit
                </a>

                {% if template.is_active %}
                <button
                    class="btn btn-warning btn-sm gap-1"
                    hx-post="/admin/email/templates/{{ template.id }}/deactivate"
                    hx-target="#template-{{ template.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Deactivate this template?"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                    </svg>
                    Deactivate
                </button>
                {% else %}
                <button
                    class="btn btn-success btn-sm gap-1"
                    hx-post="/admin/email/templates/{{ template.id }}/activate"
                    hx-target="#template-{{ template.id }}"
                    hx-swap="outerHTML"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Activate
                </button>
                {% endif %}

                <button
                    class="btn btn-ghost btn-sm gap-1"
                    hx-delete="/admin/email/templates/{{ template.id }}"
                    hx-target="#template-{{ template.id }}"
                    hx-swap="outerHTML swap:1s"
                    hx-confirm="Permanently delete this template? This action cannot be undone."
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Delete
                </button>
            </div>
        </div>
    </div>
</article>
