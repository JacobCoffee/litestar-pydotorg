<div class="space-y-6">
    <div>
        <h3 class="text-2xl font-bold text-python-blue mb-4">Email Preview</h3>
        <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm">This preview uses sample data. Actual emails will use real context variables.</span>
        </div>
    </div>

    <div class="space-y-4">
        <div>
            <div class="text-sm font-semibold text-base-content/70 mb-2">Subject Line</div>
            <div class="bg-base-200 p-4 rounded-lg font-semibold">
                {{ rendered_subject }}
            </div>
        </div>

        <div class="divider"></div>

        <div class="tabs tabs-boxed">
            <a class="tab tab-active" onclick="showPreviewTab('text')">Plain Text</a>
            {% if rendered_html and rendered_html != 'None' %}
            <a class="tab" onclick="showPreviewTab('html')">HTML Source</a>
            <a class="tab" onclick="showPreviewTab('rendered')">Rendered</a>
            {% endif %}
        </div>

        <div id="preview-text-tab" class="preview-tab-content">
            <div>
                <div class="text-sm font-semibold text-base-content/70 mb-2">Plain Text Content</div>
                {% if rendered_text and rendered_text != 'None' %}
                <div class="bg-base-200 p-4 rounded-lg font-mono text-sm whitespace-pre-wrap max-h-96 overflow-y-auto">
{{ rendered_text }}
                </div>
                {% else %}
                <div class="alert alert-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                    <span class="text-sm">No plain text content defined for this template.</span>
                </div>
                {% endif %}
            </div>
        </div>

        {% if rendered_html and rendered_html != 'None' %}
        <div id="preview-html-tab" class="preview-tab-content hidden">
            <div>
                <div class="text-sm font-semibold text-base-content/70 mb-2">HTML Source</div>
                <div class="bg-base-200 p-4 rounded-lg font-mono text-sm whitespace-pre-wrap max-h-96 overflow-y-auto">
{{ rendered_html }}
                </div>
            </div>
        </div>

        <div id="preview-rendered-tab" class="preview-tab-content hidden">
            <div>
                <div class="text-sm font-semibold text-base-content/70 mb-2">Rendered Preview</div>
                <div class="bg-white p-6 rounded-lg border-2 border-base-300 max-h-96 overflow-y-auto">
{{ rendered_html|safe }}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    {% if validation_errors %}
    <div class="alert alert-error">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
            <h4 class="font-bold mb-1">Template Validation Errors</h4>
            <ul class="list-disc list-inside text-sm">
                {% for error in validation_errors %}
                <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% endif %}

    <div class="text-sm text-base-content/60 bg-base-200 p-4 rounded-lg">
        <p class="font-semibold mb-2">Sample Context Variables Used:</p>
        <div class="font-mono text-xs space-y-1">
            {% for key, value in sample_context.items() %}
            <div><span class="text-python-blue">{{ key }}:</span> {{ value }}</div>
            {% endfor %}
        </div>
    </div>
</div>

<script>
    function showPreviewTab(tabName) {
        document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('tab-active'));
        document.querySelectorAll('.preview-tab-content').forEach(content => content.classList.add('hidden'));

        event.target.classList.add('tab-active');
        document.getElementById('preview-' + tabName + '-tab').classList.remove('hidden');
    }
</script>
