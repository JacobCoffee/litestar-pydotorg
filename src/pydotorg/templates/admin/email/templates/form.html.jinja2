{% extends "admin/base.html.jinja2" %}

{% block title %}{% if template %}Edit{% else %}New{% endif %} Email Template - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">
                {% if template %}Edit{% else %}New{% endif %} Email Template
            </h1>
            <p class="text-base-content/70 mt-1">
                {% if template %}
                Update template: {{ template.display_name }}
                {% else %}
                Create a new email template
                {% endif %}
            </p>
        </div>
        <a href="/admin/email/templates" class="btn btn-ghost gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Templates
        </a>
    </div>

    <form
        method="post"
        action="{% if template %}/admin/email/templates/{{ template.id }}{% else %}/admin/email/templates{% endif %}"
        class="space-y-6"
        {% if template %}hx-put="/admin/email/templates/{{ template.id }}" hx-swap="none"{% endif %}
    >
        {{ csrf_input|safe }}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-python-blue">Template Information</h2>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Internal Name</span>
                            <span class="label-text-alt text-error">Required</span>
                        </label>
                        <input
                            type="text"
                            name="internal_name"
                            value="{{ template.internal_name if template else '' }}"
                            class="input input-bordered"
                            placeholder="job_approved"
                            pattern="[a-z_]+"
                            required
                            {% if template %}readonly{% endif %}
                        />
                        <label class="label">
                            <span class="label-text-alt">Lowercase letters and underscores only. Used in code.</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Display Name</span>
                            <span class="label-text-alt text-error">Required</span>
                        </label>
                        <input
                            type="text"
                            name="display_name"
                            value="{{ template.display_name if template else '' }}"
                            class="input input-bordered"
                            placeholder="Job Approved Notification"
                            required
                        />
                        <label class="label">
                            <span class="label-text-alt">Human-readable name for admin interface</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Description</span>
                        </label>
                        <textarea
                            name="description"
                            class="textarea textarea-bordered h-24"
                            placeholder="Sent when a job posting is approved by an admin"
                        >{{ template.description if template else '' }}</textarea>
                        <label class="label">
                            <span class="label-text-alt">When and how this template is used</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Template Type</span>
                            <span class="label-text-alt text-error">Required</span>
                        </label>
                        <select name="template_type" class="select select-bordered" required>
                            <option value="transactional" {% if template and template.template_type.value == 'transactional' %}selected{% endif %}>Transactional</option>
                            <option value="notification" {% if template and template.template_type.value == 'notification' %}selected{% endif %}>Notification</option>
                            <option value="newsletter" {% if template and template.template_type.value == 'newsletter' %}selected{% endif %}>Newsletter</option>
                            <option value="marketing" {% if template and template.template_type.value == 'marketing' %}selected{% endif %}>Marketing</option>
                            <option value="system" {% if template and template.template_type.value == 'system' %}selected{% endif %}>System</option>
                        </select>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text font-semibold">Active</span>
                            <input
                                type="checkbox"
                                name="is_active"
                                class="toggle toggle-success"
                                {% if not template or template.is_active %}checked{% endif %}
                            />
                        </label>
                        <label class="label">
                            <span class="label-text-alt">Only active templates can be used to send emails</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-python-blue">
                        Template Variables Reference
                        <span class="badge badge-sm badge-ghost">Click to copy</span>
                    </h2>

                    <div class="bg-base-200 rounded-lg p-3 mb-4">
                        <p class="font-semibold text-xs mb-2 text-base-content/70">Jinja2 Syntax</p>
                        <div class="flex flex-wrap gap-1.5">
                            <span class="badge badge-sm gap-1 font-mono">
                                <span class="opacity-60">{{ "{{" }}</span> var <span class="opacity-60">{{ "}}" }}</span>
                            </span>
                            <span class="badge badge-sm badge-outline gap-1 font-mono">
                                <span class="opacity-60">{{ "{%" }}</span> if <span class="opacity-60">{{ "%}" }}</span>
                            </span>
                            <span class="badge badge-sm badge-outline gap-1 font-mono">
                                <span class="opacity-60">{{ "{%" }}</span> for <span class="opacity-60">{{ "%}" }}</span>
                            </span>
                        </div>
                    </div>

                    <div class="space-y-2 max-h-96 overflow-y-auto pr-2" x-data="{ expanded: { user: true, site: false, job: false, event: false, blog: false, sponsor: false, utils: false } }">
                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.user" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-primary badge-sm mr-2">★</span>
                                User (recipient)
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ user.username }}' }}">user.username</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ user.email }}' }}">user.email</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ user.first_name }}' }}">user.first_name</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ user.last_name }}' }}">user.last_name</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ user.display_name }}' }}">user.display_name</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ user.is_staff }}' }}">user.is_staff</button>
                                </div>
                            </div>
                        </div>

                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.site" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-primary badge-sm mr-2">★</span>
                                Site Info
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ site_name }}' }}">site_name</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ site_url }}' }}">site_url</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ support_email }}' }}">support_email</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ unsubscribe_url }}' }}">unsubscribe_url</button>
                                </div>
                            </div>
                        </div>

                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.job" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-secondary badge-sm mr-2">Jobs</span>
                                Job Listings
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.title }}' }}">job.title</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.company }}' }}">job.company</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.location }}' }}">job.location</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.job_type }}' }}">job.job_type</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.url }}' }}">job.url</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.description }}' }}">job.description</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.status }}' }}">job.status</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ job.created_at }}' }}">job.created_at</button>
                                </div>
                            </div>
                        </div>

                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.event" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-accent badge-sm mr-2">Events</span>
                                Events
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.title }}' }}">event.title</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.description }}' }}">event.description</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.location }}' }}">event.location</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.venue }}' }}">event.venue</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.start_date }}' }}">event.start_date</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.end_date }}' }}">event.end_date</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.url }}' }}">event.url</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ event.calendar_type }}' }}">event.calendar_type</button>
                                </div>
                            </div>
                        </div>

                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.blog" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-info badge-sm mr-2">Blog</span>
                                Blog Posts
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ post.title }}' }}">post.title</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ post.slug }}' }}">post.slug</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ post.excerpt }}' }}">post.excerpt</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ post.author.username }}' }}">post.author.username</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ post.published_at }}' }}">post.published_at</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ post.url }}' }}">post.url</button>
                                </div>
                            </div>
                        </div>

                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.sponsor" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-warning badge-sm mr-2">$</span>
                                Sponsors
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ sponsor.name }}' }}">sponsor.name</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ sponsor.level }}' }}">sponsor.level</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ sponsor.website }}' }}">sponsor.website</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ sponsor.description }}' }}">sponsor.description</button>
                                </div>
                            </div>
                        </div>

                        <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                            <input type="checkbox" x-model="expanded.utils" />
                            <div class="collapse-title font-semibold text-sm py-2 min-h-0">
                                <span class="badge badge-ghost badge-sm mr-2">⚙</span>
                                Utilities
                            </div>
                            <div class="collapse-content text-xs">
                                <div class="grid grid-cols-1 gap-1 pt-2">
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ current_date }}' }}">current_date</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ current_year }}' }}">current_year</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ action_url }}' }}">action_url</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ verification_code }}' }}">verification_code</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ reset_link }}' }}">reset_link</button>
                                    <button type="button" class="var-copy btn btn-ghost btn-xs justify-start font-mono" data-var="{{ '{{ confirmation_link }}' }}">confirmation_link</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-xs text-base-content/50 mt-2">
                        <span class="badge badge-primary badge-xs">★</span> = commonly used in most templates
                    </div>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body">
                <h2 class="card-title text-python-blue">Email Content</h2>

                <div class="alert alert-info mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="text-sm">
                        <p class="font-semibold mb-1">Plain Text vs HTML</p>
                        <ul class="list-disc list-inside text-xs space-y-0.5">
                            <li><strong>Plain Text</strong> (required) — Fallback for old email clients, screen readers, and users who disable HTML</li>
                            <li><strong>HTML</strong> (optional) — Rich formatting with colors, bold, links. Most recipients see this version</li>
                            <li>Both are sent together — the recipient's email client chooses which to display</li>
                        </ul>
                    </div>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-semibold">Subject Line</span>
                        <span class="label-text-alt text-error">Required</span>
                    </label>
                    <input
                        type="text"
                        name="subject"
                        value="{{ template.subject if template else '' }}"
                        class="input input-bordered font-mono"
                        placeholder="Your job '{{ "{{ job.title }}" }}' has been approved!"
                        required
                    />
                    <label class="label">
                        <span class="label-text-alt">Supports Jinja2 variables</span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-semibold">Plain Text Content</span>
                        <span class="label-text-alt text-error">Required</span>
                    </label>
                    <textarea
                        name="content_text"
                        class="textarea textarea-bordered h-64 font-mono text-sm"
                        placeholder="Hello {{ '{{ user.username }}' }},&#10;&#10;Your job posting has been approved!&#10;&#10;Best regards,&#10;The Python.org Team"
                        required
                    >{{ template.content_text if template else '' }}</textarea>
                    <label class="label">
                        <span class="label-text-alt">Fallback for email clients that don't support HTML</span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-semibold">HTML Content</span>
                        <span class="label-text-alt">Optional but recommended</span>
                    </label>
                    <textarea
                        name="content_html"
                        id="content_html"
                        class="textarea textarea-bordered h-64 font-mono text-sm"
                        placeholder="<p>Hello <strong>{{ '{{ user.username }}' }}</strong>,</p>&#10;<p>Your job posting has been approved!</p>"
                    >{{ template.content_html if template and template.content_html != 'None' else '' }}</textarea>
                    <label class="label">
                        <span class="label-text-alt">Rich HTML email content — most recipients will see this version</span>
                    </label>
                </div>

                <div id="content-status" class="mt-2">
                    {% if template and template.content_html and template.content_html != 'None' %}
                    <div class="alert alert-success py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-sm">This template has both plain text and HTML — best practice for email delivery.</span>
                    </div>
                    {% elif template %}
                    <div class="alert alert-warning py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        <span class="text-sm">Consider adding HTML content for better formatting in modern email clients.</span>
                    </div>
                    {% else %}
                    <div class="alert py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-sm">Tip: Add HTML content for rich formatting, or leave empty for plain text only.</span>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="flex gap-4 justify-end">
            <button
                type="button"
                class="btn btn-ghost gap-2"
                hx-post="{% if template %}/admin/email/templates/{{ template.id }}/preview{% else %}/admin/email/templates/preview{% endif %}"
                hx-target="#template_preview_content"
                hx-swap="innerHTML"
                hx-include="[name='subject'],[name='content_text'],[name='content_html']"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Preview
            </button>
            <button type="submit" class="btn btn-primary gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {% if template %}Update{% else %}Create{% endif %} Template
            </button>
        </div>
    </form>
</div>

<dialog id="template_preview_modal" class="modal">
    <div class="modal-box max-w-4xl">
        <form method="dialog" hx-boost="false">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
        </form>
        <div id="template_preview_content"></div>
    </div>
</dialog>
{% endblock %}

{% block extra_js %}
<script>
    document.body.addEventListener('htmx:afterSwap', function(evt) {
        if (evt.detail.target.id === 'template_preview_content') {
            template_preview_modal.showModal();
        }
    });

    document.querySelectorAll('.var-copy').forEach(function(btn) {
        btn.addEventListener('click', function() {
            const varText = this.getAttribute('data-var');
            navigator.clipboard.writeText(varText).then(function() {
                window.showToast('Copied: ' + varText, 'success', 2000);
            });
        });
    });
</script>
{% endblock %}
