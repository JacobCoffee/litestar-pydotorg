{% extends "base.html.jinja2" %}

{% block content %}
<div class="drawer lg:drawer-open">
    <input id="admin-drawer" type="checkbox" class="drawer-toggle" />

    <div class="drawer-side z-40">
        <label for="admin-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        {% include 'admin/partials/sidebar.html.jinja2' %}
    </div>

    <div class="drawer-content flex flex-col bg-base-100 min-h-screen">
        <div class="sticky top-0 z-30 flex h-16 w-full justify-between items-center bg-base-200 border-b border-base-300 px-6">
            <div class="flex items-center gap-4">
                <label for="admin-drawer" class="btn btn-square btn-ghost lg:hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </label>

                {% block breadcrumbs %}
                <div class="breadcrumbs text-sm hidden sm:block">
                    <ul>
                        <li><a href="/admin" class="python-link">Admin</a></li>
                        {% for crumb in admin_breadcrumbs %}
                        <li>
                            {% if crumb.url and not loop.last %}
                                <a href="{{ crumb.url }}" class="python-link">{{ crumb.title }}</a>
                            {% else %}
                                <span class="font-semibold">{{ crumb.title }}</span>
                            {% endif %}
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endblock %}
            </div>

            <div class="flex items-center gap-4">
                <a href="/" class="btn btn-ghost btn-sm gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    <span class="hidden sm:inline">View Site</span>
                </a>

                {% set current_user = request.scope.get('user') %}
                <div class="dropdown dropdown-end">
                    <label tabindex="0" class="btn btn-ghost btn-circle avatar placeholder">
                        <div class="bg-primary text-primary-content rounded-full w-10">
                            <span class="text-sm">{{ current_user.username[:2].upper() if current_user else 'AD' }}</span>
                        </div>
                    </label>
                    <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-50 p-2 shadow bg-base-200 rounded-box w-52">
                        <li class="menu-title">
                            <span>{{ current_user.username if current_user else 'Admin' }}</span>
                        </li>
                        <li><a href="/profile">Profile</a></li>
                        <li><a href="/auth/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <main class="flex-1 p-6">
            {% block admin_content %}{% endblock %}
        </main>
    </div>
</div>
{% endblock %}

{% block extra_css %}
<style>
    .drawer-side {
        scrollbar-width: thin;
        scrollbar-color: rgba(155, 155, 155, 0.5) transparent;
    }

    .drawer-side::-webkit-scrollbar {
        width: 6px;
    }

    .drawer-side::-webkit-scrollbar-track {
        background: transparent;
    }

    .drawer-side::-webkit-scrollbar-thumb {
        background-color: rgba(155, 155, 155, 0.5);
        border-radius: 20px;
    }

    [x-cloak] { display: none !important; }
</style>
{% endblock %}
