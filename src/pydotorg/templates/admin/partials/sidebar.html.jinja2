{% set current_user = request.scope.get('user') %}
<aside class="bg-base-200 text-base-content min-h-full w-80 border-r border-base-300">
    <div class="sticky top-0 bg-base-200 border-b border-base-300 px-4 py-6">
        <a href="/admin" class="flex items-center gap-3 px-2">
            <svg class="w-10 h-10" viewBox="0 0 110 110" xmlns="http://www.w3.org/2000/svg">
                <path d="M54.8 0C24.5 0 26.1 13.1 26.1 13.1l.1 13.6h29.1v4.1H17.4S0 28.5 0 55.1c0 26.6 15.2 25.7 15.2 25.7h9v-12.4s-.5-15.2 14.9-15.2h25.7s14.5.2 14.5-14V15.9S81.5 0 54.8 0zM39.3 9.2c2.6 0 4.7 2.1 4.7 4.7 0 2.6-2.1 4.7-4.7 4.7-2.6 0-4.7-2.1-4.7-4.7 0-2.6 2.1-4.7 4.7-4.7z" fill="#3776AB"/>
                <path d="M55.2 110c30.3 0 28.7-13.1 28.7-13.1l-.1-13.6H54.7v-4.1h37.9S110 81.5 110 54.9c0-26.6-15.2-25.7-15.2-25.7h-9v12.4s.5 15.2-14.9 15.2H45.2s-14.5-.2-14.5 14v23.3S28.5 110 55.2 110zm15.5-9.2c-2.6 0-4.7-2.1-4.7-4.7 0-2.6 2.1-4.7 4.7-4.7 2.6 0 4.7 2.1 4.7 4.7 0 2.6-2.1 4.7-4.7 4.7z" fill="#FFD43B"/>
            </svg>
            <div>
                <h2 class="text-lg font-bold text-python-blue">Admin Panel</h2>
                <p class="text-xs text-base-content/60">Python.org</p>
            </div>
        </a>
    </div>

    <ul class="menu p-4 gap-2">
        <li>
            <a
                href="/admin"
                class="{% if request.url.path == '/admin' %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Dashboard
            </a>
        </li>

        {% if current_user and current_user.is_superuser %}
        <li class="menu-title mt-4">
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                User Management
            </span>
        </li>
        <li>
            <a
                href="/admin/users"
                class="{% if request.url.path.startswith('/admin/users') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                All Users
            </a>
        </li>
        {% endif %}

        {% if current_user and current_user.is_superuser %}
        <li class="menu-title mt-4">
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Content
            </span>
        </li>
        <li>
            <a
                href="/admin/pages"
                class="{% if request.url.path.startswith('/admin/pages') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                Pages
            </a>
        </li>
        <li>
            <a
                href="/admin/blogs"
                class="{% if request.url.path.startswith('/admin/blogs') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                Blog Posts
            </a>
        </li>
        {% endif %}

        {% if current_user and (current_user.is_staff or current_user.is_superuser) %}
        <li class="menu-title mt-4">
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Moderation
            </span>
        </li>
        <li>
            <a
                href="/admin/jobs"
                class="{% if request.url.path.startswith('/admin/jobs') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Jobs
                {% if pending_jobs_count and pending_jobs_count > 0 %}
                <span class="badge badge-error badge-sm">{{ pending_jobs_count }}</span>
                {% endif %}
            </a>
        </li>
        <li>
            <a
                href="/admin/events"
                class="{% if request.url.path.startswith('/admin/events') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Events
                {% if pending_events_count and pending_events_count > 0 %}
                <span class="badge badge-error badge-sm">{{ pending_events_count }}</span>
                {% endif %}
            </a>
        </li>
        {% endif %}

        {% if current_user and current_user.is_superuser %}
        <li class="menu-title mt-4">
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Sponsors
            </span>
        </li>
        <li>
            <a
                href="/admin/sponsors"
                class="{% if request.url.path.startswith('/admin/sponsors') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                All Sponsors
            </a>
        </li>
        <li>
            <a
                href="/admin/sponsors?status=applied"
                class="{% if request.url.path == '/admin/sponsors' and request.query_params.get('status') == 'applied' %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Pending Applications
                {% if pending_sponsors_count and pending_sponsors_count > 0 %}
                <span class="badge badge-warning badge-sm">{{ pending_sponsors_count }}</span>
                {% endif %}
            </a>
        </li>
        {% endif %}

        {% if current_user and current_user.is_superuser %}
        <li class="menu-title mt-4">
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                System
            </span>
        </li>
        <li>
            <a
                href="/admin/settings"
                class="{% if request.url.path.startswith('/admin/settings') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                Settings
            </a>
        </li>
        <li>
            <a
                href="/admin/logs"
                class="{% if request.url.path.startswith('/admin/logs') %}active bg-primary text-primary-content{% endif %}"
                hx-boost="true"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Activity Logs
            </a>
        </li>
        <li>
            <a
                href="/admin/db/"
                class="{% if request.url.path.startswith('/admin/db') %}active bg-primary text-primary-content{% endif %}"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                </svg>
                Database Admin
            </a>
        </li>
        {% endif %}
    </ul>

    <div class="p-4 mt-auto border-t border-base-300">
        <div class="text-xs text-base-content/50 text-center">
            <p>Python.org Admin</p>
            <p class="mt-1">v1.0.0</p>
        </div>
    </div>
</aside>
