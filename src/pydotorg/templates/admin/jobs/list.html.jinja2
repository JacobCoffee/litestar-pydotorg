{% extends "admin/base.html.jinja2" %}

{% block title %}Job Moderation - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">Job Moderation</h1>
            <p class="text-base-content/70 mt-1">Review and approve job postings</p>
        </div>
    </div>

    <div class="flex gap-2">
        <a
            href="/admin/jobs"
            class="btn btn-sm {% if not request.query_params.get('status') %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            All Jobs
            {% if stats and stats.total_jobs %}
            <span class="badge badge-sm">{{ stats.total_jobs }}</span>
            {% endif %}
        </a>
        <a
            href="/admin/jobs?status=pending"
            class="btn btn-sm {% if request.query_params.get('status') == 'pending' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Pending
            {% if stats and stats.pending_jobs %}
            <span class="badge badge-warning badge-sm">{{ stats.pending_jobs }}</span>
            {% endif %}
        </a>
        <a
            href="/admin/jobs?status=approved"
            class="btn btn-sm {% if request.query_params.get('status') == 'approved' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Approved
        </a>
        <a
            href="/admin/jobs?status=rejected"
            class="btn btn-sm {% if request.query_params.get('status') == 'rejected' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Rejected
        </a>
    </div>

    {% include 'admin/jobs/partials/jobs_list.html.jinja2' %}
</div>

<dialog id="job_preview_modal" class="modal">
    <div class="modal-box max-w-4xl">
        <form method="dialog" hx-boost="false">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
        </form>
        <div id="job_preview_content">
        </div>
    </div>
</dialog>
{% endblock %}

{% block extra_js %}
<script>
    document.body.addEventListener('htmx:afterSwap', function(evt) {
        if (evt.detail.target.id === 'job_preview_content') {
            job_preview_modal.showModal();
        }
    });
</script>
{% endblock %}
