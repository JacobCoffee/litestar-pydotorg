{% extends "admin/base.html.jinja2" %}

{% block title %}Job Moderation - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">Job Moderation</h1>
            <p class="text-base-content/70 mt-1">Review and approve job postings</p>
        </div>
    </div>

    <div class="flex gap-2">
        <a
            href="/admin/jobs"
            class="btn btn-sm {% if not request.query_params.get('status') %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            All Jobs
            {% if stats and stats.total_jobs %}
            <span class="badge badge-sm">{{ stats.total_jobs }}</span>
            {% endif %}
        </a>
        <a
            href="/admin/jobs?status=pending"
            class="btn btn-sm {% if request.query_params.get('status') == 'pending' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Pending
            {% if stats and stats.pending_jobs %}
            <span class="badge badge-warning badge-sm">{{ stats.pending_jobs }}</span>
            {% endif %}
        </a>
        <a
            href="/admin/jobs?status=approved"
            class="btn btn-sm {% if request.query_params.get('status') == 'approved' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Approved
        </a>
        <a
            href="/admin/jobs?status=rejected"
            class="btn btn-sm {% if request.query_params.get('status') == 'rejected' %}btn-primary{% else %}btn-ghost{% endif %}"
            hx-boost="true"
        >
            Rejected
        </a>
    </div>

    <div id="jobs-list">
        {% if jobs %}
        <div class="space-y-4">
            {% for job in jobs %}
            {% include 'admin/jobs/partials/job_row.html.jinja2' %}
            {% endfor %}
        </div>

        {% if pagination and pagination.total > pagination.limit %}
        <div class="flex justify-center mt-6">
            <div class="join">
                {% if pagination.offset > 0 %}
                <button
                    class="join-item btn btn-sm"
                    hx-get="/admin/jobs?status={{ request.query_params.get('status', '') }}&limit={{ pagination.limit }}&offset={{ [0, pagination.offset - pagination.limit]|max }}"
                    hx-target="#jobs-list"
                    hx-swap="outerHTML"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Previous
                </button>
                {% endif %}

                {% set current_page = (pagination.offset // pagination.limit) + 1 %}
                {% set total_pages = (pagination.total // pagination.limit) + (1 if pagination.total % pagination.limit else 0) %}

                <button class="join-item btn btn-sm btn-active">
                    Page {{ current_page }} of {{ total_pages }}
                </button>

                {% if pagination.offset + pagination.limit < pagination.total %}
                <button
                    class="join-item btn btn-sm"
                    hx-get="/admin/jobs?status={{ request.query_params.get('status', '') }}&limit={{ pagination.limit }}&offset={{ pagination.offset + pagination.limit }}"
                    hx-target="#jobs-list"
                    hx-swap="outerHTML"
                >
                    Next
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </button>
                {% endif %}
            </div>
        </div>
        {% endif %}
        {% else %}
        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body text-center py-12">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <h3 class="text-xl font-bold mb-2">No Jobs Found</h3>
                <p class="text-base-content/60 mb-4">
                    {% if request.query_params.get('status') == 'pending' %}
                    All jobs have been reviewed!
                    {% else %}
                    There are no jobs matching your criteria
                    {% endif %}
                </p>
                <a href="/admin/jobs" class="btn btn-primary btn-sm">
                    View All Jobs
                </a>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<dialog id="job_preview_modal" class="modal">
    <div class="modal-box max-w-4xl">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
        </form>
        <div id="job_preview_content">
        </div>
    </div>
</dialog>
{% endblock %}

{% block extra_js %}
<script>
    document.body.addEventListener('htmx:afterSwap', function(evt) {
        if (evt.detail.target.id === 'job_preview_content') {
            job_preview_modal.showModal();
        }
    });
</script>
{% endblock %}
