<article
    id="job-{{ job.id }}"
    class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-all"
>
    <div class="card-body">
        <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
                <div class="flex items-start gap-3">
                    <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                            <h3 class="card-title text-xl text-python-blue">
                                {{ job.job_title }}
                            </h3>
                            {% if job.status.value == 'review' %}
                            <span class="badge badge-warning">Pending Review</span>
                            {% elif job.status.value == 'approved' %}
                            <span class="badge badge-success">Approved</span>
                            {% elif job.status.value == 'rejected' %}
                            <span class="badge badge-error">Rejected</span>
                            {% elif job.status.value == 'draft' %}
                            <span class="badge badge-ghost">Draft</span>
                            {% elif job.status.value == 'archived' %}
                            <span class="badge badge-neutral">Archived</span>
                            {% elif job.status.value == 'expired' %}
                            <span class="badge badge-neutral">Expired</span>
                            {% endif %}
                        </div>

                        <div class="flex flex-wrap items-center gap-3 text-sm text-base-content/70 mb-3">
                            {% if job.company_name %}
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                </svg>
                                {{ job.company_name }}
                            </span>
                            {% endif %}

                            {% if job.city or job.country %}
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                {{ job.city }}{% if job.city and job.country %}, {% endif %}{{ job.country }}
                            </span>
                            {% endif %}

                            {% if job.created %}
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                Posted {{ job.created.strftime('%b %d, %Y') }}
                            </span>
                            {% endif %}
                        </div>

                        <div class="flex flex-wrap gap-2 mb-3">
                            {% if job.telecommuting %}
                            <span class="badge badge-success badge-sm gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Remote
                            </span>
                            {% endif %}

                            {% if job.job_types %}
                                {% for job_type in job.job_types %}
                                <span class="badge badge-outline badge-sm">{{ job_type.name }}</span>
                                {% endfor %}
                            {% endif %}
                        </div>

                        {% if job.description %}
                        <p class="text-base-content/80 line-clamp-2 text-sm">
                            {{ job.description[:200] }}{% if job.description|length > 200 %}...{% endif %}
                        </p>
                        {% endif %}

                        {% if job.contact_email %}
                        <div class="mt-3 text-sm text-base-content/70">
                            <span class="font-semibold">Contact:</span> {{ job.contact_email }}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="flex flex-col gap-2 min-w-[120px]">
                <button
                    class="btn btn-sm btn-ghost gap-1"
                    hx-get="/admin/jobs/{{ job.id }}/preview"
                    hx-target="#job_preview_content"
                    hx-swap="innerHTML"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Preview
                </button>

                {% if job.status.value == 'review' %}
                <button
                    class="btn btn-success btn-sm gap-1"
                    hx-post="/admin/jobs/{{ job.id }}/approve"
                    hx-target="#job-{{ job.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Approve this job posting?"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Approve
                </button>

                <button
                    class="btn btn-error btn-sm gap-1"
                    hx-post="/admin/jobs/{{ job.id }}/reject"
                    hx-target="#job-{{ job.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Reject this job posting?"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Reject
                </button>
                {% elif job.status.value == 'approved' %}
                <button
                    class="btn btn-warning btn-sm gap-1"
                    hx-post="/admin/jobs/{{ job.id }}/reject"
                    hx-target="#job-{{ job.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Revoke approval for this job?"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Revoke
                </button>
                {% elif job.status.value == 'rejected' %}
                <button
                    class="btn btn-success btn-sm gap-1"
                    hx-post="/admin/jobs/{{ job.id }}/approve"
                    hx-target="#job-{{ job.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Re-approve this job posting?"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Approve
                </button>
                {% endif %}

                <button
                    class="btn btn-ghost btn-sm gap-1"
                    hx-delete="/admin/jobs/{{ job.id }}"
                    hx-target="#job-{{ job.id }}"
                    hx-swap="outerHTML swap:1s"
                    hx-confirm="Permanently delete this job posting?"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Delete
                </button>
            </div>
        </div>
    </div>
</article>
