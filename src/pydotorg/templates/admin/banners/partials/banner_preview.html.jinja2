{% set type_styles = {
    'info': 'bg-info text-info-content',
    'success': 'bg-success text-success-content',
    'warning': 'bg-warning text-warning-content',
    'error': 'bg-error text-error-content'
} %}
<div class="w-full {{ type_styles.get(banner.banner_type, 'bg-info text-info-content') }} py-3 px-4">
    <div class="container mx-auto flex items-center justify-between gap-4">
        <div class="flex items-center gap-3 flex-1 min-w-0">
            {% if banner.banner_type == 'info' %}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {% elif banner.banner_type == 'success' %}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {% elif banner.banner_type == 'warning' %}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            {% elif banner.banner_type == 'error' %}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {% endif %}
            <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 min-w-0">
                <span class="font-semibold">{{ banner.title }}</span>
                <span class="hidden sm:inline">â€”</span>
                <span class="truncate">{{ banner.message }}</span>
            </div>
        </div>
        <div class="flex items-center gap-2 shrink-0">
            {% if banner.link %}
            <a
                href="{{ banner.link }}"
                target="_blank"
                class="btn btn-sm btn-ghost"
            >
                {{ banner.link_text or 'Learn More' }}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
            </a>
            {% endif %}
            {% if banner.is_dismissible %}
            <button class="btn btn-sm btn-ghost btn-circle" disabled title="Dismiss (preview only)">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            {% endif %}
        </div>
    </div>
</div>
