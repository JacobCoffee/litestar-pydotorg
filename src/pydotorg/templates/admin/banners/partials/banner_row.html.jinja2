<div id="banner-row-{{ banner.id }}" class="card bg-base-100 shadow border border-base-300">
    <div class="card-body p-4">
        <div class="flex items-start justify-between gap-4">
            <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-2">
                    <h3 class="font-bold text-lg truncate">{{ banner.title }}</h3>
                    {% if banner.is_active %}
                    <span class="badge badge-success badge-sm">Active</span>
                    {% else %}
                    <span class="badge badge-ghost badge-sm">Inactive</span>
                    {% endif %}
                    {% if banner.is_sitewide %}
                    <span class="badge badge-info badge-sm">Sitewide</span>
                    {% endif %}
                </div>
                <p class="text-sm text-base-content/70 mb-2">
                    <span class="font-medium">Slug:</span> {{ banner.name }}
                </p>
                <p class="text-sm text-base-content/60 line-clamp-2">{{ banner.message }}</p>
                <div class="flex flex-wrap gap-2 mt-3">
                    {% set type_colors = {
                        'info': 'badge-info',
                        'success': 'badge-success',
                        'warning': 'badge-warning',
                        'error': 'badge-error'
                    } %}
                    <span class="badge {{ type_colors.get(banner.banner_type, 'badge-ghost') }} badge-sm">
                        {{ banner.banner_type | title }}
                    </span>
                    {% if banner.is_dismissible %}
                    <span class="badge badge-outline badge-sm">Dismissible</span>
                    {% endif %}
                    {% if banner.start_date %}
                    <span class="badge badge-outline badge-sm">
                        From {{ banner.start_date.strftime('%b %d, %Y') }}
                    </span>
                    {% endif %}
                    {% if banner.end_date %}
                    <span class="badge badge-outline badge-sm">
                        Until {{ banner.end_date.strftime('%b %d, %Y') }}
                    </span>
                    {% endif %}
                </div>
            </div>
            <div class="flex items-center gap-2">
                <button
                    class="btn btn-ghost btn-sm btn-square"
                    hx-get="/admin/banners/{{ banner.id }}/preview"
                    hx-target="#banner_preview_content"
                    hx-swap="innerHTML"
                    title="Preview"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                </button>
                <button
                    class="btn btn-ghost btn-sm btn-square"
                    hx-post="/admin/banners/{{ banner.id }}/toggle"
                    hx-target="#banner-row-{{ banner.id }}"
                    hx-swap="outerHTML"
                    title="{% if banner.is_active %}Deactivate{% else %}Activate{% endif %}"
                >
                    {% if banner.is_active %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                    </svg>
                    {% endif %}
                </button>
                <a
                    href="/admin/banners/{{ banner.id }}/edit"
                    class="btn btn-ghost btn-sm btn-square"
                    hx-boost="true"
                    title="Edit"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                </a>
                <button
                    class="btn btn-ghost btn-sm btn-square text-error"
                    hx-delete="/admin/banners/{{ banner.id }}"
                    hx-target="#banner-row-{{ banner.id }}"
                    hx-swap="outerHTML swap:1s"
                    hx-confirm="Are you sure you want to delete this banner?"
                    title="Delete"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>
