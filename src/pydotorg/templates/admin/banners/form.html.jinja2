{% extends "admin/base.html.jinja2" %}

{% block title %}{% if is_new %}Create New Banner{% else %}Edit Banner - {{ banner.name }}{% endif %} - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center gap-4">
        <a href="/admin/banners" class="btn btn-ghost btn-sm gap-1" hx-boost="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Banners
        </a>
    </div>

    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body">
            <h1 class="text-3xl font-bold text-python-blue mb-6">
                {% if is_new %}Create New Banner{% else %}Edit Banner{% endif %}
            </h1>

            <form
                {% if is_new %}
                hx-post="/admin/banners/"
                {% else %}
                hx-put="/admin/banners/{{ banner.id }}"
                {% endif %}
                hx-swap="none"
                class="space-y-6"
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Name (Slug) <span class="text-error">*</span></span>
                        </label>
                        <input
                            type="text"
                            name="name"
                            class="input input-bordered"
                            placeholder="e.g., pycon-2025-announcement"
                            value="{{ banner.name if banner else '' }}"
                            required
                            pattern="[a-z0-9\-]+"
                            title="Lowercase letters, numbers, and hyphens only"
                        >
                        <label class="label">
                            <span class="label-text-alt text-base-content/60">Unique identifier (lowercase, hyphens)</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Title <span class="text-error">*</span></span>
                        </label>
                        <input
                            type="text"
                            name="title"
                            class="input input-bordered"
                            placeholder="e.g., PyCon US 2025"
                            value="{{ banner.title if banner else '' }}"
                            required
                        >
                        <label class="label">
                            <span class="label-text-alt text-base-content/60">Displayed as the banner heading</span>
                        </label>
                    </div>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Message <span class="text-error">*</span></span>
                    </label>
                    <textarea
                        name="message"
                        class="textarea textarea-bordered h-24"
                        placeholder="The announcement message to display..."
                        required
                    >{{ banner.message if banner else '' }}</textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Link URL</span>
                        </label>
                        <input
                            type="url"
                            name="link"
                            class="input input-bordered"
                            placeholder="https://example.com"
                            value="{{ banner.link if banner and banner.link else '' }}"
                        >
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Link Text</span>
                        </label>
                        <input
                            type="text"
                            name="link_text"
                            class="input input-bordered"
                            placeholder="Learn More"
                            value="{{ banner.link_text if banner and banner.link_text else '' }}"
                        >
                        <label class="label">
                            <span class="label-text-alt text-base-content/60">Text for the call-to-action button</span>
                        </label>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Banner Type</span>
                        </label>
                        <select name="banner_type" class="select select-bordered">
                            <option value="info" {% if banner and banner.banner_type == 'info' %}selected{% elif not banner %}selected{% endif %}>Info (Blue)</option>
                            <option value="success" {% if banner and banner.banner_type == 'success' %}selected{% endif %}>Success (Green)</option>
                            <option value="warning" {% if banner and banner.banner_type == 'warning' %}selected{% endif %}>Warning (Yellow)</option>
                            <option value="error" {% if banner and banner.banner_type == 'error' %}selected{% endif %}>Error (Red)</option>
                        </select>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Target</span>
                        </label>
                        <select name="target" class="select select-bordered">
                            <option value="frontend" {% if banner and banner.target == 'frontend' %}selected{% elif not banner %}selected{% endif %}>Frontend (Web Pages)</option>
                            <option value="api" {% if banner and banner.target == 'api' %}selected{% endif %}>API (Deprecation Notices)</option>
                        </select>
                        <label class="label">
                            <span class="label-text-alt text-base-content/60">Where to show when not sitewide</span>
                        </label>
                    </div>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Paths (Optional)</span>
                    </label>
                    <input
                        type="text"
                        name="paths"
                        class="input input-bordered"
                        placeholder="/downloads, /events, /about"
                        value="{{ banner.paths if banner and banner.paths else '' }}"
                    >
                    <label class="label">
                        <span class="label-text-alt text-base-content/60">Comma-separated path prefixes. Leave empty to show on all routes for the target.</span>
                    </label>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Start Date</span>
                        </label>
                        <input
                            type="date"
                            name="start_date"
                            class="input input-bordered"
                            value="{{ banner.start_date.strftime('%Y-%m-%d') if banner and banner.start_date else '' }}"
                        >
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">End Date</span>
                        </label>
                        <input
                            type="date"
                            name="end_date"
                            class="input input-bordered"
                            value="{{ banner.end_date.strftime('%Y-%m-%d') if banner and banner.end_date else '' }}"
                        >
                    </div>
                </div>

                <div class="divider">Options</div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <label class="flex items-start gap-3 cursor-pointer p-3 rounded-lg hover:bg-base-200 transition-colors">
                        <input
                            type="checkbox"
                            name="is_active"
                            class="checkbox checkbox-primary mt-0.5"
                            {% if banner and banner.is_active %}checked{% endif %}
                        >
                        <div>
                            <span class="font-medium">Active</span>
                            <p class="text-xs text-base-content/60">Banner will be displayed when active</p>
                        </div>
                    </label>

                    <label class="flex items-start gap-3 cursor-pointer p-3 rounded-lg hover:bg-base-200 transition-colors">
                        <input
                            type="checkbox"
                            name="is_dismissible"
                            class="checkbox checkbox-primary mt-0.5"
                            {% if (banner and banner.is_dismissible) or not banner %}checked{% endif %}
                        >
                        <div>
                            <span class="font-medium">Dismissible</span>
                            <p class="text-xs text-base-content/60">Users can dismiss the banner</p>
                        </div>
                    </label>

                    <label class="flex items-start gap-3 cursor-pointer p-3 rounded-lg hover:bg-base-200 transition-colors">
                        <input
                            type="checkbox"
                            name="is_sitewide"
                            class="checkbox checkbox-primary mt-0.5"
                            {% if (banner and banner.is_sitewide) or not banner %}checked{% endif %}
                        >
                        <div>
                            <span class="font-medium">Sitewide</span>
                            <p class="text-xs text-base-content/60">Display on all pages</p>
                        </div>
                    </label>
                </div>

                <div class="divider"></div>

                <div class="flex gap-3">
                    <button type="submit" class="btn btn-primary">
                        {% if is_new %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Create Banner
                        {% else %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Save Changes
                        {% endif %}
                    </button>
                    <a href="/admin/banners" class="btn btn-ghost" hx-boost="true">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
