<div class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-all">
    <div class="card-body">
        <div class="flex items-start justify-between">
            <div class="flex-1">
                <h3 class="card-title text-python-blue flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    {{ queue.name }}
                </h3>

                <div class="stats stats-vertical shadow mt-4 bg-base-200">
                    <div class="stat py-3">
                        <div class="stat-title text-xs">Workers</div>
                        <div class="stat-value text-lg {% if queue.workers > 0 %}text-success{% else %}text-warning{% endif %}">
                            {{ queue.workers }}
                        </div>
                        <div class="stat-desc text-xs">
                            {% if queue.workers > 0 %}
                            <span class="text-success">Active</span>
                            {% else %}
                            <span class="text-warning">Offline</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="stat py-3">
                        <div class="stat-title text-xs">Queued</div>
                        <div class="stat-value text-lg text-info">{{ queue.queued }}</div>
                        <div class="stat-desc text-xs">Waiting to process</div>
                    </div>

                    <div class="stat py-3">
                        <div class="stat-title text-xs">Active</div>
                        <div class="stat-value text-lg text-warning">{{ queue.active }}</div>
                        <div class="stat-desc text-xs">Currently running</div>
                    </div>

                    <div class="stat py-3">
                        <div class="stat-title text-xs">Scheduled</div>
                        <div class="stat-value text-lg text-primary">{{ queue.scheduled }}</div>
                        <div class="stat-desc text-xs">Future jobs</div>
                    </div>
                </div>

                <div class="mt-4 flex gap-4 text-sm">
                    <div class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-base-content/70">{{ queue.complete }} completed</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        <span class="text-base-content/70">{{ queue.failed }} failed</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-actions justify-end mt-4">
            <a
                href="/admin/tasks/queues/{{ queue.name }}"
                class="btn btn-primary btn-sm gap-2"
                hx-boost="true"
            >
                View Details
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </div>
</div>
