{% extends "admin/base.html.jinja2" %}
{% from "admin/partials/stats_card.html.jinja2" import stats_card %}

{% block title %}{{ queue_name|title }} Queue - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6"
     hx-get="/admin/tasks/queues/{{ queue_name }}"
     hx-trigger="every 10s"
     hx-select="#queue-detail"
     hx-swap="outerHTML"
     hx-indicator="#refresh-indicator">
    <div id="queue-detail">
        <div class="flex items-center gap-4">
            <a href="/admin/tasks" class="btn btn-ghost btn-sm gap-2" hx-boost="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Back to Overview
            </a>
        </div>

        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-python-blue">{{ queue_name|title }} Queue</h1>
                <p class="text-base-content/70 mt-1">Monitor and manage queue jobs</p>
            </div>
            <div id="refresh-indicator" class="htmx-indicator loading loading-spinner loading-md text-primary"></div>
        </div>

        {% set queue = queues[0] if queues else None %}
        {% if queue %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {{ stats_card(
                title='Active Workers',
                value=queue.workers,
                icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>',
                color='success'
            ) }}

            {{ stats_card(
                title='Queued',
                value=queue.queued,
                icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
                color='info'
            ) }}

            {{ stats_card(
                title='Active',
                value=queue.active,
                icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>',
                color='warning'
            ) }}

            {{ stats_card(
                title='Scheduled',
                value=queue.scheduled,
                icon='<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>',
                color='primary'
            ) }}
        </div>
        {% endif %}

        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body">
                <div role="tablist" class="tabs tabs-boxed bg-base-200 mb-4">
                    <a
                        role="tab"
                        class="tab {% if not request.query_params.get('status') %}tab-active{% endif %}"
                        href="/admin/tasks/queues/{{ queue_name }}"
                        hx-boost="true"
                    >
                        All Jobs
                        {% if jobs|length > 0 %}
                        <span class="badge badge-sm ml-2">{{ jobs|length }}</span>
                        {% endif %}
                    </a>
                    <a
                        role="tab"
                        class="tab {% if request.query_params.get('status') == 'queued' %}tab-active{% endif %}"
                        href="/admin/tasks/queues/{{ queue_name }}?status=queued"
                        hx-boost="true"
                    >
                        Queued
                        {% if queue %}
                        <span class="badge badge-info badge-sm ml-2">{{ queue.queued }}</span>
                        {% endif %}
                    </a>
                    <a
                        role="tab"
                        class="tab {% if request.query_params.get('status') == 'active' %}tab-active{% endif %}"
                        href="/admin/tasks/queues/{{ queue_name }}?status=active"
                        hx-boost="true"
                    >
                        Active
                        {% if queue %}
                        <span class="badge badge-warning badge-sm ml-2">{{ queue.active }}</span>
                        {% endif %}
                    </a>
                    <a
                        role="tab"
                        class="tab {% if request.query_params.get('status') == 'failed' %}tab-active{% endif %}"
                        href="/admin/tasks/queues/{{ queue_name }}?status=failed"
                        hx-boost="true"
                    >
                        Failed
                        {% if queue %}
                        <span class="badge badge-error badge-sm ml-2">{{ queue.failed }}</span>
                        {% endif %}
                    </a>
                    <a
                        role="tab"
                        class="tab {% if request.query_params.get('status') == 'complete' %}tab-active{% endif %}"
                        href="/admin/tasks/queues/{{ queue_name }}?status=complete"
                        hx-boost="true"
                    >
                        Complete
                        {% if queue %}
                        <span class="badge badge-success badge-sm ml-2">{{ queue.complete }}</span>
                        {% endif %}
                    </a>
                </div>

                {% if jobs %}
                <div class="overflow-x-auto">
                    <table class="table table-zebra">
                        <thead>
                            <tr>
                                <th>Job ID</th>
                                <th>Function</th>
                                <th>Status</th>
                                <th>Started</th>
                                <th>Duration</th>
                                <th>Attempts</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for job in jobs %}
                            {% include 'admin/tasks/partials/job_row.html.jinja2' %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-12">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <h3 class="text-xl font-bold mb-2">No Jobs Found</h3>
                    <p class="text-base-content/60">
                        {% if request.query_params.get('status') %}
                        No {{ request.query_params.get('status') }} jobs in this queue
                        {% else %}
                        This queue is empty
                        {% endif %}
                    </p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_css %}
<style>
    .htmx-indicator {
        opacity: 0;
        transition: opacity 200ms ease-in;
    }
    .htmx-request .htmx-indicator {
        opacity: 1;
    }
    .htmx-request.htmx-indicator {
        opacity: 1;
    }
</style>
{% endblock %}
