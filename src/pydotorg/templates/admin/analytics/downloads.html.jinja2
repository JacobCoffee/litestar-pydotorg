{% extends "admin/base.html.jinja2" %}

{% block title %}Download Analytics - Python.org Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-python-blue">{{ title }}</h1>
            <p class="text-base-content/70 mt-1">{{ description }}</p>
        </div>
        <div class="flex gap-2">
            <button class="btn btn-outline btn-sm gap-2" onclick="refreshData()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Refresh
            </button>
        </div>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        <div class="stat bg-base-100 shadow-lg rounded-box border border-base-300">
            <div class="stat-figure text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
            </div>
            <div class="stat-title">Total Downloads</div>
            <div class="stat-value text-primary">{{ "{:,}".format(stats.total_downloads) }}</div>
            <div class="stat-desc">All time</div>
        </div>

        <div class="stat bg-base-100 shadow-lg rounded-box border border-base-300">
            <div class="stat-figure text-success">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
            </div>
            <div class="stat-title">This Week</div>
            <div class="stat-value text-success">{{ "{:,}".format(stats.downloads_this_week) }}</div>
            <div class="stat-desc">Last 7 days</div>
        </div>

        <div class="stat bg-base-100 shadow-lg rounded-box border border-base-300">
            <div class="stat-figure text-warning">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
            <div class="stat-title">This Month</div>
            <div class="stat-value text-warning">{{ "{:,}".format(stats.downloads_this_month) }}</div>
            <div class="stat-desc">Last 30 days</div>
        </div>

        <div class="stat bg-base-100 shadow-lg rounded-box border border-base-300">
            <div class="stat-figure text-info">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
            <div class="stat-title">Top Releases</div>
            <div class="stat-value text-info text-2xl">{{ stats.top_releases | length }}</div>
            <div class="stat-desc">With downloads</div>
        </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                    </svg>
                    Downloads by Python Version
                </h2>
                <div class="overflow-x-auto">
                    <table class="table table-zebra">
                        <thead>
                            <tr>
                                <th>Version</th>
                                <th class="text-right">Downloads</th>
                                <th class="text-right">%</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set total_version = stats.downloads_by_version | sum(attribute='count') %}
                            {% for item in stats.downloads_by_version %}
                            <tr>
                                <td>
                                    <span class="badge badge-lg {% if item.version == '3' %}badge-primary{% elif item.version == '2' %}badge-warning{% else %}badge-ghost{% endif %}">
                                        Python {{ item.version }}
                                    </span>
                                </td>
                                <td class="text-right font-mono">{{ "{:,}".format(item.count) }}</td>
                                <td class="text-right">
                                    {% if total_version > 0 %}
                                    {{ "%.1f" | format((item.count / total_version) * 100) }}%
                                    {% else %}
                                    0%
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="3" class="text-center text-base-content/50">No download data yet</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Downloads by Operating System
                </h2>
                <div class="overflow-x-auto">
                    <table class="table table-zebra">
                        <thead>
                            <tr>
                                <th>Operating System</th>
                                <th class="text-right">Downloads</th>
                                <th class="text-right">%</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set total_os = stats.downloads_by_os | sum(attribute='count') %}
                            {% for item in stats.downloads_by_os %}
                            <tr>
                                <td>
                                    <span class="flex items-center gap-2">
                                        {% if 'windows' in item.os | lower %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-info" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
                                        </svg>
                                        {% elif 'mac' in item.os | lower or 'darwin' in item.os | lower %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                                        </svg>
                                        {% elif 'linux' in item.os | lower %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-warning" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M12.504 0c-.155 0-.311.002-.465.006-1.482.051-2.933.538-4.16 1.474-1.232.942-2.238 2.326-2.885 4.048-.648 1.72-.886 3.665-.728 5.63.16 2.006.667 4.027 1.497 5.824.415.9.919 1.751 1.518 2.531.597.779 1.288 1.487 2.067 2.089.774.6 1.64 1.089 2.564 1.425.923.336 1.91.514 2.906.514.996 0 1.983-.178 2.906-.514.924-.336 1.79-.825 2.564-1.425.779-.602 1.47-1.31 2.067-2.089.599-.78 1.103-1.631 1.518-2.531.83-1.797 1.337-3.818 1.497-5.824.158-1.965-.08-3.91-.728-5.63-.647-1.722-1.653-3.106-2.885-4.048-1.227-.936-2.678-1.423-4.16-1.474-.154-.004-.31-.006-.465-.006zm-.001 1.468c.138 0 .276.002.413.006 1.242.042 2.456.45 3.465 1.221 1.012.773 1.82 1.908 2.346 3.303.527 1.396.731 2.984.607 4.533-.125 1.57-.541 3.13-1.215 4.59-.337.731-.745 1.412-1.225 2.034-.48.624-1.029 1.181-1.65 1.64-.618.458-1.31.817-2.046 1.072-.734.254-1.52.384-2.308.384-.788 0-1.574-.13-2.308-.384-.736-.255-1.428-.614-2.046-1.072-.621-.459-1.17-1.016-1.65-1.64-.48-.622-.888-1.303-1.225-2.034-.674-1.46-1.09-3.02-1.215-4.59-.124-1.549.08-3.137.607-4.533.526-1.395 1.334-2.53 2.346-3.303 1.009-.771 2.223-1.179 3.465-1.221.137-.004.275-.006.413-.006z"/>
                                        </svg>
                                        {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                        </svg>
                                        {% endif %}
                                        {{ item.os }}
                                    </span>
                                </td>
                                <td class="text-right font-mono">{{ "{:,}".format(item.count) }}</td>
                                <td class="text-right">
                                    {% if total_os > 0 %}
                                    {{ "%.1f" | format((item.count / total_os) * 100) }}%
                                    {% else %}
                                    0%
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="3" class="text-center text-base-content/50">No download data yet</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body">
            <h2 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
                Top Downloaded Releases
            </h2>
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Release</th>
                            <th>Version</th>
                            <th class="text-right">Downloads</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for release in stats.top_releases %}
                        <tr>
                            <td class="font-bold">{{ loop.index }}</td>
                            <td>
                                <a href="/downloads/release/{{ release.name | lower | replace('.', '-') }}/" class="link link-primary">
                                    Python {{ release.name }}
                                </a>
                            </td>
                            <td>
                                <span class="badge {% if release.version == '3' %}badge-primary{% elif release.version == '2' %}badge-warning{% else %}badge-ghost{% endif %}">
                                    Python {{ release.version }}
                                </span>
                            </td>
                            <td class="text-right font-mono">{{ "{:,}".format(release.count) }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-base-content/50">No download data yet</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body">
            <h2 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Top Downloaded Files
            </h2>
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>File</th>
                            <th>Release</th>
                            <th>OS</th>
                            <th class="text-right">Downloads</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for file in stats.top_files %}
                        <tr>
                            <td class="font-bold">{{ loop.index }}</td>
                            <td class="font-mono text-sm">{{ file.name }}</td>
                            <td>{{ file.release }}</td>
                            <td>
                                <span class="badge badge-outline">{{ file.os }}</span>
                            </td>
                            <td class="text-right font-mono">{{ "{:,}".format(file.count) }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-base-content/50">No download data yet</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% if stats.downloads_by_day %}
    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body">
            <h2 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                </svg>
                Downloads Over Time (Last 30 Days)
            </h2>
            <div class="h-64" id="downloads-chart">
                <div class="flex flex-wrap gap-1 h-full items-end">
                    {% set max_count = stats.downloads_by_day | map(attribute='count') | max %}
                    {% for day in stats.downloads_by_day %}
                    <div class="flex-1 min-w-[8px] bg-primary rounded-t tooltip tooltip-top"
                         data-tip="{{ day.date }}: {{ "{:,}".format(day.count) }} downloads"
                         style="height: {% if max_count > 0 %}{{ (day.count / max_count * 100) | int }}%{% else %}0%{% endif %}; min-height: 4px;">
                    </div>
                    {% endfor %}
                </div>
                <div class="flex justify-between text-xs text-base-content/50 mt-2">
                    {% if stats.downloads_by_day %}
                    <span>{{ stats.downloads_by_day[0].date }}</span>
                    <span>{{ stats.downloads_by_day[-1].date }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="alert alert-info shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
            <h3 class="font-bold">About Download Statistics</h3>
            <p class="text-sm">Statistics are tracked via Redis counters and periodically flushed to the database for long-term storage. Real-time counts may differ slightly from aggregated totals.</p>
        </div>
    </div>
</div>

<script>
function refreshData() {
    window.location.reload();
}
</script>
{% endblock %}
