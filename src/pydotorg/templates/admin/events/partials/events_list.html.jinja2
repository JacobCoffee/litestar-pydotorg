<div id="events-list">
    {% if events %}
    <div class="space-y-4">
        {% for event in events %}
        {% include 'admin/events/partials/event_row.html.jinja2' %}
        {% endfor %}
    </div>

    {% if pagination and pagination.total > pagination.limit %}
    <div class="flex justify-center mt-6">
        <div class="join">
            {% if pagination.offset > 0 %}
            <button
                class="join-item btn btn-sm"
                hx-get="/admin/events?filter={{ request.query_params.get('filter', '') }}&calendar_id={{ request.query_params.get('calendar_id', '') }}&limit={{ pagination.limit }}&offset={{ [0, pagination.offset - pagination.limit]|max }}"
                hx-target="#events-list"
                hx-swap="outerHTML"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Previous
            </button>
            {% endif %}

            {% set current_page = (pagination.offset // pagination.limit) + 1 %}
            {% set total_pages = (pagination.total // pagination.limit) + (1 if pagination.total % pagination.limit else 0) %}

            <button class="join-item btn btn-sm btn-active">
                Page {{ current_page }} of {{ total_pages }}
            </button>

            {% if pagination.offset + pagination.limit < pagination.total %}
            <button
                class="join-item btn btn-sm"
                hx-get="/admin/events?filter={{ request.query_params.get('filter', '') }}&calendar_id={{ request.query_params.get('calendar_id', '') }}&limit={{ pagination.limit }}&offset={{ pagination.offset + pagination.limit }}"
                hx-target="#events-list"
                hx-swap="outerHTML"
            >
                Next
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
            {% endif %}
        </div>
    </div>
    {% endif %}
    {% else %}
    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body text-center py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="text-xl font-bold mb-2">No Events Found</h3>
            <p class="text-base-content/60 mb-4">
                {% if request.query_params.get('filter') == 'featured' %}
                No featured events found!
                {% elif request.query_params.get('filter') == 'upcoming' %}
                No upcoming events found!
                {% else %}
                There are no events matching your criteria
                {% endif %}
            </p>
            <a href="/admin/events" class="btn btn-primary btn-sm">
                View All Events
            </a>
        </div>
    </div>
    {% endif %}
</div>
