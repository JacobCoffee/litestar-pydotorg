<div id="event-{{ event.id }}" class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-shadow">
    <div class="card-body p-4">
        <div class="flex items-start justify-between gap-4">
            <div class="flex items-start gap-4 flex-1">
                <div class="avatar placeholder">
                    <div class="bg-python-blue text-white rounded-lg w-16 h-16">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                </div>

                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 flex-wrap">
                        <h3 class="font-bold text-lg truncate">{{ event.title }}</h3>
                        {% if event.featured %}
                        <span class="badge badge-warning badge-sm">Featured</span>
                        {% endif %}
                    </div>

                    <div class="flex items-center gap-4 text-sm text-base-content/60 mt-1">
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            {{ event.calendar.name }}
                        </span>
                        {% if event.venue %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            {{ event.venue.name }}
                        </span>
                        {% endif %}
                        {% if event.occurrences %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {{ event.occurrences|length }} occurrence{{ 's' if event.occurrences|length != 1 }}
                        </span>
                        {% endif %}
                    </div>

                    {% if event.categories %}
                    <div class="flex gap-1 mt-2 flex-wrap">
                        {% for category in event.categories[:3] %}
                        <span class="badge badge-outline badge-sm">{{ category.name }}</span>
                        {% endfor %}
                        {% if event.categories|length > 3 %}
                        <span class="badge badge-ghost badge-sm">+{{ event.categories|length - 3 }} more</span>
                        {% endif %}
                    </div>
                    {% endif %}

                    {% if event.occurrences and event.occurrences[0] %}
                    <div class="text-xs text-base-content/50 mt-1">
                        {% set occurrence = event.occurrences[0] %}
                        {% if occurrence.all_day %}
                        {{ occurrence.dt_start.strftime('%b %d, %Y') }} - All Day
                        {% else %}
                        {{ occurrence.dt_start.strftime('%b %d, %Y at %I:%M %p') }}
                        {% endif %}
                    </div>
                    {% endif %}

                    <div class="flex items-center gap-4 text-xs text-base-content/40 mt-2 pt-2 border-t border-base-200">
                        {% if event.created_at %}
                        <span title="Date added">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                            </svg>
                            Added {{ event.created_at.strftime('%b %d, %Y') }}
                        </span>
                        {% endif %}
                        {% if event.updated_at and event.updated_at != event.created_at %}
                        <span title="Last modified">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Modified {{ event.updated_at.strftime('%b %d, %Y') }}
                        </span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="flex flex-col gap-2">
                <div class="flex gap-2">
                    <button
                        class="btn btn-ghost btn-sm"
                        hx-get="/admin/events/{{ event.id }}/preview"
                        hx-target="#event_preview_content"
                        hx-swap="innerHTML"
                        title="Quick Preview"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                    <a href="/admin/events/{{ event.id }}" class="btn btn-ghost btn-sm" title="View Details" hx-boost="true">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </a>
                </div>

                {% if event.featured %}
                <button
                    class="btn btn-outline btn-sm"
                    hx-post="/admin/events/{{ event.id }}/unfeature"
                    hx-target="#event-{{ event.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Remove this event from featured?"
                    title="Remove from Featured"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                    Unfeature
                </button>
                {% else %}
                <button
                    class="btn btn-warning btn-sm"
                    hx-post="/admin/events/{{ event.id }}/feature"
                    hx-target="#event-{{ event.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Feature this event?"
                    title="Feature Event"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                    Feature
                </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
