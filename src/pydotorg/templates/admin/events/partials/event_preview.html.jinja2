<div class="space-y-4">
    <div class="flex items-start gap-4">
        <div class="avatar placeholder">
            <div class="bg-python-blue text-white rounded-lg w-20 h-20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
        </div>

        <div class="flex-1">
            <h3 class="text-xl font-bold">{{ event.title|safe }}</h3>
            <div class="flex items-center gap-2 mt-1">
                {% if event.featured %}
                <span class="badge badge-warning">Featured</span>
                {% endif %}
                <span class="badge badge-outline">{{ event.calendar.name }}</span>
            </div>
        </div>
    </div>

    {% if event.description %}
    <div>
        <h4 class="font-medium text-sm text-base-content/60 mb-1">Description</h4>
        <p class="text-sm">{{ event.description|safe }}</p>
    </div>
    {% endif %}

    <div class="grid grid-cols-2 gap-4">
        {% if event.venue %}
        <div class="col-span-2">
            <h4 class="font-medium text-sm text-base-content/60">Venue</h4>
            <p class="font-bold">{{ event.venue.name }}</p>
            {% if event.venue.address %}
            <p class="text-sm text-base-content/70">{{ event.venue.address }}</p>
            {% endif %}
        </div>
        {% endif %}

        {% if event.categories %}
        <div class="col-span-2">
            <h4 class="font-medium text-sm text-base-content/60 mb-2">Categories</h4>
            <div class="flex gap-1 flex-wrap">
                {% for category in event.categories %}
                <span class="badge badge-outline badge-sm">{{ category.name }}</span>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>

    {% if event.occurrences %}
    <div class="bg-base-200 rounded-lg p-3">
        <h4 class="font-medium text-sm text-base-content/60 mb-2">Occurrences ({{ event.occurrences|length }})</h4>
        <div class="space-y-2 max-h-48 overflow-y-auto">
            {% for occurrence in event.occurrences[:5] %}
            <div class="text-sm p-2 bg-base-100 rounded">
                <div class="flex items-center justify-between">
                    <div>
                        {% if occurrence.all_day %}
                        <p class="font-medium">{{ occurrence.dt_start.strftime('%B %d, %Y') }}</p>
                        <span class="badge badge-info badge-xs">All Day</span>
                        {% else %}
                        <p class="font-medium">{{ occurrence.dt_start.strftime('%b %d, %Y') }}</p>
                        <p class="text-xs text-base-content/60">{{ occurrence.dt_start.strftime('%I:%M %p') }}</p>
                        {% endif %}
                    </div>
                    {% if occurrence.dt_end and not occurrence.all_day %}
                    <div class="text-right">
                        <p class="text-xs text-base-content/60">Ends</p>
                        <p class="text-xs">{{ occurrence.dt_end.strftime('%I:%M %p') }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
            {% if event.occurrences|length > 5 %}
            <p class="text-xs text-center text-base-content/60">+ {{ event.occurrences|length - 5 }} more occurrences</p>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="flex gap-2 pt-4 border-t border-base-300">
        <a href="/admin/events/{{ event.id }}" class="btn btn-primary btn-sm flex-1" hx-boost="true">
            View Full Details
        </a>
        {% if event.featured %}
        <button
            class="btn btn-outline btn-sm"
            hx-post="/admin/events/{{ event.id }}/unfeature"
            hx-swap="none"
            hx-confirm="Remove this event from featured?"
            onclick="event_preview_modal.close()"
        >
            Unfeature
        </button>
        {% else %}
        <button
            class="btn btn-warning btn-sm"
            hx-post="/admin/events/{{ event.id }}/feature"
            hx-swap="none"
            hx-confirm="Feature this event?"
            onclick="event_preview_modal.close()"
        >
            Feature
        </button>
        {% endif %}
    </div>
</div>
