{% extends "admin/base.html.jinja2" %}

{% block title %}{{ calendar.name }} - Calendar Details{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center gap-4">
        <a href="/admin/events/calendars" class="btn btn-ghost btn-sm" hx-boost="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Calendars
        </a>
    </div>

    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body">
            <div class="flex items-start gap-6">
                <div class="avatar placeholder">
                    <div class="bg-python-blue text-white rounded-lg w-24 h-24">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                </div>

                <div class="flex-1">
                    <h1 class="text-2xl font-bold">{{ calendar.name|safe }}</h1>

                    {% if calendar.description %}
                    <p class="mt-4 text-base-content/70">{{ calendar.description|safe }}</p>
                    {% endif %}

                    <div class="mt-4">
                        <div class="stat">
                            <div class="stat-title">Total Events</div>
                            <div class="stat-value text-3xl">{{ pagination.total }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-base-100 shadow-lg border border-base-300">
        <div class="card-body">
            <div class="flex items-center justify-between mb-4">
                <h2 class="card-title text-lg">Events in this Calendar</h2>
                <span class="text-sm text-base-content/60">
                    Showing {{ pagination.offset + 1 }}-{{ [pagination.offset + pagination.limit, pagination.total]|min }} of {{ pagination.total }}
                </span>
            </div>

            {% include 'admin/events/partials/calendar_events_list.html.jinja2' %}
        </div>
    </div>
</div>
{% endblock %}
