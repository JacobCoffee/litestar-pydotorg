<div id="page-{{ page.id }}" class="card bg-base-100 shadow-lg border border-base-300 hover:shadow-xl transition-shadow">
    <div class="card-body p-4">
        <div class="flex items-start justify-between gap-4">
            <div class="flex items-start gap-4 flex-1">
                <div class="avatar placeholder">
                    <div class="{% if page.is_published %}bg-success{% else %}bg-warning{% endif %} text-white rounded-lg w-16 h-16">
                        <span class="text-2xl">
                            {% if page.content_type.value == 'markdown' %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            {% elif page.content_type.value == 'html' %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                            </svg>
                            {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                            </svg>
                            {% endif %}
                        </span>
                    </div>
                </div>

                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 flex-wrap">
                        <h3 class="font-bold text-lg truncate">{{ page.title }}</h3>
                        {% if page.is_published %}
                        <span class="badge badge-success badge-sm">Published</span>
                        {% else %}
                        <span class="badge badge-warning badge-sm">Unpublished</span>
                        {% endif %}
                        {% if page.content_type.value == 'markdown' %}
                        <span class="badge badge-outline badge-sm">Markdown</span>
                        {% elif page.content_type.value == 'html' %}
                        <span class="badge badge-outline badge-sm">HTML</span>
                        {% else %}
                        <span class="badge badge-outline badge-sm">RST</span>
                        {% endif %}
                    </div>

                    <div class="flex items-center gap-4 text-sm text-base-content/60 mt-1">
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                            </svg>
                            {{ page.path }}
                        </span>
                        {% if page.images|length > 0 %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            {{ page.images|length }} image{{ 's' if page.images|length != 1 else '' }}
                        </span>
                        {% endif %}
                        {% if page.documents|length > 0 %}
                        <span class="flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                            {{ page.documents|length }} doc{{ 's' if page.documents|length != 1 else '' }}
                        </span>
                        {% endif %}
                    </div>

                    {% if page.description %}
                    <div class="text-xs text-base-content/50 mt-1 line-clamp-2">
                        {{ page.description }}
                    </div>
                    {% endif %}

                    {% if page.created %}
                    <div class="text-xs text-base-content/50 mt-1">
                        Created {{ page.created.strftime('%b %d, %Y') }}
                        {% if page.updated and page.updated != page.created %}
                        Â· Updated {{ page.updated.strftime('%b %d, %Y') }}
                        {% endif %}
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="flex flex-col gap-2">
                <div class="flex gap-2">
                    <button
                        class="btn btn-ghost btn-sm"
                        hx-get="/admin/pages/{{ page.id }}/preview"
                        hx-target="#page_preview_content"
                        hx-swap="innerHTML"
                        title="Quick Preview"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                    <a href="/admin/pages/{{ page.id }}" class="btn btn-ghost btn-sm" title="View Details" hx-boost="true">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                    </a>
                </div>

                {% if page.is_published %}
                <button
                    class="btn btn-warning btn-sm"
                    hx-post="/admin/pages/{{ page.id }}/unpublish"
                    hx-target="#page-{{ page.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Are you sure you want to unpublish this page?"
                    title="Unpublish"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                    </svg>
                    Unpublish
                </button>
                {% else %}
                <button
                    class="btn btn-success btn-sm"
                    hx-post="/admin/pages/{{ page.id }}/publish"
                    hx-target="#page-{{ page.id }}"
                    hx-swap="outerHTML"
                    hx-confirm="Are you sure you want to publish this page?"
                    title="Publish"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Publish
                </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
