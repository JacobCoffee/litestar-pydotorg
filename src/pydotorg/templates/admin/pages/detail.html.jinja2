{% extends "admin/base.html.jinja2" %}

{% block title %}{{ page.title }} - Page Details{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="flex items-center gap-4">
        <a href="/admin/pages" class="btn btn-ghost btn-sm" hx-boost="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Pages
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 space-y-6">
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <div class="flex items-start gap-6">
                        <div class="avatar placeholder">
                            <div class="{% if page.is_published %}bg-success{% else %}bg-warning{% endif %} text-white rounded-lg w-24 h-24">
                                <span class="text-4xl">
                                    {% if page.content_type.value == 'markdown' %}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    {% elif page.content_type.value == 'html' %}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                                    </svg>
                                    {% else %}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                                    </svg>
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <div class="flex-1">
                            <div class="flex items-center gap-3 flex-wrap">
                                <h1 class="text-2xl font-bold">{{ page.title }}</h1>
                                {% if page.is_published %}
                                <span class="badge badge-success">Published</span>
                                {% else %}
                                <span class="badge badge-warning">Unpublished</span>
                                {% endif %}
                                {% if page.content_type.value == 'markdown' %}
                                <span class="badge badge-outline">Markdown</span>
                                {% elif page.content_type.value == 'html' %}
                                <span class="badge badge-outline">HTML</span>
                                {% else %}
                                <span class="badge badge-outline">reStructuredText</span>
                                {% endif %}
                            </div>

                            <div class="mt-2 flex items-center gap-4 text-sm text-base-content/70">
                                <span class="flex items-center gap-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                                    </svg>
                                    {{ page.path }}
                                </span>
                                {% if page.images|length > 0 %}
                                <span>{{ page.images|length }} image{{ 's' if page.images|length != 1 else '' }}</span>
                                {% endif %}
                                {% if page.documents|length > 0 %}
                                <span>{{ page.documents|length }} document{{ 's' if page.documents|length != 1 else '' }}</span>
                                {% endif %}
                            </div>

                            {% if page.description %}
                            <p class="mt-4 text-base-content/70">{{ page.description }}</p>
                            {% endif %}

                            {% if page.keywords %}
                            <div class="mt-4 flex flex-wrap gap-2">
                                {% for keyword in page.keywords.split(',') if keyword.strip() %}
                                <span class="badge badge-sm">{{ keyword.strip() }}</span>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-lg">Content Preview</h2>

                    <div class="mt-4">
                        <div class="mockup-code bg-base-200 max-h-96 overflow-auto">
                            <pre><code>{{ page.content[:1000] }}{% if page.content|length > 1000 %}...{% endif %}</code></pre>
                        </div>
                        {% if page.content|length > 1000 %}
                        <p class="text-xs text-base-content/50 mt-2">
                            Showing first 1000 characters of {{ page.content|length }} total
                        </p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if page.images|length > 0 %}
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-lg">Images ({{ page.images|length }})</h2>

                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-4">
                        {% for image in page.images %}
                        <div class="card bg-base-200 shadow">
                            <div class="card-body p-3">
                                <div class="text-xs truncate">{{ image.image }}</div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            {% if page.documents|length > 0 %}
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-lg">Documents ({{ page.documents|length }})</h2>

                    <div class="space-y-2 mt-4">
                        {% for doc in page.documents %}
                        <div class="flex items-center gap-2 p-3 bg-base-200 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                            <span class="text-sm">{{ doc.document }}</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="space-y-6">
            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-lg">Actions</h2>

                    <div class="space-y-3 mt-4">
                        {% if page.is_published %}
                        <button
                            class="btn btn-warning btn-block"
                            hx-post="/admin/pages/{{ page.id }}/unpublish"
                            hx-swap="none"
                            hx-confirm="Are you sure you want to unpublish this page?"
                            hx-on::after-request="if(event.detail.successful) window.location.reload()"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                            Unpublish Page
                        </button>
                        {% else %}
                        <button
                            class="btn btn-success btn-block"
                            hx-post="/admin/pages/{{ page.id }}/publish"
                            hx-swap="none"
                            hx-confirm="Are you sure you want to publish this page?"
                            hx-on::after-request="if(event.detail.successful) window.location.reload()"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            Publish Page
                        </button>
                        {% endif %}

                        <a href="/admin/pages/{{ page.id }}/edit" class="btn btn-outline btn-block" hx-boost="true">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Edit Page
                        </a>

                        <a href="{{ page.path }}" target="_blank" class="btn btn-outline btn-block">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            View on Site
                        </a>

                        <button
                            class="btn btn-error btn-outline btn-block"
                            hx-delete="/admin/pages/{{ page.id }}"
                            hx-confirm="Are you sure you want to delete this page? This action cannot be undone!"
                            hx-on::after-request="if(event.detail.successful) window.location.href='/admin/pages'"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            Delete Page
                        </button>
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-lg border border-base-300">
                <div class="card-body">
                    <h2 class="card-title text-lg">Metadata</h2>

                    <div class="space-y-3 mt-4">
                        {% if page.template_name %}
                        <div>
                            <label class="text-sm font-medium text-base-content/60">Template</label>
                            <p class="text-sm">{{ page.template_name }}</p>
                        </div>
                        {% endif %}

                        {% if page.created %}
                        <div>
                            <label class="text-sm font-medium text-base-content/60">Created</label>
                            <p class="text-sm">{{ page.created.strftime('%B %d, %Y at %I:%M %p') }}</p>
                        </div>
                        {% endif %}

                        {% if page.updated %}
                        <div>
                            <label class="text-sm font-medium text-base-content/60">Last Updated</label>
                            <p class="text-sm">{{ page.updated.strftime('%B %d, %Y at %I:%M %p') }}</p>
                        </div>
                        {% endif %}

                        {% if page.creator %}
                        <div>
                            <label class="text-sm font-medium text-base-content/60">Creator</label>
                            <p class="text-sm">{{ page.creator.username if page.creator.username else page.creator.email }}</p>
                        </div>
                        {% endif %}

                        <div>
                            <label class="text-sm font-medium text-base-content/60">Content Size</label>
                            <p class="text-sm">{{ page.content|length }} characters</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
