{% extends "base.html.jinja2" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="bg-base-100 py-12">
    <div class="section-container">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-python-blue mb-8">{{ page_title }}</h1>

            <p class="text-lg text-base-content/80 mb-8">
                Official meeting minutes from the Python Software Foundation Board of Directors.
            </p>

            {% if minutes_list %}
            <div class="space-y-4">
                {% for minutes in minutes_list %}
                <div class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
                    <div class="card-body">
                        <h2 class="card-title">
                            <a href="/psf/records/board/minutes/{{ minutes.slug }}/" class="python-link">
                                {{ minutes.date.strftime('%B %d, %Y') }}
                            </a>
                        </h2>
                        {% if minutes.content %}
                        <p class="text-base-content/70 line-clamp-2">
                            {{ minutes.content[:200] }}{% if minutes.content|length > 200 %}...{% endif %}
                        </p>
                        {% endif %}
                        <div class="card-actions justify-end">
                            <a href="/psf/records/board/minutes/{{ minutes.slug }}/" class="btn btn-primary btn-sm">
                                View Minutes
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="alert alert-info">
                <span>No meeting minutes available at this time.</span>
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
