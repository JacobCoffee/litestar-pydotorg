{% macro primary_button(text, url='#', type='button', size='md', disabled=false, extra_classes='') %}
<a
    {% if type == 'button' %}href="{{ url }}"{% endif %}
    {% if type == 'submit' %}type="submit"{% endif %}
    class="btn btn-primary btn-{{ size }} {{ extra_classes }} {% if disabled %}btn-disabled{% endif %}"
    {% if disabled %}disabled{% endif %}
>
    {{ text }}
</a>
{% endmacro %}

