{% macro alert(message, type='info', dismissible=true) %}
{% set alert_types = {
    'success': 'alert-success',
    'error': 'alert-error',
    'warning': 'alert-warning',
    'info': 'alert-info'
} %}

<div role="alert" class="alert {{ alert_types.get(type, 'alert-info') }} shadow-lg">
    {% if type == 'success' %}
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
    {% elif type == 'error' %}
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
    {% elif type == 'warning' %}
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
    {% else %}
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
    {% endif %}
    <span>{{ message }}</span>
    {% if dismissible %}
        <button class="btn btn-sm btn-ghost" onclick="this.parentElement.remove()">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    {% endif %}
</div>
{% endmacro %}

{% macro toast(message, type='info', id='') %}
<div class="toast toast-top toast-end z-50" {% if id %}id="{{ id }}"{% endif %}>
    {{ alert(message, type, true) }}
</div>
{% endmacro %}

{% macro notification(title, message, type='info', action_text='', action_url='#') %}
{% set alert_types = {
    'success': 'alert-success',
    'error': 'alert-error',
    'warning': 'alert-warning',
    'info': 'alert-info'
} %}

<div role="alert" class="alert {{ alert_types.get(type, 'alert-info') }} shadow-lg">
    <div>
        <h3 class="font-bold">{{ title }}</h3>
        <div class="text-sm">{{ message }}</div>
    </div>
    {% if action_text %}
        <div class="flex-none">
            <a href="{{ action_url }}" class="btn btn-sm">{{ action_text }}</a>
        </div>
    {% endif %}
</div>
{% endmacro %}

{% macro banner(message, type='info', dismissible=true, id='') %}
<div
    class="alert rounded-none shadow-md {% if type == 'info' %}bg-python-blue text-white{% elif type == 'warning' %}alert-warning{% elif type == 'error' %}alert-error{% else %}alert-success{% endif %}"
    {% if id %}id="{{ id }}"{% endif %}
>
    <div class="section-container flex items-center justify-between w-full">
        <span>{{ message }}</span>
        {% if dismissible %}
            <button class="btn btn-sm btn-ghost" onclick="this.closest('.alert').remove()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        {% endif %}
    </div>
</div>
{% endmacro %}

{% macro progress_alert(title, message, percentage) %}
<div role="alert" class="alert shadow-lg">
    <div class="w-full">
        <div class="flex items-center justify-between mb-2">
            <h3 class="font-bold">{{ title }}</h3>
            <span class="text-sm">{{ percentage }}%</span>
        </div>
        <p class="text-sm mb-2">{{ message }}</p>
        <progress class="progress progress-primary w-full" value="{{ percentage }}" max="100"></progress>
    </div>
</div>
{% endmacro %}
