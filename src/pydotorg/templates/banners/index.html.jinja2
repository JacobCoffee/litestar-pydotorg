{% extends "base.html.jinja2" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="bg-base-100 py-12">
    <div class="section-container">
        <div class="max-w-6xl mx-auto">
            <h1 class="text-4xl font-bold text-python-blue mb-8">{{ page_title }}</h1>

            {% if active_banners %}
            <div class="mb-12">
                <h2 class="text-2xl font-bold mb-4">Currently Active Banners</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% for banner in active_banners %}
                    <div class="card bg-success text-success-content shadow-lg">
                        <div class="card-body">
                            <h3 class="card-title">{{ banner.name }}</h3>
                            <p>{{ banner.message }}</p>
                            <div class="card-actions justify-end">
                                <a href="/admin/banners/{{ banner.name }}/preview/" class="btn btn-sm">
                                    Preview
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <h2 class="text-2xl font-bold mb-4">All Banners</h2>
            {% if banners %}
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Message</th>
                            <th>Active</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for banner in banners %}
                        <tr>
                            <td class="font-medium">{{ banner.name }}</td>
                            <td class="max-w-xs truncate">{{ banner.message }}</td>
                            <td>
                                {% if banner.is_active %}
                                <span class="badge badge-success">Active</span>
                                {% else %}
                                <span class="badge badge-ghost">Inactive</span>
                                {% endif %}
                            </td>
                            <td>{{ banner.start_date.strftime('%Y-%m-%d') if banner.start_date else '-' }}</td>
                            <td>{{ banner.end_date.strftime('%Y-%m-%d') if banner.end_date else '-' }}</td>
                            <td>
                                <a href="/admin/banners/{{ banner.name }}/preview/" class="btn btn-xs btn-primary">
                                    Preview
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="alert alert-info">
                <span>No banners configured.</span>
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
