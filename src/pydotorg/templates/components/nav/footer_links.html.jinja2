{% macro footer_links(sections) %}
<div class="grid grid-cols-2 md:grid-cols-4 gap-8">
  {% for section in sections %}
  <div>
    <h3 class="footer-title text-python-blue font-bold mb-4">{{ section.title }}</h3>
    <ul class="space-y-2">
      {% for link in section.links %}
      <li>
        <a href="{{ link.url }}" class="link link-hover text-base-content/70 hover:text-python-blue transition-colors">
          {{ link.label }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endfor %}
</div>
{% endmacro %}

{% macro footer_simple(links) %}
<nav class="flex flex-wrap justify-center gap-6">
  {% for link in links %}
  <a href="{{ link.url }}" class="link link-hover text-base-content/70 hover:text-python-blue transition-colors">
    {{ link.label }}
  </a>
  {% endfor %}
</nav>
{% endmacro %}

{% macro footer_legal(copyright_text, legal_links=None) %}
<div class="flex flex-col md:flex-row justify-between items-center gap-4 pt-8 border-t border-base-300">
  <p class="text-sm text-base-content/60">{{ copyright_text }}</p>
  {% if legal_links %}
  <nav class="flex flex-wrap gap-4">
    {% for link in legal_links %}
    <a href="{{ link.url }}" class="text-sm link link-hover text-base-content/60 hover:text-python-blue">
      {{ link.label }}
    </a>
    {% endfor %}
  </nav>
  {% endif %}
</div>
{% endmacro %}
