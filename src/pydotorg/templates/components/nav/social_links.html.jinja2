      {% else %}
      <span class="text-xs">{{ social.name[0] }}</span>
      {% endif %}
    {% endif %}
    {% if style == 'buttons' %}
    <span class="ml-2">{{ social.name }}</span>
    {% endif %}
  </a>
  {% endfor %}
</div>
{% endmacro %}

{% macro social_share(title, url, platforms=None) %}
<div class="flex gap-2 items-center">
  <span class="text-sm text-base-content/60 mr-2">Share:</span>
  {% set default_platforms = platforms or ['twitter', 'facebook', 'linkedin'] %}
  {% for platform in default_platforms %}
  <a
    href="{% if platform == 'twitter' %}https://twitter.com/intent/tweet?text={{ title|urlencode }}&url={{ url|urlencode }}{% elif platform == 'facebook' %}https://www.facebook.com/sharer/sharer.php?u={{ url|urlencode }}{% elif platform == 'linkedin' %}https://www.linkedin.com/shareArticle?mini=true&url={{ url|urlencode }}&title={{ title|urlencode }}{% endif %}"
    target="_blank"
    rel="noopener noreferrer"
    class="btn btn-circle btn-ghost btn-sm"
    aria-label="Share on {{ platform }}"
  >
    {% if platform == 'twitter' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    {% elif platform == 'facebook' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
    </svg>
    {% elif platform == 'linkedin' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
    </svg>
    {% endif %}
  </a>
  {% endfor %}
</div>
{% endmacro %}
