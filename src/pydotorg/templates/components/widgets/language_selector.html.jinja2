{% macro language_selector(languages, current_lang='en') %}
<div class="dropdown dropdown-end">
  <div tabindex="0" role="button" class="btn btn-ghost gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
    </svg>
    <span class="hidden sm:inline">
      {% for lang in languages %}
        {% if lang.code == current_lang %}{{ lang.name }}{% endif %}
      {% endfor %}
    </span>
  </div>
  <ul tabindex="0" class="dropdown-content z-50 menu p-2 shadow-xl bg-base-100 rounded-box w-52">
    {% for lang in languages %}
    <li>
      <a
        href="?lang={{ lang.code }}"
        class="{% if lang.code == current_lang %}active{% endif %} flex justify-between"
      >
        <span>{{ lang.name }}</span>
        {% if lang.code == current_lang %}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {% endif %}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
{% endmacro %}

{% macro language_flags(languages, current_lang='en', style='compact') %}
<div class="flex gap-2 items-center">
  {% if style == 'compact' %}
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle btn-sm">
        {% for lang in languages %}
          {% if lang.code == current_lang %}
            {% if lang.flag %}{{ lang.flag }}{% else %}{{ lang.code|upper }}{% endif %}
          {% endif %}
        {% endfor %}
      </div>
      <ul tabindex="0" class="dropdown-content z-50 menu p-2 shadow-xl bg-base-100 rounded-box w-40">
        {% for lang in languages %}
        <li>
          <a href="?lang={{ lang.code }}" class="{% if lang.code == current_lang %}active{% endif %}">
            {% if lang.flag %}<span class="mr-2">{{ lang.flag }}</span>{% endif %}
            {{ lang.name }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  {% else %}
    {% for lang in languages %}
    <a
      href="?lang={{ lang.code }}"
      class="btn btn-ghost btn-sm {% if lang.code == current_lang %}btn-active{% endif %}"
      title="{{ lang.name }}"
    >
      {% if lang.flag %}{{ lang.flag }}{% else %}{{ lang.code|upper }}{% endif %}
    </a>
    {% endfor %}
  {% endif %}
</div>
{% endmacro %}
