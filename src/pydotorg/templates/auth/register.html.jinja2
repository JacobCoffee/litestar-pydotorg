{% extends "base.html.jinja2" %}
{% from "macros/forms.html.jinja2" import input_field, checkbox_field %}

{% block title %}Register - Python.org{% endblock %}

{% block content %}
<div class="section-container py-16">
    <div class="max-w-2xl mx-auto">
        <div class="card bg-base-200 shadow-xl">
            <div class="card-body">
                <h1 class="card-title text-3xl font-bold text-center justify-center mb-6">
                    Create Your Python.org Account
                </h1>

                <div id="register-messages" class="mb-4"></div>

                <form
                    hx-post="/api/auth/register"
                    hx-target="#register-messages"
                    hx-swap="innerHTML"
                    hx-indicator="#register-spinner"
                    class="space-y-4"
                >
                    {{ csrf_input|safe }}

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {{ input_field(
                            name='first_name',
                            label='First Name',
                            type='text',
                            placeholder='John',
                            required=true
                        ) }}

                        {{ input_field(
                            name='last_name',
                            label='Last Name',
                            type='text',
                            placeholder='Doe',
                            required=true
                        ) }}
                    </div>

                    {{ input_field(
                        name='username',
                        label='Username',
                        type='text',
                        placeholder='Choose a unique username',
                        required=true,
                        help_text='3-30 characters, letters, numbers, underscores only'
                    ) }}

                    {{ input_field(
                        name='email',
                        label='Email Address',
                        type='email',
                        placeholder='your.email@example.com',
                        required=true
                    ) }}

                    <div class="form-control w-full">
                        <label class="label" for="password">
                            <span class="label-text">
                                Password
                                <span class="text-error">*</span>
                            </span>
                        </label>
                        <input
                            type="password"
                            name="password"
                            id="password"
                            placeholder="Create a strong password"
                            class="input input-bordered w-full"
                            required
                            x-data="passwordStrength"
                            x-on:input="checkStrength($event.target.value)"
                        />
                        <div class="mt-2" x-show="strength > 0">
                            <div class="flex gap-1 mb-1">
                                <div class="h-1 flex-1 rounded" :class="strength >= 1 ? 'bg-error' : 'bg-base-300'"></div>
                                <div class="h-1 flex-1 rounded" :class="strength >= 2 ? 'bg-warning' : 'bg-base-300'"></div>
                                <div class="h-1 flex-1 rounded" :class="strength >= 3 ? 'bg-info' : 'bg-base-300'"></div>
                                <div class="h-1 flex-1 rounded" :class="strength >= 4 ? 'bg-success' : 'bg-base-300'"></div>
                            </div>
                            <span class="text-xs" x-text="strengthText"></span>
                        </div>
                        <label class="label">
                            <span class="label-text-alt">Minimum 8 characters, include uppercase, lowercase, and numbers</span>
                        </label>
                    </div>

                    {{ input_field(
                        name='password_confirm',
                        label='Confirm Password',
                        type='password',
                        placeholder='Re-enter your password',
                        required=true
                    ) }}

                    <div class="divider"></div>

                    {{ checkbox_field(
                        name='accept_terms',
                        label='I agree to the Terms of Service and Privacy Policy'
                    ) }}

                    {{ checkbox_field(
                        name='newsletter',
                        label='Subscribe to Python newsletter (optional)'
                    ) }}

                    <button
                        type="submit"
                        class="btn btn-primary w-full"
                    >
                        <span id="register-spinner" class="loading loading-spinner loading-sm htmx-indicator"></span>
                        Create Account
                    </button>
                </form>

                <div class="divider">OR</div>

                <div class="space-y-3">
                    <button
                        hx-post="/api/auth/oauth/github"
                        hx-target="#register-messages"
                        class="btn btn-outline w-full gap-2"
                    >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                        </svg>
                        Sign up with GitHub
                    </button>
                </div>

                <div class="divider"></div>

                <p class="text-center text-sm">
                    Already have an account?
                    <a href="/auth/login" class="link link-primary font-semibold">
                        Log in
                    </a>
                </p>
            </div>
        </div>

        <div class="text-center mt-6 text-sm opacity-70">
            <p>
                By creating an account, you agree to our
                <a href="/about/legal/terms" class="link">Terms of Service</a>
                and
                <a href="/about/legal/privacy" class="link">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('passwordStrength', () => ({
            strength: 0,
            strengthText: '',

            checkStrength(password) {
                let score = 0;
                if (!password) {
                    this.strength = 0;
                    this.strengthText = '';
                    return;
                }

                if (password.length >= 8) score++;
                if (password.length >= 12) score++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score++;
                if (/\d/.test(password)) score++;
                if (/[^a-zA-Z0-9]/.test(password)) score++;

                if (score <= 2) {
                    this.strength = 1;
                    this.strengthText = 'Weak password';
                } else if (score === 3) {
                    this.strength = 2;
                    this.strengthText = 'Fair password';
                } else if (score === 4) {
                    this.strength = 3;
                    this.strengthText = 'Good password';
                } else {
                    this.strength = 4;
                    this.strengthText = 'Strong password';
                }
            }
        }));
    });

    document.body.addEventListener('htmx:afterRequest', function(evt) {
        if (evt.detail.successful && evt.detail.xhr.status === 201) {
            const response = JSON.parse(evt.detail.xhr.responseText);
            if (response.redirect) {
                window.location.href = response.redirect;
            }
        }
    });
</script>
{% endblock %}
