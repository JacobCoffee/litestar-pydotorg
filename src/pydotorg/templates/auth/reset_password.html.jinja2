{% extends "base.html.jinja2" %}
{% from "macros/forms.html.jinja2" import input_field %}

{% block title %}Reset Password - Python.org{% endblock %}

{% block content %}
<div class="section-container py-16">
    <div class="max-w-md mx-auto">
        <div class="card bg-base-200 shadow-xl">
            <div class="card-body">
                <div class="text-center mb-6">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-primary bg-opacity-20 rounded-full mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h1 class="text-3xl font-bold">Reset Your Password</h1>
                    <p class="text-sm opacity-70 mt-2">
                        Enter a new password for your account
                    </p>
                </div>

                <div id="reset-messages" class="mb-4"></div>

                <form
                    id="reset-form"
                    method="POST"
                    action="javascript:void(0)"
                    class="space-y-4"
                    data-token="{{ token }}"
                >

                    <div class="form-control w-full">
                        <label class="label" for="new_password">
                            <span class="label-text">
                                New Password
                                <span class="text-error">*</span>
                            </span>
                        </label>
                        <input
                            type="password"
                            name="new_password"
                            id="new_password"
                            placeholder="Create a strong password"
                            class="input input-bordered w-full"
                            required
                            x-data="passwordStrength"
                            x-on:input="checkStrength($event.target.value)"
                        />
                        <div class="mt-2" x-show="strength > 0">
                            <div class="flex gap-1 mb-1">
                                <div class="h-1 flex-1 rounded" :class="strength >= 1 ? 'bg-error' : 'bg-base-300'"></div>
                                <div class="h-1 flex-1 rounded" :class="strength >= 2 ? 'bg-warning' : 'bg-base-300'"></div>
                                <div class="h-1 flex-1 rounded" :class="strength >= 3 ? 'bg-info' : 'bg-base-300'"></div>
                                <div class="h-1 flex-1 rounded" :class="strength >= 4 ? 'bg-success' : 'bg-base-300'"></div>
                            </div>
                            <span class="text-xs" x-text="strengthText"></span>
                        </div>
                        <label class="label">
                            <span class="label-text-alt">Minimum 8 characters, include uppercase, lowercase, and numbers</span>
                        </label>
                    </div>

                    {{ input_field(
                        name='confirm_password',
                        label='Confirm New Password',
                        type='password',
                        placeholder='Re-enter your new password',
                        required=true
                    ) }}

                    <button
                        type="submit"
                        class="btn btn-primary w-full"
                    >
                        <span id="reset-spinner" class="loading loading-spinner loading-sm htmx-indicator"></span>
                        Reset Password
                    </button>
                </form>

                <div class="divider"></div>

                <div class="flex items-center justify-center gap-2 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    <a href="/auth/login" class="link link-primary">
                        Back to login
                    </a>
                </div>
            </div>
        </div>

        <div class="alert alert-warning mt-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div class="text-sm">
                <p class="font-semibold">Security Notice</p>
                <p>This reset link expires in 1 hour and can only be used once.</p>
            </div>
        </div>

        <div class="text-center mt-6 text-sm opacity-70">
            <p>
                Having issues?
                <a href="/about/help" class="link">Contact Support</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('passwordStrength', () => ({
            strength: 0,
            strengthText: '',

            checkStrength(password) {
                let score = 0;
                if (!password) {
                    this.strength = 0;
                    this.strengthText = '';
                    return;
                }

                if (password.length >= 8) score++;
                if (password.length >= 12) score++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score++;
                if (/\d/.test(password)) score++;
                if (/[^a-zA-Z0-9]/.test(password)) score++;

                if (score <= 2) {
                    this.strength = 1;
                    this.strengthText = 'Weak password';
                } else if (score === 3) {
                    this.strength = 2;
                    this.strengthText = 'Fair password';
                } else if (score === 4) {
                    this.strength = 3;
                    this.strengthText = 'Good password';
                } else {
                    this.strength = 4;
                    this.strengthText = 'Strong password';
                }
            }
        }));
    });

    document.getElementById('reset-form').addEventListener('submit', async function(e) {
        e.preventDefault();

        const form = e.target;
        const messagesDiv = document.getElementById('reset-messages');
        const spinner = document.getElementById('reset-spinner');
        const submitBtn = form.querySelector('button[type="submit"]');

        // Client-side validation
        const newPassword = form.new_password.value;
        const confirmPassword = form.confirm_password.value;

        if (newPassword !== confirmPassword) {
            messagesDiv.innerHTML = '<div class="alert alert-error"><svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>Passwords do not match.</span></div>';
            return;
        }

        // Show loading state
        spinner.classList.remove('htmx-indicator');
        submitBtn.disabled = true;

        // Gather form data as JSON
        const data = {
            token: form.dataset.token,
            new_password: newPassword,
            confirm_password: confirmPassword
        };

        try {
            const response = await fetch('/api/auth/reset-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (response.ok) {
                messagesDiv.innerHTML = '<div class="alert alert-success"><svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>Password reset successful! Redirecting to login...</span></div>';
                setTimeout(function() {
                    window.location.href = '/auth/login';
                }, 2000);
            } else {
                let errorMessage = result.detail || 'Password reset failed. Please try again.';
                messagesDiv.innerHTML = '<div class="alert alert-error"><svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>' + errorMessage + '</span></div>';
            }
        } catch (error) {
            console.error('Reset password error:', error);
            messagesDiv.innerHTML = '<div class="alert alert-error"><svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>An error occurred. Please try again.</span></div>';
        } finally {
            // Reset loading state
            spinner.classList.add('htmx-indicator');
            submitBtn.disabled = false;
        }
    });
</script>
{% endblock %}
