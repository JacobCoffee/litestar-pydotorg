{% extends "base.html.jinja2" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="bg-base-100 py-12">
    <div class="section-container">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-python-blue mb-4">{{ page_title }}</h1>

            <p class="text-lg text-base-content/80 mb-8">
                The Python Software Foundation sponsors various work groups to help guide and
                improve the Python community and ecosystem.
            </p>

            {% if work_groups %}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {% for group in work_groups %}
                <div class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
                    <div class="card-body">
                        <h2 class="card-title">
                            <a href="/psf/workgroups/{{ group.slug }}/" class="python-link">
                                {{ group.name }}
                            </a>
                        </h2>
                        {% if group.description %}
                        <p class="text-base-content/70 line-clamp-3">
                            {{ group.description[:200] }}{% if group.description|length > 200 %}...{% endif %}
                        </p>
                        {% endif %}
                        <div class="card-actions justify-end">
                            <a href="/psf/workgroups/{{ group.slug }}/" class="btn btn-primary btn-sm">
                                Learn More
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="alert alert-info">
                <span>No work groups available at this time.</span>
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
