{% if featured_entries and not current_feed %}
<div class="mb-12">
    <h2 class="text-3xl font-bold text-python-blue mb-6">Featured Posts</h2>
    <div class="space-y-4">
        {% for entry in featured_entries %}
        <article class="card bg-gradient-to-r from-python-blue/5 to-python-yellow/5 shadow-md hover:shadow-lg transition-shadow border-l-4 border-python-blue">
            <div class="card-body">
                <h3 class="card-title text-xl">
                    <a href="{{ entry.url }}" target="_blank" rel="noopener noreferrer" class="python-link">
                        {{ entry.title }}
                    </a>
                </h3>
                <div class="text-sm text-base-content/60">
                    {% if entry.feed %}
                    <span class="badge badge-primary">{{ entry.feed.name }}</span>
                    {% endif %}
                    {% if entry.pub_date %}
                    <span class="ml-2">{{ entry.pub_date.strftime('%B %d, %Y') }}</span>
                    {% endif %}
                </div>
                {% if entry.summary %}
                <p class="text-base-content/80 line-clamp-3 mt-2">
                    {{ entry.summary|striptags|truncate(250) }}
                </p>
                {% endif %}
            </div>
        </article>
        {% endfor %}
    </div>
</div>
{% endif %}

<h2 class="text-3xl font-bold text-python-blue mb-8">
    {% if current_feed %}{{ current_feed.name }}{% else %}Recent Posts{% endif %}
</h2>

{% if recent_entries %}
<div class="space-y-6">
    {% for entry in recent_entries %}
    <article class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="card-body">
            <h3 class="card-title">
                <a href="{{ entry.url }}" target="_blank" rel="noopener noreferrer" class="python-link">
                    {{ entry.title }}
                </a>
            </h3>
            <div class="text-sm text-base-content/60">
                {% if entry.feed %}
                <span class="badge badge-ghost">{{ entry.feed.name }}</span>
                {% endif %}
                {% if entry.published_at %}
                <span class="ml-2">{{ entry.published_at.strftime('%B %d, %Y') }}</span>
                {% endif %}
            </div>
            {% if entry.summary %}
            <p class="text-base-content/80 line-clamp-3 mt-2">
                {{ entry.summary|striptags|truncate(200) }}
            </p>
            {% endif %}
        </div>
    </article>
    {% endfor %}
</div>
{% else %}
<div class="alert alert-info">
    <span>No blog posts available at this time.</span>
</div>
{% endif %}
