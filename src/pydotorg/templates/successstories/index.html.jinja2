{% extends "base.html.jinja2" %}
{% import "macros/text.html.jinja2" as text %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16 md:py-24">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                Python Success Stories
            </h1>
            <p class="text-lg md:text-xl lg:text-2xl opacity-90 font-light">
                Discover how organizations around the world use Python to solve real problems
            </p>
        </div>
    </div>
</section>

{% if categories %}
<section class="bg-base-200 py-8 sticky top-16 z-10 shadow-sm" x-data="{ selectedCategory: 'all' }">
    <div class="section-container">
        <div class="flex flex-wrap items-center gap-3">
            <span class="text-sm font-semibold text-base-content/70">Filter by Category:</span>
            <button @click="selectedCategory = 'all'"
                    :class="selectedCategory === 'all' ? 'badge-primary' : 'badge-outline'"
                    class="badge badge-lg hover:badge-primary transition-colors">
                All Stories
            </button>
            {% for category in categories %}
            <a href="/success-stories/category/{{ category.slug }}/"
               class="badge badge-lg {{ text.category_badge_color(category.name) }} badge-outline hover:{{ text.category_badge_color(category.name) }} transition-colors"
               hx-boost="true">
                {{ category.name }}
            </a>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{% if featured_stories %}
<section class="bg-base-100 py-12 md:py-16">
    <div class="section-container">
        <div class="flex items-center gap-3 mb-8">
            <h2 class="text-3xl md:text-4xl font-bold text-python-blue">Featured Stories</h2>
            <div class="badge badge-primary badge-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                Featured
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            {% for story in featured_stories[:2] %}
            <a href="/success-stories/{{ story.slug }}/"
               class="card bg-gradient-to-br {{ text.category_color(story.category.name if story.category else 'default') }} text-white shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105"
               hx-boost="true">
                <div class="card-body p-8">
                    {% if story.category %}
                    <div class="mb-3">
                        <span class="badge badge-lg bg-white/20 border-white/30 text-white backdrop-blur-sm">
                            {{ story.category.name }}
                        </span>
                    </div>
                    {% endif %}

                    <h3 class="card-title text-2xl md:text-3xl mb-3 line-clamp-2">
                        {{ story.name }}
                    </h3>

                    {% if story.company_name %}
                    <p class="text-lg font-semibold opacity-90 mb-3">
                        {{ story.company_name }}
                    </p>
                    {% endif %}

                    <p class="opacity-90 line-clamp-3 text-base">
                        {{ text.strip_markdown(story.content, 180) }}
                    </p>

                    <div class="card-actions justify-end mt-4">
                        <span class="btn btn-sm bg-white/20 hover:bg-white/30 border-white/30 text-white gap-2">
                            Read Story
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </span>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>

        {% if featured_stories|length > 2 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            {% for story in featured_stories[2:6] %}
            <a href="/success-stories/{{ story.slug }}/"
               class="card bg-base-200 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group"
               hx-boost="true">
                <div class="card-body p-6">
                    {% if story.category %}
                    <div class="mb-2">
                        <span class="badge {{ text.category_badge_color(story.category.name) }} badge-sm">
                            {{ story.category.name }}
                        </span>
                    </div>
                    {% endif %}

                    <h3 class="card-title text-base line-clamp-2 group-hover:text-python-blue transition-colors">
                        {{ story.name }}
                    </h3>

                    {% if story.company_name %}
                    <p class="text-sm text-base-content/70 font-medium">
                        {{ story.company_name }}
                    </p>
                    {% endif %}
                </div>
            </a>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
{% endif %}

<section class="bg-base-200 py-12 md:py-16">
    <div class="section-container">
        <h2 class="text-3xl md:text-4xl font-bold text-python-blue mb-8">All Success Stories</h2>

        {% if stories %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for story in stories %}
            <a href="/success-stories/{{ story.slug }}/"
               class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group overflow-hidden"
               hx-boost="true">
                <div class="absolute inset-0 bg-gradient-to-br {{ text.category_color(story.category.name if story.category else 'default') }} opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>

                <div class="card-body relative">
                    {% if story.category %}
                    <div class="mb-3">
                        <span class="badge {{ text.category_badge_color(story.category.name) }} badge-sm">
                            {{ story.category.name }}
                        </span>
                    </div>
                    {% endif %}

                    <h3 class="card-title text-lg line-clamp-2 group-hover:text-python-blue transition-colors">
                        {{ story.name }}
                    </h3>

                    {% if story.company_name %}
                    <p class="text-sm text-base-content/70 font-semibold mb-2">
                        {{ story.company_name }}
                    </p>
                    {% endif %}

                    <p class="text-sm text-base-content/60 line-clamp-3">
                        {{ text.strip_markdown(story.content, 150) }}
                    </p>

                    <div class="card-actions justify-between items-center mt-4 pt-4 border-t border-base-300">
                        {% if story.created_at %}
                        <span class="text-xs text-base-content/50">
                            {{ story.created_at.strftime('%b %d, %Y') }}
                        </span>
                        {% endif %}

                        <span class="text-sm font-medium text-python-blue group-hover:gap-2 flex items-center transition-all">
                            Read more
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </span>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        {% else %}
        <div class="alert">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>No success stories available at this time. Check back soon!</span>
        </div>
        {% endif %}
    </div>
</section>

<section class="bg-base-100 py-12 md:py-16">
    <div class="section-container">
        <div class="card bg-gradient-to-br from-python-blue to-python-yellow text-white shadow-xl">
            <div class="card-body text-center py-12">
                <h2 class="card-title text-3xl md:text-4xl font-bold justify-center mb-4">
                    Share Your Story
                </h2>
                <p class="text-lg opacity-90 mb-6 max-w-2xl mx-auto">
                    Have you built something amazing with Python? We'd love to hear about it!
                    Share your success story with the community.
                </p>
                <div class="card-actions justify-center">
                    <a href="/contact/" class="btn btn-lg bg-white text-python-blue hover:bg-white/90 border-none gap-2">
                        Submit Your Story
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
