<nav class="navbar bg-base-100 shadow-md sticky top-0 z-50" x-data="{ mobileMenuOpen: false }">
    <div class="section-container">
        <div class="navbar-start">
            {# Logo #}
            <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity" hx-boost="true">
                <svg class="w-10 h-10" viewBox="0 0 110 110" xmlns="http://www.w3.org/2000/svg">
                    <path d="M54.8 0C24.5 0 26.1 13.1 26.1 13.1l.1 13.6h29.1v4.1H17.4S0 28.5 0 55.1c0 26.6 15.2 25.7 15.2 25.7h9v-12.4s-.5-15.2 14.9-15.2h25.7s14.5.2 14.5-14V15.9S81.5 0 54.8 0zM39.3 9.2c2.6 0 4.7 2.1 4.7 4.7 0 2.6-2.1 4.7-4.7 4.7-2.6 0-4.7-2.1-4.7-4.7 0-2.6 2.1-4.7 4.7-4.7z" fill="#3776AB"/>
                    <path d="M55.2 110c30.3 0 28.7-13.1 28.7-13.1l-.1-13.6H54.7v-4.1h37.9S110 81.5 110 54.9c0-26.6-15.2-25.7-15.2-25.7h-9v12.4s.5 15.2-14.9 15.2H45.2s-14.5-.2-14.5 14v23.3S28.5 110 55.2 110zm15.5-9.2c-2.6 0-4.7-2.1-4.7-4.7 0-2.6 2.1-4.7 4.7-4.7 2.6 0 4.7 2.1 4.7 4.7 0 2.6-2.1 4.7-4.7 4.7z" fill="#FFD43B"/>
                </svg>
                <span class="text-xl font-bold text-base-content hidden sm:inline">Python</span>
            </a>
        </div>

        {# Desktop Navigation #}
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1 gap-1">
                <li><a href="/about" class="hover:text-primary transition-colors" hx-boost="true">About</a></li>
                <li><a href="/downloads" class="hover:text-primary transition-colors" hx-boost="true">Downloads</a></li>
                <li><a href="https://docs.python.org" target="_blank" rel="noopener" class="hover:text-primary transition-colors">Documentation</a></li>
                <li x-data="{ open: false, closeTimeout: null }"
                    @mouseenter="clearTimeout(closeTimeout); open = true"
                    @mouseleave="closeTimeout = setTimeout(() => open = false, 100)"
                    class="relative">
                    <details :open="open">
                        <summary class="hover:text-primary transition-colors cursor-pointer">Community</summary>
                        <ul class="p-2 bg-base-100 rounded-box shadow-lg w-52 z-50 !mt-0">
                            <li><a href="/community" hx-boost="true">Overview</a></li>
                            <li><a href="/community/diversity/" hx-boost="true">Diversity</a></li>
                            <li><a href="/community/lists/" hx-boost="true">Mailing Lists</a></li>
                            <li><a href="/community/irc/" hx-boost="true">IRC</a></li>
                            <li><a href="/community/forums/" hx-boost="true">Forums</a></li>
                            <li><a href="https://discuss.python.org" target="_blank" rel="noopener">Discussions</a></li>
                            <li><a href="/about/psf/" hx-boost="true">PSF</a></li>
                        </ul>
                    </details>
                </li>
                <li><a href="/success-stories" class="hover:text-primary transition-colors" hx-boost="true">Success Stories</a></li>
                <li><a href="/blogs" class="hover:text-primary transition-colors" hx-boost="true">News</a></li>
                <li><a href="/events" class="hover:text-primary transition-colors" hx-boost="true">Events</a></li>
                <li><a href="/jobs" class="hover:text-primary transition-colors" hx-boost="true">Jobs</a></li>
            </ul>
        </div>

        {# Right Side Actions #}
        <div class="navbar-end flex gap-2 items-center">
            {# Search Button (opens modal) #}
            <button
                class="btn btn-ghost btn-circle"
                @click="$dispatch('open-search')"
                aria-label="Search"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </button>

            {# Theme Toggle #}
            <button
                class="btn btn-ghost btn-circle"
                @click="$store.theme.toggle()"
                aria-label="Toggle theme"
            >
                {# Sun icon (shown in dark mode) #}
                <svg
                    x-show="$store.theme.dark"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                {# Moon icon (shown in light mode) #}
                <svg
                    x-show="!$store.theme.dark"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
            </button>

            {# Donate Button #}
            <a href="https://donate.python.org/" target="_blank" rel="noopener" class="btn btn-primary btn-sm hidden lg:inline-flex items-center">
                Donate
            </a>

            {# Admin Button - Only shown when user is staff/superuser #}
            {% set current_user = request.scope.get('user') %}
            {% if current_user and (current_user.is_staff or current_user.is_superuser) %}
            <a href="/admin" hx-boost="false" class="btn btn-ghost btn-sm gap-2 hidden lg:inline-flex">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Admin
            </a>
            {% endif %}

            {# Mobile menu toggle - far right #}
            <div class="dropdown dropdown-end lg:hidden">
                <label
                    tabindex="0"
                    class="btn btn-ghost btn-circle"
                    @click="mobileMenuOpen = !mobileMenuOpen"
                    aria-label="Toggle mobile menu"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </label>
                <ul
                    class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
                    x-show="mobileMenuOpen"
                    x-transition:enter="transition ease-out duration-200"
                    x-transition:enter-start="opacity-0 scale-95"
                    x-transition:enter-end="opacity-100 scale-100"
                    x-transition:leave="transition ease-in duration-150"
                    x-transition:leave-start="opacity-100 scale-100"
                    x-transition:leave-end="opacity-0 scale-95"
                    @click.outside="mobileMenuOpen = false"
                >
                    <li><a href="/about" hx-boost="true">About</a></li>
                    <li><a href="/downloads" hx-boost="true">Downloads</a></li>
                    <li><a href="https://docs.python.org" target="_blank" rel="noopener">Documentation</a></li>
                    <li><a href="/community" hx-boost="true">Community</a></li>
                    <li><a href="/success-stories" hx-boost="true">Success Stories</a></li>
                    <li><a href="/blogs" hx-boost="true">News</a></li>
                    <li><a href="/events" hx-boost="true">Events</a></li>
                    <li><a href="/jobs" hx-boost="true">Jobs</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>
