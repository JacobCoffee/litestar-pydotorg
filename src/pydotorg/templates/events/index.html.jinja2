{% extends "base.html.jinja2" %}

{% block title %}Python Events{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6">Python Events</h1>
            <p class="text-xl opacity-90 mb-8">
                Connect with Python enthusiasts worldwide at conferences, meetups, and workshops
            </p>
            <a href="/events/submit/" class="btn btn-lg btn-secondary gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Submit Event
            </a>
        </div>
    </div>
</section>

{% if featured_events %}
<section class="bg-base-200 py-16">
    <div class="section-container">
        <h2 class="text-3xl font-bold text-python-blue mb-8">Featured Events</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for event in featured_events %}
            <article class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow border-2 border-python-yellow">
                <div class="card-body">
                    {% if event.categories %}
                    <div class="flex flex-wrap gap-2 mb-2">
                        {% for category in event.categories %}
                        <span class="badge badge-primary badge-sm">{{ category.name }}</span>
                        {% endfor %}
                    </div>
                    {% endif %}

                    <h3 class="card-title text-lg">
                        <a href="/events/{{ event.slug }}/" class="python-link">
                            {{ event.title }}
                        </a>
                    </h3>

                    {% if event.occurrences and event.occurrences|length > 0 %}
                    <div class="flex items-center gap-2 text-sm text-base-content/70">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <time datetime="{{ event.occurrences[0].dt_start.isoformat() }}">
                            {{ event.occurrences[0].dt_start.strftime('%B %d, %Y') }}
                        </time>
                    </div>
                    {% endif %}

                    {% if event.venue %}
                    <div class="flex items-center gap-2 text-sm text-base-content/70">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <span>{{ event.venue.name }}</span>
                    </div>
                    {% endif %}

                    {% if event.description %}
                    <p class="text-base-content/80 line-clamp-3 mt-2">
                        {{ event.description[:150] }}{% if event.description|length > 150 %}...{% endif %}
                    </p>
                    {% endif %}
                </div>
            </article>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<section class="bg-base-100 py-16">
    <div class="section-container">
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 mb-8">
            <h2 class="text-3xl font-bold text-python-blue">Upcoming Events</h2>

            <div class="flex flex-wrap gap-4">
                <div class="join">
                    <button class="btn btn-sm join-item"
                            hx-get="/events/?view=list"
                            hx-target="#events-content"
                            hx-swap="innerHTML">
                        List View
                    </button>
                    <button class="btn btn-sm join-item"
                            hx-get="/events/calendar/"
                            hx-target="#events-content"
                            hx-swap="innerHTML">
                        Calendar View
                    </button>
                </div>

                <details class="dropdown dropdown-end">
                    <summary class="btn btn-sm btn-outline gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                        </svg>
                        Filters
                    </summary>
                    <div class="dropdown-content z-[1] menu p-4 shadow-lg bg-base-200 rounded-box w-80 mt-2">
                        <form hx-get="/events/" hx-target="#events-content" hx-swap="innerHTML" hx-trigger="change">
                            {% if calendars %}
                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text font-semibold">Calendar</span>
                                </label>
                                <select name="calendar" class="select select-sm select-bordered w-full">
                                    <option value="">All Calendars</option>
                                    {% for calendar in calendars %}
                                    <option value="{{ calendar.slug }}">{{ calendar.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            {% endif %}

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text font-semibold">Date Range</span>
                                </label>
                                <div class="grid grid-cols-2 gap-2">
                                    <input type="date" name="start_date" class="input input-sm input-bordered" placeholder="Start date">
                                    <input type="date" name="end_date" class="input input-sm input-bordered" placeholder="End date">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-sm btn-primary w-full">Apply Filters</button>
                        </form>
                    </div>
                </details>
            </div>
        </div>

        <div id="events-content">
            {% if upcoming_events %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for event in upcoming_events %}
                <article class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
                    <div class="card-body">
                        {% if event.categories %}
                        <div class="flex flex-wrap gap-2 mb-2">
                            {% for category in event.categories %}
                            <span class="badge badge-ghost badge-sm">{{ category.name }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}

                        <h3 class="card-title text-lg">
                            <a href="/events/{{ event.slug }}/" class="python-link">
                                {{ event.title }}
                            </a>
                        </h3>

                        {% if event.occurrences and event.occurrences|length > 0 %}
                        <div class="flex items-center gap-2 text-sm text-base-content/70">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <time datetime="{{ event.occurrences[0].dt_start.isoformat() }}">
                                {{ event.occurrences[0].dt_start.strftime('%B %d, %Y') }}
                            </time>
                        </div>
                        {% endif %}

                        {% if event.venue %}
                        <div class="flex items-center gap-2 text-sm text-base-content/70">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span>{{ event.venue.name }}</span>
                        </div>
                        {% endif %}

                        {% if event.description %}
                        <p class="text-base-content/80 line-clamp-2 mt-2">
                            {{ event.description[:120] }}{% if event.description|length > 120 %}...{% endif %}
                        </p>
                        {% endif %}
                    </div>
                </article>
                {% endfor %}
            </div>
            {% else %}
            <div class="alert alert-info">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>No upcoming events at this time. Check back soon!</span>
            </div>
            {% endif %}
        </div>
    </div>
</section>

<section class="bg-base-200 py-16">
    <div class="section-container">
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-python-blue mb-4">Host a Python Event</h2>
            <p class="text-lg text-base-content/80 mb-8">
                Are you organizing a Python conference, meetup, or workshop? Share it with the global Python community!
            </p>
            <a href="/events/submit/" class="btn btn-primary btn-lg gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Submit Your Event
            </a>
        </div>
    </div>
</section>
{% endblock %}
