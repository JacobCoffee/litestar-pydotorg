<div class="prose max-w-none">
    <div class="not-prose mb-6">
        <h2 class="text-3xl font-bold text-python-blue mb-3">
            {{ job.job_title or "Job Title" }}
        </h2>

        <div class="flex flex-wrap items-center gap-4 text-base-content/70 mb-3">
            {% if job.company_name %}
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <strong>{{ job.company_name }}</strong>
            </span>
            {% endif %}

            {% if job.city or job.region or job.country %}
            <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {% if job.city %}{{ job.city }}{% if job.region or job.country %}, {% endif %}{% endif %}
                {% if job.region %}{{ job.region }}{% if job.country %}, {% endif %}{% endif %}
                {% if job.country %}{{ job.country }}{% endif %}
            </span>
            {% endif %}
        </div>

        <div class="flex flex-wrap gap-2">
            {% if job.telecommuting %}
            <span class="badge badge-success gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Remote Work Available
            </span>
            {% endif %}
        </div>
    </div>

    <div class="divider my-6"></div>

    {% if job.description %}
    <div class="mb-6">
        <h3 class="text-xl font-bold text-python-blue mb-3">Job Description</h3>
        <div class="text-base-content/90 leading-relaxed whitespace-pre-wrap">
            {{ job.description }}
        </div>
    </div>
    {% endif %}

    {% if job.requirements %}
    <div class="mb-6">
        <h3 class="text-xl font-bold text-python-blue mb-3">Requirements</h3>
        <div class="text-base-content/90 leading-relaxed whitespace-pre-wrap">
            {{ job.requirements }}
        </div>
    </div>
    {% endif %}

    {% if job.contact %}
    <div class="divider my-6"></div>

    <div class="mb-6">
        <h3 class="text-xl font-bold text-python-blue mb-3">How to Apply</h3>
        <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div class="text-base-content/90 leading-relaxed whitespace-pre-wrap">
                {{ job.contact }}
            </div>
        </div>
    </div>
    {% endif %}

    {% if job.contact_name or job.contact_email or job.company_url %}
    <div class="card bg-base-100 shadow-sm mb-6">
        <div class="card-body">
            <h4 class="font-semibold mb-2">Contact Information</h4>
            <div class="space-y-2 text-sm">
                {% if job.contact_name %}
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <span>{{ job.contact_name }}</span>
                </div>
                {% endif %}
                {% if job.contact_email %}
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span class="python-link">{{ job.contact_email }}</span>
                </div>
                {% endif %}
                {% if job.company_url %}
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                    <span class="python-link">{{ job.company_url }}</span>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
