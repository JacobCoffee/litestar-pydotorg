{% extends "base.html.jinja2" %}
{% from "macros/forms.html.jinja2" import search_field, checkbox_field, select_field %}

{% block title %}Python Job Board{% endblock %}

{% block content %}
<section class="python-gradient text-white py-16">
    <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6">Python Job Board</h1>
            <p class="text-xl opacity-90">
                Find your next Python opportunity or hire talented Python developers
            </p>
            <div class="mt-8">
                <a href="/jobs/submit" class="btn btn-primary btn-lg gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Post a Job
                </a>
            </div>
        </div>
    </div>
</section>

<section class="bg-base-100 py-16">
    <div class="section-container">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <aside class="lg:col-span-1">
                <div class="card bg-base-200 shadow-sm sticky top-4">
                    <div class="card-body">
                        <h2 class="card-title text-lg mb-4">Filter Jobs</h2>

                        <form id="job-filters"
                              hx-get="/jobs"
                              hx-target="#job-results"
                              hx-trigger="change, submit"
                              hx-swap="innerHTML"
                              hx-indicator="#search-indicator">

                            <div class="space-y-4">
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Search</span>
                                    </label>
                                    <input
                                        type="search"
                                        name="q"
                                        placeholder="Job title, company..."
                                        value="{{ request.query_params.get('q', '') }}"
                                        class="input input-bordered input-sm w-full"
                                        hx-get="/jobs"
                                        hx-target="#job-results"
                                        hx-trigger="input changed delay:300ms"
                                        hx-swap="innerHTML"
                                    />
                                </div>

                                <div class="divider my-2"></div>

                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Job Type</span>
                                    </label>
                                    {% if job_types %}
                                        {% for job_type in job_types %}
                                        <label class="label cursor-pointer justify-start gap-2 py-1">
                                            <input
                                                type="checkbox"
                                                name="job_type"
                                                value="{{ job_type.slug }}"
                                                class="checkbox checkbox-sm checkbox-primary"
                                                {% if job_type.slug in request.query_params.getlist('job_type') %}checked{% endif %}
                                            />
                                            <span class="label-text">{{ job_type.name }}</span>
                                        </label>
                                        {% endfor %}
                                    {% endif %}
                                </div>

                                <div class="divider my-2"></div>

                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Category</span>
                                    </label>
                                    {% if job_categories %}
                                        {% for category in job_categories %}
                                        <label class="label cursor-pointer justify-start gap-2 py-1">
                                            <input
                                                type="checkbox"
                                                name="category"
                                                value="{{ category.slug }}"
                                                class="checkbox checkbox-sm checkbox-primary"
                                                {% if category.slug in request.query_params.getlist('category') %}checked{% endif %}
                                            />
                                            <span class="label-text">{{ category.name }}</span>
                                        </label>
                                        {% endfor %}
                                    {% endif %}
                                </div>

                                <div class="divider my-2"></div>

                                <label class="label cursor-pointer justify-start gap-3">
                                    <input
                                        type="checkbox"
                                        name="remote"
                                        value="true"
                                        class="checkbox checkbox-primary"
                                        {% if request.query_params.get('remote') == 'true' %}checked{% endif %}
                                    />
                                    <span class="label-text font-semibold">Remote Only</span>
                                </label>

                                <div class="divider my-2"></div>

                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">Location</span>
                                    </label>
                                    <input
                                        type="text"
                                        name="location"
                                        placeholder="City, Country..."
                                        value="{{ request.query_params.get('location', '') }}"
                                        class="input input-bordered input-sm w-full"
                                    />
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm btn-block mt-4">
                                    Apply Filters
                                </button>

                                <a href="/jobs" class="btn btn-ghost btn-sm btn-block">
                                    Clear All
                                </a>
                            </div>
                        </form>

                        <div id="search-indicator" class="htmx-indicator mt-4">
                            <div class="flex items-center justify-center gap-2">
                                <span class="loading loading-spinner loading-sm"></span>
                                <span class="text-sm">Searching...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <main class="lg:col-span-3">
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-2xl font-bold text-python-blue">
                            {% if jobs %}
                                {{ pagination.total if pagination else jobs|length }} Jobs Available
                            {% else %}
                                No Jobs Found
                            {% endif %}
                        </h2>
                        {% if request.query_params.get('q') %}
                        <p class="text-sm text-base-content/60 mt-1">
                            Search results for "{{ request.query_params.get('q') }}"
                        </p>
                        {% endif %}
                    </div>
                </div>

                <div id="job-results">
                    {% if jobs %}
                    <div class="space-y-4">
                        {% for job in jobs %}
                        <article class="card bg-base-200 shadow-sm hover:shadow-md transition-all duration-200 hover:border-python-blue border border-transparent">
                            <div class="card-body">
                                <div class="flex items-start justify-between gap-4">
                                    <div class="flex-1">
                                        <h3 class="card-title text-xl mb-2">
                                            <a href="/jobs/{{ job.slug }}" class="python-link hover:text-python-yellow transition-colors">
                                                {{ job.job_title }}
                                            </a>
                                        </h3>

                                        <div class="flex flex-wrap items-center gap-3 text-sm text-base-content/70 mb-3">
                                            {% if job.company_name %}
                                            <span class="flex items-center gap-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                                </svg>
                                                {{ job.company_name }}
                                            </span>
                                            {% endif %}

                                            {% if job.city or job.region or job.country %}
                                            <span class="flex items-center gap-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                                </svg>
                                                {% if job.city %}{{ job.city }}{% if job.region or job.country %}, {% endif %}{% endif %}
                                                {% if job.region %}{{ job.region }}{% if job.country %}, {% endif %}{% endif %}
                                                {% if job.country %}{{ job.country }}{% endif %}
                                            </span>
                                            {% endif %}

                                            {% if job.created %}
                                            <span class="flex items-center gap-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                                Posted {{ job.created.strftime('%B %d, %Y') }}
                                            </span>
                                            {% endif %}
                                        </div>

                                        <div class="flex flex-wrap gap-2 mb-3">
                                            {% if job.telecommuting %}
                                            <span class="badge badge-success gap-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                Remote
                                            </span>
                                            {% endif %}

                                            {% if job.job_types %}
                                                {% for job_type in job.job_types %}
                                                <span class="badge badge-outline">{{ job_type.name }}</span>
                                                {% endfor %}
                                            {% endif %}
                                        </div>

                                        {% if job.description %}
                                        <p class="text-base-content/80 line-clamp-2">
                                            {{ job.description[:200] }}{% if job.description|length > 200 %}...{% endif %}
                                        </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </article>
                        {% endfor %}
                    </div>

                    {% if pagination and pagination.total > pagination.limit %}
                    <div class="flex justify-center mt-8">
                        <div class="join">
                            {% if pagination.offset > 0 %}
                            <button
                                class="join-item btn btn-sm"
                                hx-get="/jobs?limit={{ pagination.limit }}&offset={{ [0, pagination.offset - pagination.limit]|max }}"
                                hx-target="#job-results"
                                hx-swap="outerHTML"
                            >
                                Previous
                            </button>
                            {% endif %}

                            {% set current_page = (pagination.offset // pagination.limit) + 1 %}
                            {% set total_pages = (pagination.total // pagination.limit) + (1 if pagination.total % pagination.limit else 0) %}

                            <button class="join-item btn btn-sm btn-active">
                                Page {{ current_page }} of {{ total_pages }}
                            </button>

                            {% if pagination.offset + pagination.limit < pagination.total %}
                            <button
                                class="join-item btn btn-sm"
                                hx-get="/jobs?limit={{ pagination.limit }}&offset={{ pagination.offset + pagination.limit }}"
                                hx-target="#job-results"
                                hx-swap="outerHTML"
                            >
                                Next
                            </button>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                    {% else %}
                    <div class="card bg-base-200 shadow-sm">
                        <div class="card-body text-center py-12">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            <h3 class="text-xl font-bold mb-2">No Jobs Found</h3>
                            <p class="text-base-content/60 mb-4">
                                Try adjusting your filters or search terms
                            </p>
                            <a href="/jobs" class="btn btn-primary btn-sm">
                                Clear Filters
                            </a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </main>
        </div>
    </div>
</section>
{% endblock %}
