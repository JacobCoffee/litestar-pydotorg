# Environment Configuration
# Set to: dev, staging, or prod
APP_ENV=dev

# Litestar CLI Configuration
# Enables `uv run litestar` commands without --app flag
LITESTAR_APP=pydotorg.main:app

# Application Settings
# DEBUG can be set explicitly or will auto-configure based on APP_ENV
# dev: debug=true, staging/prod: debug=false
DEBUG=true
SECRET_KEY=change-me-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pydotorg
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Session
SESSION_SECRET_KEY=change-me-in-production-session
SESSION_EXPIRE_MINUTES=10080
SESSION_COOKIE_NAME=session_id

# CSRF Protection
CSRF_SECRET=change-me-csrf-secret
CSRF_COOKIE_NAME=csrftoken
CSRF_HEADER_NAME=x-csrftoken

# OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_BASE_URL=http://localhost:8000

# SMTP Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@python.org
SMTP_FROM_NAME=Python.org
SMTP_USE_TLS=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Fastly CDN (optional)
FASTLY_API_KEY=

# Python Blog Feed
PYTHON_BLOG_FEED_URL=https://blog.python.org/feeds/posts/default?alt=rss
PYTHON_BLOG_URL=https://blog.python.org
