{
  "name": "litestar-pydotorg",
  "version": "0.1.0",
  "description": "Python.org rebuilt with Litestar - Frontend assets",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "css": "tailwindcss -i ./resources/css/input.css -o ./static/css/tailwind.css --minify",
    "css:watch": "tailwindcss -i ./resources/css/input.css -o ./static/css/tailwind.css --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "vite": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "daisyui": "^4.12.0",
    "htmx.org": "^2.0.0",
    "alpinejs": "^3.14.0"
  }
}
