{
  "name": "litestar-pydotorg",
  "version": "0.1.0",
  "description": "Python.org rebuilt with Litestar - Frontend assets",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "css": "tailwindcss -i ./resources/css/input.css -o ./static/css/tailwind.css --minify",
    "css:watch": "tailwindcss -i ./resources/css/input.css -o ./static/css/tailwind.css --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "vite": "^7.2.6",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "alpinejs": "^3.14.0",
    "daisyui": "^5.5.5",
    "flatpickr": "^4.6.13",
    "htmx.org": "^2.0.0",
    "jquery": "^3.7.1",
    "lucide": "^0.555.0",
    "select2": "^4.1.0-rc.0"
  }
}
